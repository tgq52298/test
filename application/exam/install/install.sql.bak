INSERT INTO `qb_exam_content2` (`id`, `mid`, `fid`, `title`, `ispic`, `picurl`, `uid`, `view`, `status`, `replynum`, `comment`, `content`, `create_time`, `update_time`, `ip`, `list`, `answer_a`, `answer_b`, `answer_c`, `answer_d`, `answer`, `ext_sys`, `ext_id`, `grade`, `kemu`, `step`) VALUES
(1545, 2, 3, '林某驾车以110公里/小时的速度在城市道路行驶，与一辆机动车追尾后弃车逃离被群众拦下。经鉴定，事发时林某血液中的酒精浓度为135.8毫克/百毫升。林某的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为一：以110公里/小时的速度在城市道路行驶违法行为；二：与一辆机动车追尾后弃车逃离违法行为；三：林某血液中的酒精浓度为135.8毫克/百毫升。', 0, 0, '', 0, '醉酒驾驶', '超速驾驶', '疲劳驾驶', '肇事逃逸', '1,2,4', 0, 0, '', '', ''),
(1546, 2, 3, '周某夜间驾驶大货车在没有路灯的城市道路上以90公里/小时的速度行驶，一直开启远光灯，在通过一窄路时，因加速抢道，导致对面驶来的一辆小客车撞上右侧护栏。周某的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '第一，&ldquo;城市道路上以90公里/小时的速度行驶&rdquo;属于超速行驶；第二，在夜间行驶开启远光灯属于不按规定使用灯光；第三，而加速抢道属于不按规定会车。', 0, 0, '', 0, '超速行驶', '不按规定会车', '疲劳驾驶', '不按规定使用灯光', '1,2,4', 0, 0, '', '', ''),
(1548, 2, 3, '这个小型客车驾车人有哪些违法行为？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ftfpv90hj20bl06yab9.jpg', 1, 0, 1, 0, 0, '从通话中得知&ldquo;刚喝完酒&rdquo;和&ldquo;没驾驶本&rdquo;，从图片中可知&ldquo;没系安全带&rdquo;和&ldquo;打电话&rdquo;，均属于违法行为。', 0, 0, '', 0, '接打手持电话', '无证驾驶', '酒后驾驶', '未系安全带', '1,2,3,4', 0, 0, '', '', ''),
(1549, 2, 3, '行车中驾驶人接打手机或发短信有什么危害？', 0, '', 1, 0, 1, 0, 0, '接打手机或者发短信时不能双手握住方向盘，会影响正常驾驶操作，此时也要分心与对方交流，会分散注意力，此时发生紧急状况，肯定会反应不及。', 0, 0, '', 0, '影响乘车人休息', '分散驾驶注意力', '影响正常驾驶操作', '遇紧急情况反应不及', '2,3,4', 0, 0, '', '', ''),
(1550, 2, 3, '下列做法哪些可以有效避免驾驶疲劳？', 0, '', 1, 0, 1, 0, 0, '可以有效避免驾驶疲劳的方法有：&ldquo;连续驾驶不超过4小时&rdquo;，&ldquo;用餐不宜过饱&rdquo;，&ldquo;保持良好的睡眠&rdquo;，&ldquo;餐后适当休息后驾车&rdquo;。', 0, 0, '', 0, '连续驾驶不超过4小时', '用餐不宜过饱', '保持良好的睡眠', '餐后适当休息后驾车', '1,2,3,4', 0, 0, '', '', ''),
(1551, 2, 3, '驾驶汽车超速行驶有哪些危害？', 0, '', 1, 0, 1, 0, 0, '驾驶汽车超速行驶使得反应距离延长；同时过快的车速使得两边的事物会比较模糊，视野变窄；太快的车速，由于惯性作用，就会加重事故后果以及制动距离延长等危害。', 0, 0, '', 0, '反应距离延长', '视野变窄', '加重事故后果', '制动距离延长', '1,2,3,4', 0, 0, '', '', ''),
(1561, 2, 3, '叶某驾驶中型厢式货车，行至陂头镇上汶线3公里加600米弯道路段时，以40公里/小时的速度与王某驾驶的乘载19人正三轮载货摩托车发生正面相撞，造成10人死亡、9人受伤。双方驾驶人的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '弯道限速30公里/小时，以40公里/小时的速度行驶是超速。载货摩托车载客是非法载客。', 0, 0, '', 0, '叶某驾驶与准驾车型不符的机动车', '王某驾驶摩托车非法载客', '叶某超速行驶', '王某不按信号灯指示行驶', '2,3', 0, 0, '', '', ''),
(1562, 2, 3, '某日19时，杨某驾驶大客车，乘载57人（核载55人），连续行驶至次日凌晨1时,在金城江区境内050国道3008公里加110米处，因机动车左前胎爆裂，造成12人死亡、22人受伤的特大交通事故。杨某的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为：1、题目提到连续行驶到次日凌晨1时，属疲劳驾驶。2、题目提到只能做55以上，却坐了57人，属客车超员。', 0, 0, '', 0, '疲劳驾驶', '客车超员', '超速行驶', '操作不当', '1,2', 0, 0, '', '', ''),
(1563, 2, 3, '唐某驾驶一辆大客车，乘载74人（核载30人），以每小时38公里的速度，行至一连续下陡坡转弯路段时，机动车翻入路侧溪水内，造成17人死亡、57人受伤。唐某的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为：1、乘载74人(核载30人)所以客车超员。2、弯道限速30公里/每小时，所以超速行驶。', 0, 0, '', 0, '酒后驾驶', '客车超员', '疲劳驾驶', '超速行驶', '2,4', 0, 0, '', '', ''),
(1564, 2, 3, '李某驾驶一辆大客车，乘载21人（核载35人），行驶途中察觉制动装置有异常但未处理，行至双岛海湾大桥时时速为50公里（该路段限速40公里），因制动失灵坠入海中，造成13人死亡、8人受伤。李某的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为：1、察觉制动装置有异常但未处理，所以为驾驶故障机动车。2、行至双岛海湾大桥时时速为50公里(该路段限速40公里)所以为超速行驶。此题注意核载35人就是规定可以做35个人，实际乘坐21人所以没有客车超员。', 0, 0, '', 0, '超速行驶', '疲劳驾驶', '客车超员', '驾驶具有安全隐患的机动车', '1,4', 0, 0, '', '', ''),
(1565, 2, 3, '吴某驾驶一辆大客车，乘载33人（核载22人），行至163县道7公里加300米处时，机动车失控坠入山沟，造成10人死亡、21人受伤。事后经酒精检测，吴某血液酒精含量为26毫克/百毫升。吴某的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为：1、乘载33人(核载22人)，所以客车超员；2、吴某血液酒精含量为26毫克/百毫升，所以酒后驾驶。（此处既然检测到酒精就算酒后驾驶，不然人的血液里边哪里会有酒精）', 0, 0, '', 0, '超速行驶', '客车超员', '疲劳驾驶', '酒后驾驶', '2,4', 0, 0, '', '', ''),
(1566, 2, 3, '钱某驾驶大型卧铺客车，乘载45人（核载40人），保持40公里/小时以上的车速行至八宿县境内连续下坡急转弯路段处，翻下100米深的山崖，造成17人死亡、20人受伤。钱某的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为：1、弯道限速30公里/每小时，故超速行驶。2、乘载45人(核载40人)，故客车超员。', 0, 0, '', 0, '驾驶时接听手持电话', '超速行驶', '客车超员', '疲劳驾驶', '2,3', 0, 0, '', '', ''),
(1567, 2, 3, '某日3时40分，孙某驾驶大客车（乘载54人、核载55人）行至随岳高速公路229公里加300米处，在停车下客过程中，被后方驶来李某驾驶的重型半挂机动车追尾，造成26人死亡，29人受伤。事后查明，李某从昨日18时许出发，途中一直未休息。双方驾驶人的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为：1、高速公路上不允许停车下客。2、李某从昨日18时许出发，途中一直未休息。故属于疲劳驾驶。', 0, 0, '', 0, '孙某违法停车', '孙某客车超员', '李某超速', '李某疲劳驾驶', '1,4', 0, 0, '', '', ''),
(1568, 2, 3, '陶某驾驶中型客车（乘载33人），行至许平南高速公路163公里处时，以120公里/小时的速度与停在最内侧车道上安某驾驶的因事故无法移动的小客车（未设置警示标志）相撞，中型客车撞开右侧护栏侧翻，造成16死亡、15人受伤。双方驾驶人的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为：1、中型客车最多载19人，所以超载；2、时速＞＝120就是超速；3、未设置警示标志。', 0, 0, '', 0, '陶某客车超员', '陶某超速行驶', '安某未按规定设置警示（告）标志', '安某违法停车', '1,2,3', 0, 0, '', '', ''),
(1569, 2, 3, '邹某驾驶大型卧铺客车（核载35人，实载47人），行至京港澳高速公路938公里时，因乘车人携带的大量危险化学品在车厢内突然发生爆燃，造成41人死亡，6人受伤。此事故中的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为：1、核载35人，实载47人为超载；2、乘车人携带的大量危险化学品。', 0, 0, '', 0, '客车超员', '乘车人携带易燃易爆危险物品', '超速行驶', '不按规定停车', '1,2', 0, 0, '', '', ''),
(1570, 2, 3, '杨某驾驶改装小型客车（核载9人，实载64人，其中62人为幼儿园学生），行至榆林子镇马槽沟村处，占用对向车道逆行时与一辆重型自卸货车正面碰撞，造成22人死亡、44人受伤。该起事故中的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为：1、改装小型客车，所以非法改装机动车；2、核载9人，实载64人，所以客车超员；3、占用对向车道逆行时，所以客车逆向行驶。', 0, 0, '', 0, '货车超速行驶', '非法改装机动车', '客车超员', '客车逆向行驶', '2,3,4', 0, 0, '', '', ''),
(1571, 2, 3, '戚某驾驶大客车，乘载28人（核载55人），由南向北行至一无交通信号控制的交叉路口，以50公里的时速与由东向西行至该路口李某驾驶的重型半挂牵引车（核载40吨，实载55.2吨）侧面相撞，造成12人死亡、17人受伤。此事故中的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为：1、交叉路口以50km/h,属于超速；2、核载40吨，实载55.2吨，属于超载。', 0, 0, '', 0, '客车超员', '客车超速行驶', '货车超载', '货车驾驶人经验不足', '2,3', 0, 0, '', '', ''),
(1572, 2, 3, '彭某驾驶一辆重型半挂牵引车，载运37.7吨货物（核载25吨），行至大广高速公路一下坡路段，追尾碰撞一辆由李某驾驶在应急车道内行驶的重型自卸货车（货箱内装载3.17立方黄土并搭乘24人），造成16人死亡、13人受伤。此事故中的主要违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为：1、载运37.7吨货物（核载25吨），说明超载；2、李某驾驶在应急车道内行驶，说明李某违法在应急车道行驶，应急车道只能应急使用；3、货箱内装载3.17立方黄土并搭乘24人，货车不能拉人。', 0, 0, '', 0, '彭某超速行驶', '彭某驾驶机动车超载', '李某在应急车道内行驶', '李某货车车厢内违法载人', '2,3,4', 0, 0, '', '', ''),
(1573, 2, 3, '石某驾驶低速载货机动车，运载4.05吨货物（核载1.2吨），行驶至宁津县境内314省道51公里加260米处，在越过道路中心线超越前方同向行驶的机动车时，与对向正常行驶的中型客车（乘载12人，核载11人）正面相撞，造成10人死亡、2人受伤。此事故中的违法行为是什么？', 0, '', 1, 0, 1, 0, 0, '违法行为：1、货车运载4.05吨货物（核载1.2吨），超载；2、在越过道路中心线超越前方同向行驶的机动车时，与对向正常行驶的中型客车正面相撞，违法；3、中型客车（乘载12人，核载11人），超载。', 0, 0, '', 0, '货车超载', '货车违法超车', '客车超员', '客车驾驶人疲劳驾驶', '1,2,3', 0, 0, '', '', ''),
(1595, 2, 3, '车辆发生碰撞时，关于安全带作用的说法错误的是什么？', 0, '', 1, 0, 1, 0, 0, '安全带最重要的作用就是保护驾驶人的生命安全。请注意题目，选择错误项。', 0, 0, '', 0, '保护颈部不受伤害', '减轻驾乘人员受伤程度', '减轻驾驶人疲劳', '保持正确驾驶姿势', '1,3,4', 0, 0, '', '', ''),
(1596, 2, 3, '驾驶汽车不系安全带在遇紧急制动或发生碰撞时可能会发生哪些危险？', 0, '', 1, 0, 1, 0, 0, '不系安全带与紧急制动或发生碰撞时由于惯性可能会发生&ldquo;撞击风窗玻璃&rdquo;，&ldquo;被甩出车外&rdquo;，&ldquo;造成胸部损伤&rdquo;的危险。', 0, 0, '', 0, '撞击风窗玻璃', '减少人员伤亡', '被甩出车外', '造成胸部损伤', '1,3,4', 0, 0, '', '', ''),
(1608, 2, 3, '驾驶汽车从支线道路怎样安全汇入主干道车流？', 0, '', 1, 0, 1, 0, 0, '看到加速、迅速的字样都要谨慎。驾驶汽车从支线道路应该“提前开启左转向灯”，“仔细观察主干道内情况”，“确认安全后汇入车流”。', 0, 0, '', 0, '提前开启左转向灯', '仔细观察主干道内情况', '确认安全后汇入车流', '加速直接汇入车流', '1,2,3', 0, 0, '', '', ''),
(1609, 2, 3, '这种情况下怎样安全驾驶？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ftdxkhd0j20ha06yacl.jpg', 1, 0, 1, 0, 0, '图中粉红色汽车已经转过来，因此提前减速行驶，观察交汇处车辆，谨慎驾驶通过。', 0, 0, '', 0, '提前减速行驶', '观察交汇处车辆', '提前加速通过', '谨慎驾驶通过', '1,2,4', 0, 0, '', '', ''),
(1621, 2, 3, '在这种情况下怎样安全会车？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4fte4674rj20hc06yq5c.jpg', 1, 0, 1, 0, 0, '根据规定，有障碍的一方让无障碍的一方先行，而且无障碍的一方已经接近障碍了，不能让他倒车让行。因此本题选择“停车让对方先行”“提前减速让行”。', 0, 0, '', 0, '加速绕过障碍物', '向左占道行驶', '停车让对方先行', '提前减速让行', '3,4', 0, 0, '', '', ''),
(1622, 2, 3, '在这种情况下怎样安全会车？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4fte6h7hrj20hb06y0ux.jpg', 1, 0, 1, 0, 0, '由图可知，前边有自行车为了安全一定要慢，而不能加速缩短会车时间，所以本题选择“减速靠右行驶”“保持安全间距”“注意避让非机动车”。', 0, 0, '', 0, '加速缩短会车时间', '减速靠右行驶', '保持安全间距', '注意避让非机动车', '2,3,4', 0, 0, '', '', ''),
(1623, 2, 3, '在这种没有中心线的弯道上怎样安全会车？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ftea38nhj20hc06yq4s.jpg', 1, 0, 1, 0, 0, '当遇到如图所示情况，第一反应就是向右侧靠，保持适当距离，再减速。如果紧靠道路中心容易与对面来车发生相撞。所以本题选择“紧靠道路右侧”“保持安全间距”“降低车速行驶”。', 0, 0, '', 0, '紧靠道路中心', '紧靠道路右侧', '保持安全间距', '降低车速行驶', '2,3,4', 0, 0, '', '', ''),
(1624, 2, 3, '驾驶汽车遇雨、雪、雾等视线不清或路面较滑时怎样安全会车？', 0, '', 1, 0, 1, 0, 0, '可利用排除法将“应当加速行驶”排除，其余选项均正确，请牢记。', 0, 0, '', 0, '降低车速行驶', '加大横向间距', '应当加速行驶', '必要时停车避让', '1,2,4', 0, 0, '', '', ''),
(1655, 2, 3, '驾驶汽车行车中怎样选择超车路段？', 0, '', 1, 0, 1, 0, 0, '驾驶汽车行车中，选择在【视线良好】【对面无来车】【路面无障碍物】【道路宽直】的路段超车，保障安全行驶。', 0, 0, '', 0, '视线良好', '对面无来车', '路面无障碍物', '道路宽直', '1,2,3,4', 0, 0, '', '', ''),
(1667, 2, 3, '驾驶人在下车前应注意是什么？', 0, '', 1, 1, 1, 0, 0, '驾驶人在下车前，首先仔细观察左后方情况，在确定左后方无人经过时开车门，车门开的幅度不要过大，下车要缓慢，避免影响非机动车与机动车。因此本题选“车门开的幅度不要过大”“仔细观察左后方情况”“开车门的动作要缓慢”。', 0, 0, '', 0, '车门开的幅度不要过大', '开门下车动作要迅速', '仔细观察左后方情况', '开车门的动作要缓慢', '1,3,4', 0, 0, '', '', ''),
(1668, 2, 3, '驾驶汽车在道路上临时停车怎样选择停车路段和地点？', 0, '', 1, 0, 1, 0, 0, '驾驶汽车在道路上临时停车应选择“路面平坦坚实”“无禁止停车标志”“不妨碍交通”避免交通事故。', 0, 0, '', 0, '路面平坦坚实', '可以随意停放', '无禁止停车标志', '不妨碍交通', '1,3,4', 0, 0, '', '', ''),
(1694, 2, 3, '在道路上怎样安全跟车行驶？', 0, '', 1, 0, 1, 0, 0, '试题分析：在道路上安全跟车行驶的方法是“注意观察前车动态”“随时做好减速准备”“保持安全距离”避免交通事故。', 0, 0, '', 0, '注意观察前车动态', '随时做好减速准备', '尽量靠路左侧行驶', '保持安全距离', '1,2,4', 0, 0, '', '', ''),
(1697, 2, 3, '驾驶汽车怎样向左安全变更车道？', 0, '', 1, 0, 1, 0, 0, '安全变更车道操作程序：1、变更车道前，应通过内、外后视镜观察与判断，观察车辆后方、侧方和准备变更车道上的交通情况。2、确认安全后，开启转向灯示意，在不妨碍车道内车辆正常行驶的情况下，逐渐（不是迅速）将车辆变更到所需车道，然后关闭转向灯。', 0, 0, '', 0, '观察左侧道路情况', '打开左转向灯', '不得影响正常通行车辆', '迅速向左变道', '1,2,3', 0, 0, '', '', ''),
(1698, 2, 3, '驾驶汽车频繁变更车道有哪些危害？', 0, '', 1, 0, 1, 0, 0, '驾驶汽车频繁变更车道，直接影响其他车辆正常通行，从而扰乱交通秩序，影响正常通行、易引发交通事故，跟爆胎关系不大。因此本体选择“扰乱交通秩序”“影响正常通行”“易引发交通事故”。', 0, 0, '', 0, '扰乱交通秩序', '易导致爆胎', '影响正常通行', '易引发交通事故', '1,3,4', 0, 0, '', '', ''),
(1699, 2, 3, '下列关于驾驶汽车突然变道加塞说法正确的是什么？', 0, '', 1, 1, 1, 0, 0, '加塞不可能提高通行效率和缓解拥堵，经常会造成道路拥堵和引发交通事故的。', 0, 0, '', 0, '缓解交通拥堵', '易引发交通事故', '提高通行效率', '造成道路拥堵', '2,4', 0, 0, '', '', ''),
(1706, 2, 3, '机动车行驶至转弯路段时，易引发事故的驾驶行为有什么？', 0, '', 1, 0, 1, 0, 0, '“机动车占对向道行驶”容易与对向来车发生擦碰，“在弯道内急转转向盘”“在驶入弯道前不减速”容易造成侧滑，严重的话会侧翻。', 0, 0, '', 0, '机动车占对向道行驶', '在弯道内急转转向盘', '在驶入弯道前不减速', '机动车靠路右侧行驶', '1,2,3', 0, 0, '', '', ''),
(1709, 2, 3, '怎样安全通过这种较窄的弯道？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ftemlflpj20hp06ywg8.jpg', 1, 0, 1, 0, 0, '右侧标志是上坡路，所以要挂低档沿右侧行驶。', 0, 0, '', 0, '沿道路右侧行驶', '挂低速档减速通过', '沿道路左侧行驶', '挂高速档加速通过', '1,2', 0, 0, '', '', ''),
(1710, 2, 3, '驾驶汽车在道路急转弯处怎样行驶？', 0, '', 1, 0, 1, 0, 0, '驾驶汽车在道路急转弯处【减速靠路右侧行驶】【不能占用方车道】【注意对面来车】【鸣喇叭示意】，保证安全驾驶。', 0, 0, '', 0, '减速靠路右侧行驶', '不能占用对方车道', '注意对面来车', '鸣喇叭示意', '1,2,3,4', 0, 0, '', '', ''),
(1711, 2, 3, '驾驶汽车在转弯路段易引发事故的驾驶行为有哪些？', 0, '', 1, 0, 1, 0, 0, '注意审题，问的是易引发事故的行为。除了靠右行，其他都是危险的行为。', 0, 0, '', 0, '占道行驶', '急转转向盘', '弯道前不减速', '靠路右侧行驶', '1,2,3', 0, 0, '', '', ''),
(1744, 2, 3, '如图所示，接近人行横道线时怎样安全行驶？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ftevea15j20hc06yq4z.jpg', 1, 0, 1, 0, 0, '试题分析：避让行人，不要跟行人，非机动车抢行。', 0, 0, '', 0, '提前减速观察', '注意避让行人', '随时准备停车', '抢先加速通过', '1,2,3', 0, 0, '', '', ''),
(1745, 2, 3, '驾驶汽车通过人行横道时要注意下列哪些情况？', 0, '', 1, 0, 1, 0, 0, '驾驶汽车通过人行横道时要注意【突然横穿的儿童】【急速通过的自行车】【缓慢通过的行人】【准备横过的行人】避免交通事故。', 0, 0, '', 0, '突然横穿的儿童', '急速通过的自行车', '缓慢通过的行人', '准备横过的行人', '1,2,3,4', 0, 0, '', '', ''),
(1757, 2, 3, '驾驶机动车通过学校时要注意什么？', 0, '', 1, 0, 1, 0, 0, '在有学校的路段一般都会设置提醒有学校或是禁止鸣喇叭的交通标志，因此在经过学校时不仅要观察交通标志，还要记住不得鸣喇叭。另外，由于学校周围会有学生走动，因此在途经时车速一定要慢，避免撞到人或其他。', 0, 0, '', 0, '观察标志标线', '减速慢行', '不要鸣喇叭', '快速通过', '1,2,3', 0, 0, '', '', ''),
(1758, 2, 3, '通过居民小区时需要注意什么？', 0, '', 1, 0, 1, 0, 0, '通过居民小区时需要注意【遵守标志】【低速行驶】【不鸣喇叭】【避让居民】避免交通事故。', 0, 0, '', 0, '遵守标志', '低速行驶', '不鸣喇叭', '避让居民', '1,2,3,4', 0, 0, '', '', ''),
(1765, 2, 3, '驾驶汽车驶近停有公交车的车站需要注意什么？', 0, '', 1, 1, 1, 0, 0, '驾驶汽车驶近停有公交车的车站需要注意【做好随时停车的准备】【预防公交车突然起步】【预防行人从车前穿出】【与公交车保持安全间距】，避免交通事故。', 0, 0, '', 0, '做好随时停车的准备', '预防公交车突然起步', '预防行人从车前穿出', '与公交车保持安全间距', '1,2,3,4', 0, 0, '', '', ''),
(1989, 2, 3, '夜间会车时，对面来车不关闭远光灯怎么办？', 0, '', 1, 0, 1, 0, 0, '试题分析：可交替使用远近光灯，同时减速靠右侧行驶或停车，或者视线向右平移，防止眩目。交替变换远近光灯为了提醒对向来车要关闭远光灯，如果对方不理，出于安全只能靠右侧慢行或停车。因此本题选择&ldquo;及时减速让行，必要时靠边停车&rdquo;&ldquo;视线向右平移，防止眩目&rdquo;&ldquo;交替变换远近光灯，提醒来车&rdquo;。', 0, 0, '', 0, '及时减速让行，必要时靠边停车', '开启远光灯，迫使来车变换灯光', '视线向右平移，防止眩目', '交替变换远近光灯，提醒来车', '1,3,4', 0, 0, '', '', ''),
(1992, 2, 3, '雨天遇到这些撑雨伞和穿雨衣的行人在路边行走怎样通行？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ftfkpg62j20ha06ygno.jpg', 1, 0, 1, 0, 0, '雨天遇到这些撑雨伞和穿雨衣的行人在路边行走应该“注意观察行人动态”“适当降低车速”“保持安全距离”“提前轻按喇叭提醒”避免交通事故。', 0, 0, '', 0, '注意观察行人动态', '适当降低车速', '保持安全距离', '提前轻按喇叭提醒', '1,2,3,4', 0, 0, '', '', ''),
(2015, 2, 3, '遇到这种同向行驶的非机动车时怎样行驶？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ftfmirbmj20ha06y0uf.jpg', 1, 0, 1, 0, 0, '试题分析：遇到这种同向行驶的非机动车时应该“注意观察动态”，“适当减速慢行”，“保持安全间距”，避免交通事故。', 0, 0, '', 0, '注意观察动态', '适当减速慢行', '保持安全间距', '鸣喇叭加速超越', '1,2,3', 0, 0, '', '', ''),
(2019, 2, 3, '驾驶机动车遇到校车在道路右侧停车上下学生时，应注意什么？', 0, '', 1, 0, 1, 0, 0, '校车在道路上停车上下学生，应当靠道路右侧停靠，开启危险报警闪光灯，打开停车指示标志。校车在同方向只有一条机动车道的道路上停靠时，后方车辆应当停车等待，不得超越。校车在同方向有两条以上机动车道的道路上停靠时，校车停靠车道后方和相邻机动车道上的机动车应当停车等待，其他机动车道上的机动车应当减速通过。校车后方停车等待的机动车不得鸣喇叭或者使用灯光催促校车。', 0, 0, '', 0, '同向只有一条机动车道，后方机动车应当停车等待', '同向有两条机动车道，左侧车道后方机动车可以减速通过', '同向有三条机动车道，中间车道后方机动车应当停车等待', '同向有三条机动车道，左侧车道后方机动车可以减速通过', '1,3,4', 0, 0, '', '', ''),
(2022, 2, 3, '行车中不应该有以下哪些行为？', 0, '', 1, 0, 1, 0, 0, '试题分析：行车中不应该有的行为是&ldquo;变更车道不开启转向灯&rdquo;、&ldquo;左臂长时间搭在车门窗上&rdquo;、&ldquo;长时间抓变速杆&rdquo;，容易发生交通事故。', 0, 0, '', 0, '经常观察后视镜', '变更车道不开启转向灯', '左臂长时间搭在车门窗上', '长时间抓变速杆', '2,3,4', 0, 0, '', '', ''),
(2048, 2, 3, '机动车通过隧道时，禁止以下哪些行为？', 0, '', 1, 0, 1, 0, 0, '根据相关规定，在隧道内不能倒车、掉头、停车或是超车。', 0, 0, '', 0, '超车', '停车', '掉头', '倒车', '1,2,3,4', 0, 0, '', '', ''),
(2054, 2, 3, '驾驶汽车进入双向通行的隧道时应注意什么？', 0, '', 1, 0, 1, 0, 0, '隧道内禁止开远光，影响他人开车视线，其他选项都正确。', 0, 0, '', 0, '开启近光灯', '靠右侧行驶', '开启远光灯', '注意对向来车', '1,2,4', 0, 0, '', '', ''),
(2055, 2, 3, '在隧道内通行时哪些行为是不正确的？', 0, '', 1, 0, 1, 0, 0, '隧道开远光影响前车视线，隧道内禁止超车，因此选择“会灯使用远光灯”“在隧道内超车”。', 0, 0, '', 0, '会车使用远光灯', '在隧道内超车', '会车时保持安全间距', '开启近光灯行驶', '1,2', 0, 0, '', '', ''),
(2085, 2, 3, '在山区道路行驶时，驾驶人要注意什么？', 0, '', 1, 0, 1, 0, 0, '四个选项都是在山区道路安全驾驶的注意事项，因此四个选项都对。', 0, 0, '', 0, '保持与前车的安全距离', '避免转弯时占道行驶', '上陡坡提前换低速挡', '下长坡时，充分利用发动机制动', '1,2,3,4', 0, 0, '', '', ''),
(2088, 2, 3, '在这种山区危险路段怎样安全会车？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ftg194eej20hl06yabq.jpg', 1, 0, 1, 0, 0, '试题分析：两车交会，靠山体的车不能动，让靠悬崖的车动，主要因为如果靠山体的车先动，车不小心撞到靠悬崖的车，那么靠悬崖的车很危险；而靠悬崖的车先动，如果撞到靠山体的车，不至于掉入悬崖。因此本题选择“选择安全的地点”“做到先让、先慢、先停”“靠山体的一侧让行”。', 0, 0, '', 0, '选择安全的地点', '做到先让、先慢、先停', '靠山体一侧的让行', '不靠山体一侧的让行', '1,2,3', 0, 0, '', '', ''),
(2090, 2, 3, '驾驶汽车在山区道路转弯下陡坡路段遇对面来车怎样行驶？', 0, '', 1, 0, 1, 0, 0, '下陡坡不能挂空挡，过弯道不能加速。', 0, 0, '', 0, '转弯前减速', '进入弯道后加速', '靠路右侧行驶', '挂空挡滑行', '1,3', 0, 0, '', '', ''),
(2091, 2, 3, '驾驶汽车在山区上陡坡路段怎样行驶？', 0, '', 1, 0, 1, 0, 0, '上陡坡应该挂低档，途中减档应该会熄火。因此选择“提前观察坡道长度”“尽量避免途中减挡”“上坡前减挡保持动力”。', 0, 0, '', 0, '挂高速档加速冲坡', '提前观察坡道长度', '尽量避免途中减挡', '上坡前减挡保持动力', '2,3,4', 0, 0, '', '', ''),
(2092, 2, 3, '驾驶汽车在山区上这种陡坡道转弯时怎样行驶？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ftg2z5p1j20hk06ymys.jpg', 1, 0, 1, 0, 0, '驾驶在山区上这种陡坡转弯时要匀速或者减速，安全第一。因此选择“转弯前减速”“靠右侧行驶”“鸣喇叭提示”，避免交通事故。', 0, 0, '', 0, '转弯前减速', '靠右侧行驶', '鸣喇叭提示', '转弯时加档', '1,2,3', 0, 0, '', '', ''),
(2094, 2, 3, '在这种路面较窄的急弯处行车时要注意什么？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ftg6lwmej20ha06ydhb.jpg', 1, 0, 1, 0, 0, '路面狭窄，不能同时供2辆车通行，为了预防对对向来车需要做好停车让行准备。上述选项都是安全行车需要注意的点。', 0, 0, '', 0, '集中注意力', '降低车速', '注意鸣喇叭', '做好停车准备', '1,2,3,4', 0, 0, '', '', ''),
(2102, 2, 3, '机动车在夜间发生故障时，驾驶人要做什么以确保安全？', 0, '', 1, 0, 1, 0, 0, '《道路交通安全法实施条例》第六十条：机动车在道路上发生故障或者发生交通事故，妨碍交通又难以移动的，应当按照规定开启危险报警闪光灯并在车后50米至100米处设置警告标志，夜间还应当同时开启示廓灯和后位灯。', 0, 0, '', 0, '选择安全区域停车', '开启危险报警闪光灯', '开启示廓灯和后位灯', '按规定设置警告标志', '1,2,3,4', 0, 0, '', '', ''),
(2105, 2, 3, '夜间在这种道路条件怎样跟车行驶？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ftgh9zo7j20i506yjs7.jpg', 1, 0, 1, 0, 0, '谨慎驾驶，避免交通事故。4个选项均为夜间在没有照明的道路行驶需注意的。', 0, 0, '', 0, '注意前车信号灯变化', '使用近光灯', '保持安全距离', '做好减速或停车准备', '1,2,3,4', 0, 0, '', '', ''),
(2107, 2, 3, '夜间驾驶汽车驶近上坡路坡顶怎样行驶？', 0, '', 1, 0, 1, 0, 0, '夜间驾驶汽车驶入上坡路坡顶时，要交替变换远近光灯，这样可以提醒对面坡上的车，因为坡上的车视线看不到你，与此同时还要合理控制速度。', 0, 0, '', 0, '加速冲过坡顶', '开启远光灯', '合理控制车速', '交替变换远近光灯', '3,4', 0, 0, '', '', ''),
(2110, 2, 3, '夜间行车中汽车发生故障需要停车时怎么办？', 0, '', 1, 0, 1, 0, 0, '夜间行车中汽车发生故障需要提车时，尽量选择安全区域停车，开启危险报警闪光灯、示廓灯和后位灯，并在车后方设置警告标志。四个选项均要选择。请记住。', 0, 0, '', 0, '尽量选择安全区域停车', '开启危险报警闪光灯', '开启示廓灯和后位灯', '按规定设置警告标志', '1,2,3,4', 0, 0, '', '', ''),
(2112, 2, 3, '雨天影响安全行车的主要因素有哪些？', 0, '', 1, 0, 1, 0, 0, '雨天路面与轮胎之间会有雨水，雨水就起到了润滑的作用，所以阻力减小，雨天容易打滑。因此本题选择“视线受阻”“路面湿滑”“附着力变小”。', 0, 0, '', 0, '视线受阻', '路面湿滑', '附着力变小', '行驶阻力增大', '1,2,3', 0, 0, '', '', ''),
(2113, 2, 3, '雨天遇到这种行人占道行走时怎样通行？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ftgmuj4zj20ha06yjti.jpg', 1, 0, 1, 0, 0, '因为前方有行人，所以要提前减速行驶。因为行人打伞看不到后面，所以要鸣喇叭。因为雨天路滑，所以不得加速绕行。要注意行人动态，保持安全间距。因此4个选项均正确。', 0, 0, '', 0, '提前减速行驶', '提前鸣喇叭提醒', '不得急加速绕行', '保持安全间距', '1,2,3,4', 0, 0, '', '', ''),
(2121, 2, 3, '雨天安全行车的注意事项是什么？', 0, '', 1, 0, 1, 0, 0, '雨天行车，受视线及路面的影响，要减速慢行，同时要注意行车和非机动车的动态，并与其他车辆保持较大的安全距离，也不能采取紧急制动或是急转方向的方法，因为容易造成侧滑或横滑状况。', 0, 0, '', 0, '避免紧急制动、紧急转向', '保持足够的安全距离', '注意非机动车和行人动态', '选择安全车速行驶', '1,2,3,4', 0, 0, '', '', ''),
(2137, 2, 3, '冰雪路面对行车有那些不利影响？', 0, '', 1, 0, 1, 0, 0, '冰雪路面对行车不利影响有【车辆操控难度增大】【制动距离延长】【易产生车轮滑转】【极易发生侧滑】容易发生交通事故。', 0, 0, '', 0, '车辆操控难度增大', '制动距离延长', '易产生车轮滑转', '极易发生侧滑', '1,2,3,4', 0, 0, '', '', ''),
(2138, 2, 3, '在这种有车辙的冰雪路段怎样行驶？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4fth11236j20ha06yjt5.jpg', 1, 0, 1, 0, 0, '冰雪路面一般易滑，若是采取紧急制动，容易打滑；雪天行驶时，道路通常会被雪所掩盖，因此无法了解路面的实际情况。为了避免不可见的危险，应尽可能沿着车辙行驶。冰雪路面较一般路面易滑，若是急转方向盘，车辆容易侧滑偏出道路。冰雪路面降低车速行驶，注意避让来往车辆。因此4个选项均正确。', 0, 0, '', 0, '避免紧急制动', '循车辙行驶', '避免急转方向', '降低车速行驶', '1,2,3,4', 0, 0, '', '', ''),
(2139, 2, 3, '驾驶汽车在冰雪道路上怎样安全行车？', 0, '', 1, 0, 1, 0, 0, '注意题目中“冰雪路面”，没有下雪或者有雾，所以雾灯不用开，其他三项都是安全行车必要措施。', 0, 0, '', 0, '必要时安装防滑链', '必须降低车速', '开启雾灯行驶', '利用发动机制动', '1,2,4', 0, 0, '', '', ''),
(2150, 2, 3, '雾天机动车在道路上通行，驾驶人要怎样做？', 0, '', 1, 0, 1, 0, 0, '雾天开车，能见度低，视野不良，因此车速要放慢，同时和其他车辆保持安全距离，视野不良时车灯的使用就显得很重要了。', 0, 0, '', 0, '减速慢行', '保持安全车距', '正确使用灯光', '高速行驶', '1,2,3', 0, 0, '', '', ''),
(2162, 2, 3, '在泥泞道路上行车时，采取的正确做法是什么？', 0, '', 1, 1, 1, 0, 0, '四个选项中，只有选项D有可能造成侧滑或车轮空转。', 0, 0, '', 0, '尽量避免使用行车制动器', '选用中低速挡慢速行驶', '稳握转向盘', '加速通过', '1,2,3', 0, 0, '', '', ''),
(2169, 2, 3, '驾驶机动车遇有漫水路时，要采取的正确做法是什么？', 0, '', 1, 0, 1, 0, 0, '《道路交通安全法实施条例》第六十四条：机动车行经漫水路或者漫水桥时，应当停车察明水情，确认安全后，低速通过。', 0, 0, '', 0, '停车察明水情', '确认安全后，低速通过', '机动车涉水后，间断轻踏制动踏板', '机动车涉水后，持续轻踏制动踏板', '1,2,3', 0, 0, '', '', ''),
(2205, 2, 3, '为确保机动车在高速公路行驶的安全，不得有下列哪些行为？', 0, '', 1, 0, 1, 0, 0, '根据《道路交通安全法实施条例》第八十二条：机动车在高速公路上行驶，不得有下列行为：（一）倒车、逆行、穿越中央分隔带掉头或者在车道内停车；（二）在匝道、加速车道或者减速车道上超车；（三）骑、轧车行道分界线或者在路肩上行驶；（四）非紧急情况时在应急车道行驶或者停车；（五）试车或者学习驾驶机动车。因此本题选ABCD。', 0, 0, '', 0, '倒车逆行，穿越中央分隔带掉头，或在车道内停车', '骑轧车行道分界线或者在路肩上行驶', '在匝道、加速车道或者在减速车道上超车', '试车或者学习驾驶机动车', '1,2,3,4', 0, 0, '', '', ''),
(2206, 2, 3, '机动车在高速公路上行驶，遇有雾、雨、雪且能见度在100米至200米之间时，应该怎么做？', 0, '', 1, 0, 1, 0, 0, '根据《道路交通安全法实施条例》第八十一条：机动车在高速公路上行驶，遇有雾、雨、雪、沙尘、冰雹等低能见度气象条件时，应当遵守下列规定：（一）能见度小于200米时，开启雾灯、近光灯、示廓灯和前后位灯，车速不得超过每小时60公里，与同车道前车保持100米以上的距离。', 0, 0, '', 0, '开启雾灯、近光灯、示廓灯、前后位灯', '车速不超过60km/h', '与同车道前车保持100米以上的距离', '从最近的出口尽快驶离高速公路', '1,2,3', 0, 0, '', '', ''),
(2207, 2, 3, '机动车因故障必须在高速公路上停车时，要采取的正确做法是什么', 0, '', 1, 0, 1, 0, 0, '在高速公路上因故障停车，首先要开启危险报警闪光灯，若是夜间的话，还要开启示廓灯和后位灯让其他驾驶员知道车子的轮廓及位置情况。此外，还要在车后150米处设置警示标志。', 0, 0, '', 0, '在车后150米处设置故障警告标志', '在车后100米处设置故障警告标志', '夜间要开启示廓灯和后位灯', '要开启危险报警闪光灯', '1,3,4', 0, 0, '', '', ''),
(2230, 2, 3, '机动车避免爆胎的正确做法是什么？', 0, '', 1, 0, 1, 0, 0, '选项“降低轮胎气压”，错误的原因是因为若是降低轮胎气压过低，还是会造成爆胎。因此降低轮胎气压这一招不安全。因此本题选择其他三项。', 0, 0, '', 0, '降低轮胎气压', '定期检查轮胎', '及时清理轮胎沟槽内的异物', '更换有裂纹或损伤的轮胎', '2,3,4', 0, 0, '', '', ''),
(2231, 2, 3, '机动车在高速行驶中，突然爆胎要采取的安全措施是什么？', 0, '', 1, 1, 1, 0, 0, '如果采取紧急制动的方法，很容易出现侧翻事故的，因此正确的做法应该是握紧方向，同时控制车速，慢慢停车。在此过程中，可以采取的措施则可以是“牢牢地握住转向盘，保持直行”“立即松开加速踏板”“轻踩制动踏板”。', 0, 0, '', 0, '紧急制动，靠边停车', '牢牢地握住转向盘，保持直行', '立即松开加速踏板', '轻踩制动踏板', '2,3,4', 0, 0, '', '', ''),
(2241, 2, 3, '机动车高速行驶中出现转向失控时，驾驶人要如何处置？', 0, '', 1, 0, 1, 0, 0, '车辆在高速行驶状态下，使用紧急制动，是容易翻车的。因此发生转向失控时，应当要减速，并开启危险报警闪光灯，并注意制动的使用。因此选择“抢挂低速挡”“合理使用行车制动和驻车制动，避免紧急制动”“开启危险报警闪光灯”。', 0, 0, '', 0, '紧急制动', '抢挂低速挡', '合理使用行车制动和驻车制动，避免紧急制动', '开启危险报警闪光灯', '2,3,4', 0, 0, '', '', ''),
(2250, 2, 3, '有效预防机动车发生制动失效的措施是什么？', 0, '', 1, 0, 1, 0, 0, '四个选项都是对制动系统等的检查，通过检查，预防机动车制动失效的发生。因此全选。', 0, 0, '', 0, '定期维护制动系统', '行车前检查制动踏板的自由行程', '正确使用制动，防止热衰退', '采用液压制动的机动车，行车前检查制动液是否有滴漏', '1,2,3,4', 0, 0, '', '', ''),
(2251, 2, 3, '机动车在行驶中突遇制动失灵时，驾驶人要采取什么措施？', 0, '', 1, 0, 1, 0, 0, '机动车在行驶中突遇制动失灵时，应当握稳方向并开启危险报警闪光，抢挂低速挡减速，停车后使用驻车制动器，以防车子出现后溜的情况。选项C：使用驻车制动器减速，是说慢慢使用制动器减速，而不是一下拉紧！', 0, 0, '', 0, '握稳方向', '抢挂低速挡减速', '使用驻车制动器减速', '开启危险报警闪光灯', '1,2,3,4', 0, 0, '', '', ''),
(2252, 2, 3, '下坡路行驶，制动突然失效后，可采用的减速方法是什么？', 0, '', 1, 0, 1, 0, 0, '这四个选项中，除了选项C可能会造成车子侧滑等状况外，都是可以让机动车减速的有效措施。', 0, 0, '', 0, '利用道路边专设避险车道减速停车', '用车身靠向路旁的岩石或树木碰擦', '首先拉紧驻车制动', '抢挂低速档', '1,2,4', 0, 0, '', '', ''),
(2256, 2, 3, '行车中发动机突然熄火后，要采取什么措施？', 0, '', 1, 0, 1, 0, 0, '选项“立即停车检修”的做法会影响正常交通，而且立即停车检修的话，若是后方有来车，很有可能会发生追尾等事故。而后三个选项则是正确的做法，既不影响交通，也能确保驾驶人的安全。', 0, 0, '', 0, '立即停车检修', '立即开启危险报警闪光灯', '将机动车移到不妨碍交通的地点停车', '放置故障车警告标志', '2,3,4', 0, 0, '', '', ''),
(2263, 2, 3, '与对向来车发生正面碰撞且碰撞位置在驾驶人正前方时，驾驶人正确的应急驾驶姿势是什么？', 0, '', 1, 0, 1, 0, 0, '前三个选项的用意是为了不让身体被卡住，而“两腿蹬直”选项则会让驾驶人受到更大的伤害，因此本题“两腿蹬直”不正确，其余三个选项正确。', 0, 0, '', 0, '迅速躲离转向盘', '往副驾驶座位躲避', '迅速将两腿抬起', '两腿蹬直', '1,2,3', 0, 0, '', '', ''),
(2273, 2, 3, '机动车行驶时突然发生自燃，驾驶人采取的以下紧急避险措施中，正确做法是什么？', 0, '', 1, 0, 1, 0, 0, '水的密度比油大，不能用来灭火。因此“用清水喷洒扑灭”首先排除，“报警”与“设置警告标志”是用来告知自燃地点，而“使用灭火器”选项则是进行灭火。因此“用清水喷洒灭火”是错误的。', 0, 0, '', 0, '用清水喷洒扑灭', '及时报警', '使用车内备用的灭火器灭火', '在来车方向设置警告标志', '2,3,4', 0, 0, '', '', ''),
(2289, 2, 3, '机动车发生侧滑时要如何调整方向？', 0, '', 1, 0, 1, 0, 0, '如果前轮侧滑时，应稳住油门，纠正方向驶出。当后轮侧滑时，应将方向盘朝侧滑方向转动，待后轮摆正后再驶回路中。下坡中遇到后轮侧滑时，可适当点一下油门，提高车速，待侧滑消除后再按原车速行驶。', 0, 0, '', 0, '前轮侧滑，向侧滑方向转动转向盘', '前轮侧滑，向侧滑相反方向转动转向盘', '后轮侧滑，向侧滑方向转动转向盘', '后轮侧滑，向侧滑相反方向转动转向盘', '2,3', 0, 0, '', '', ''),
(2293, 2, 3, '发生交通事故后，防止二次事故的有效措施是什么？', 0, '', 1, 0, 1, 0, 0, '选项“疏散人员”“开启危险警报闪光灯”“正确放置危险敬告标志”都是防止二次事故的有效措施，而选项“标志伤员的原始位置”的时候要是发生什么意外就是第二次伤害了。', 0, 0, '', 0, '疏散人员', '开启危险报警闪光灯', '标记伤员的原始位置', '正确放置危险警告标志', '1,2,4', 0, 0, '', '', ''),
(2649, 2, 3, '出车前检查的目的是什么?', 0, '', 1, 0, 1, 0, 0, '确认机动车车胎是否损坏，确认周围是否有障碍物，确认在车辆附近是否存在安全隐患，确认出车方向的安全性。', 0, 0, '', 0, '确认机动车车胎是否损毁', '确认周围是否有障碍物', '确认在车辆附近是否存在安全隐患', '确认出车方向的安全性', '1,2,3,4', 0, 0, '', '', ''),
(2650, 2, 3, '汽车各轮胎气压不一致时，容易造成的后果是什么?', 0, '', 1, 0, 1, 0, 0, '轮胎气压不足或左、右两侧轮胎气压不均匀，会引起制动效果时差，操纵失控，转向困难或转向沉里.同时也降低了轮胎的使用寿命，容易燎胎，增大油耗。载重全大时.以上后果更严重。', 0, 0, '', 0, '爆胎', '汽车行驶油耗增大', '操纵失控', '加剧轮胎磨损', '1,2,3,4', 0, 0, '', '', ''),
(2651, 2, 3, '驾驶机动车起步前，驾驶人对乘车人需要提出什么要求?', 0, '', 1, 0, 1, 0, 0, '注意本题考的是乘车人要做什么，根据四个选项来看，都是驾驶员要做的，而【系好安全带】则是乘车人和驾驶人都应该做的。因此本题选【系好安全带】。', 0, 0, '', 0, '系好安全带', '调整好后视镜', '不要把身体伸出车外', '不要向车外抛洒物品', '1,3,4', 0, 0, '', '', ''),
(2652, 2, 3, '出车前，应该做的准备工作是什么?', 0, '', 1, 0, 1, 0, 0, '仔细巡视车辆四周的状况，观察车底和车身周围是否有障碍物。上车后关好车门。调整好座位，系好安全带。启动车辆。观察仪裹。检查车辆工作是否正常，调整好后视镜。', 0, 0, '', 0, '仔细巡视车辆四周的状况，观察车底和车身周围是否有障碍物', '上车后关好车门，调整好座位，系好安全带', '启动车辆，观察仪表，检查车辆工作是否正常', '调整好后视镜', '1,2,3,4', 0, 0, '', '', ''),
(2662, 2, 3, '如图所示，驾驶机动车遇这种情况应如何安全汇入车流?', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1eigzmkki5rj20dz06y0ty.jpg', 1, 0, 1, 0, 0, '认真观察主路车流情况，提前开启转向灯并降低车速，不得妨碍主路正常行驶车辆。', 0, 0, '', 0, '加速直接汇入车流', '认真观察主路车流情况', '提前开启转向灯并降低车速', '不得妨碍主路正常行驶车辆', '2,3,4', 0, 0, '', '', ''),
(2668, 2, 3, '跟车行驶时，要留有足够的安全距离，是因为什么?', 0, '', 1, 0, 1, 0, 0, '遇到紧急情况时，能有足够的避让空间；跟车越近，越不容易掌握前车前方的情况二防止因前车尾灯损坏，不能及时发现前车制动；跟车太近，容易发生追尾。', 0, 0, '', 0, '遇到紧急情况时，能有足够的避让空间', '跟车越近，越不容易掌握前车前方的情况', '防止因前车尾灯损坏，不能及时发现前车制动', '跟车太近，容易发生追尾', '1,2,3,4', 0, 0, '', '', ''),
(2669, 2, 3, '关于影响制动停车距离的因素，以下说法正确的是什么?', 0, '', 1, 0, 1, 0, 0, '车辆行驶速度、驾驶人反应时间、路面状况、载重和刹车系统等因素影响。', 0, 0, '', 0, '车辆行驶速度', '驾驶人的反应时间', '路面状况', '载货量的多少以及制动器的结构形式等', '1,2,3,4', 0, 0, '', '', ''),
(2673, 2, 3, '关于超车，以下说法正确的是什么?', 0, '', 1, 0, 1, 0, 0, '《道路交通安全法实施条例》第四十七条：机动车超车时，应当提前开启左转向灯、变换使用远、近光灯或者鸣喇叭。在没有道路中心线或者同方向只有1条机动车道的道路上，前车遇后车发出超车信号时，在条件许可的情况下。应当降低速度、靠右让路。后车应当在确认有充足的安全距离后，从前车的左侧超越。在与被超车辆拉开必要的安全距离后。开启右转向灯，驶回原车道。', 0, 0, '', 0, '提前开启左转向灯', '夜间交替使用远近光灯', '鸣喇叭提示', '加速从右侧超越', '1,2,3', 0, 0, '', '', ''),
(2674, 2, 3, '关于超车，以下说法正确的是什么?', 0, '', 1, 0, 1, 0, 0, '《道路交通安全法实施条例》第四十七条：机动车超车时，应当提前开启左转向灯、变换使用远、近光灯或者鸣喇叭。在没有道路中心线或者同方向只有1条机动车道的道路上，前车遇后车发出超车信号时，在条件许可的情况下。应当降低速度、靠右让路。后车应当在确认有充足的安全距离后，从前车的左侧超越。在与被超车辆拉开必要的安全距离后。开启右转向灯，驶回原车道。', 0, 0, '', 0, '超车时从前车左侧超越', '超车时从前车右侧超越', '超车完毕，立即开启右转向灯驶回原车道', '超车完毕，与被超车拉开必要的安全距离后开启右转向灯驶回原车道', '1,4', 0, 0, '', '', ''),
(2688, 2, 3, '关于停车，以下说法正确的是什么?', 0, '', 1, 0, 1, 0, 0, '靠边停车首先开启右转向灯然后再打方向盘停车。《道路交通安全法实施条例》第五十七条机动车应当按照下列规定使用转向灯:(一)向左转弯、向左变更车道、准备超车、驶离停车地点或者掉头时，应当提前开启左转向灯;(二)向右转夸、向右变更车道、超车完毕驶回原车道、靠路边停车时.应当提前开启右转向灯。', 0, 0, '', 0, '应靠道路右侧', '开关车门不得妨碍其他车辆和行人通行', '交叉路口50米以内不得停车', '开左转向灯', '1,2,3', 0, 0, '', '', ''),
(2689, 2, 3, '应该选择什么地点停车?', 0, '', 1, 0, 1, 0, 0, '停车场。道路施划的停车泊位内。', 0, 0, '', 0, '停车场', '道路施划的停车泊位内', '人行横道', '施工路段', '1,2', 0, 0, '', '', ''),
(2690, 2, 3, '以下什么地点不能停车?', 0, '', 1, 0, 1, 0, 0, '人行横道，山区容易塌方、泥石流路段。', 0, 0, '', 0, '人行横道', '停车场', '山区容易塌方、泥石流路段', '道路施划的停车泊位内', '1,3', 0, 0, '', '', ''),
(2691, 2, 3, '夜间路边临时停车，以下做法错误的是什么?', 0, '', 1, 0, 1, 0, 0, '夜间临时停车要开启危险报警闪光灯、示廓灯和后尾灯。', 0, 0, '', 0, '不开启灯光', '开远光灯', '开危险报警闪光灯', '开启示廓灯、后位灯', '1,2', 0, 0, '', '', ''),
(2692, 2, 3, '关于停车，以下做法错误的是什么?', 0, '', 1, 0, 1, 0, 0, '问的是错误的说法，不要被误导。在停车场停车是正确的。', 0, 0, '', 0, '在交叉路口停车', '在铁路道口停车', '在山区易落石路段停车', '在停车场停车', '1,2,3', 0, 0, '', '', ''),
(2693, 2, 3, '停车时，以下做法正确的是什么?', 0, '', 1, 0, 1, 0, 0, '按顺行方向停放，车身不得超出停车泊位.关闭电路，锁好车门。', 0, 0, '', 0, '按顺行方向停放', '车身不得超出停车泊位', '关闭电路', '锁好车门', '1,2,3,4', 0, 0, '', '', '');
INSERT INTO `qb_exam_content2` (`id`, `mid`, `fid`, `title`, `ispic`, `picurl`, `uid`, `view`, `status`, `replynum`, `comment`, `content`, `create_time`, `update_time`, `ip`, `list`, `answer_a`, `answer_b`, `answer_c`, `answer_d`, `answer`, `ext_sys`, `ext_id`, `grade`, `kemu`, `step`) VALUES
(2697, 2, 3, '掉头时，以下做法正确的是什么?', 0, '', 1, 0, 1, 0, 0, '《道路交通安全法实施条例》第五十七条：机动车应当按照下列规定使用转向灯：（一）向左转弯、向左变更车道、准备超车、驶离停车地点或者掉头时，应当提前开启左转向灯；（二）向右转夸、向右变更车道、超车完毕驶回原车道、靠路边停车时。应当提前开启右转向灯。', 0, 0, '', 0, '不开转向灯', '提前开启左转向灯', '在掉头车道掉头', '在直行车道掉头', '2,3', 0, 0, '', '', ''),
(2700, 2, 3, '机动车行经没有交通信号的道路，遇行人横过道路时，以下做法错误的是什么?', 0, '', 1, 0, 1, 0, 0, '应该减速或停车避让。', 0, 0, '', 0, '鸣喇叭催促', '寻找间隙穿插驶过', '减速或停车避让', '绕前通过', '1,2,4', 0, 0, '', '', ''),
(2702, 2, 3, '驾驶机动车通过学校门口时应注意什么?', 0, '', 1, 0, 1, 0, 0, '车辆通过学校和小区应注葱观察标志标线.低速行驶，不要鸣喇叭，减少噪音，以免影响学生学习。', 0, 0, '', 0, '注意观察标志标线', '注意减速慢行', '不要鸣喇叭', '快速通过', '1,2,3', 0, 0, '', '', ''),
(2706, 2, 3, '如图所示，在居民区内为了预防突发情况出现，驾驶人应如何安全驾驶?', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1eigzn8ac5tj20dw06ygml.jpg', 1, 1, 1, 0, 0, '减速慢行，保持必要的安全距离，避免发生碰撞，文明驾驶，车让人。', 0, 0, '', 0, '注意观察，随时准备停车', '进入小区前应降低车速', '不与行人抢行', '鸣喇叭示意行人让行', '1,2,3', 0, 0, '', '', ''),
(2707, 2, 3, '如图所示，驾驶机动车在居民区遇到这种情形，应如何安全驾驶?', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1eigzna0vm6j20dw06y3zh.jpg', 1, 0, 1, 0, 0, '减速慢行，保持必要的安全距离，避免发生碰撞，文明驾驶。', 0, 0, '', 0, '紧跟其后行驶', '低速慢行', '连续鸣喇叭示意', '保持必要的安全距离', '2,4', 0, 0, '', '', ''),
(2711, 2, 3, '如图所示，驾驶机动车临近停在车站的公交车时，以下做法正确的是什么?', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1eigznfa259j20dx06y752.jpg', 1, 0, 1, 0, 0, '不能尽快超越，注息安全。谨慎驾驶。', 0, 0, '', 0, '降低车速', '随时准备停车', '尽快超越', '加大横向安全距离', '1,2,4', 0, 0, '', '', ''),
(2712, 2, 3, '如图所示，驾驶机动车遇到这种情形，应如何安全通过?', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1eigzngnzsfj20dw06ymy2.jpg', 1, 0, 1, 0, 0, '减速慢行，注意观察，预防突然横穿的行人，拉开横向安全距离。', 0, 0, '', 0, '减速慢行', '注意观察', '拉开横向安全距离', '预防突然横穿的行人', '1,2,3,4', 0, 0, '', '', ''),
(2717, 2, 3, '关于超车，以下说法正确的是什么?', 0, '', 1, 0, 1, 0, 0, '《道路交通安全法实施条例》第四十七条：机动车超车时，应当提前开启左转向灯、变换使用远、近光灯或者鸣喇叭。在没有道路中心线或者同方向只有1条机动车道的道路上，前车遇后车发出超车信号时，在条件许可的情况下。应当降低速度、靠右让路。后车应当在确认有充足的安全距离后，从前车的左侧超越。在与被超车辆拉开必要的安全距离后。开启右转向灯，驶回原车道。', 0, 0, '', 0, '超车前提前开启左转向灯，提醒前方被超车辆驾驶人', '切换远、近光灯提醒前方被超车辆驾驶人', '长时间鸣喇叭警示被超车辆驾驶人', '完成超车后并回行车道要开启右转向灯', '1,2,4', 0, 0, '', '', ''),
(2720, 2, 3, '当您遇到以下车辆时，需要礼让的是什么?', 0, '', 1, 0, 1, 0, 0, '《道路交通安全法》第五十三条：警车、消防车、救护车、工程救险车执行紧急任务时，可以使用警报器、标志灯具；在确保安全的前提下，不受行驶路线、行驶方向、行驶速度和信号灯的限制，其他车辆和行人应当让行。警车、消防车、救护车、工程救险车非执行紧急任务时，不得使用警报器、标志灯具，不享有前款规定的道路优先通行权。', 0, 0, '', 0, '救护车', '消防车', '警车', '校车', '1,2,3,4', 0, 0, '', '', ''),
(2722, 2, 3, '如图所示，驾驶机动车遇到这种情况时，以下做法正确的是什么?', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1eigznwky8mj20dx06y3z3.jpg', 1, 0, 1, 0, 0, '不能鸣喇叭。避免动物因惊吓窜入行车道。保持一定的安全距离，停车让行等待动物穿过。', 0, 0, '', 0, '停车等待动物穿过', '鸣喇叭驱赶动物', '下车驱赶动物', '与动物保持较远距离', '1,4', 0, 0, '', '', ''),
(2723, 2, 3, '如图所示，驾驶机动车遇到这种情况时，以下做法正确的是什么?', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1eigznxuzwej20dw06ydgf.jpg', 1, 0, 1, 0, 0, '不能鸣喇叭。避免动物因惊吓窜入行车道，保持一定的安全距离，停车让行等待动物穿过。', 0, 0, '', 0, '减速缓慢通过', '鸣喇叭警示牲畜，以免牲畜冲入行车道发生事故', '不能鸣喇叭，避免牲畜因惊吓窜入行车道', '加速通过此事故隐患路段', '1,3', 0, 0, '', '', ''),
(2728, 2, 3, '如图所示，当您看到这个标志时，应该想到什么?', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1eigznzf88bj208506y0t6.jpg', 1, 2, 1, 0, 0, '注意行人标志。用以警告车辆驾驶人减速慢行，注意行人。设在行人密集，或不易被写驶员发现的人行横道线以前适当位置。', 0, 0, '', 0, '前方有人行横道', '应当相应减速行驶', '视野范围内无行人可以保持原速行驶', '视野范围内无行人可以适当加速通过', '1,2', 0, 0, '', '', ''),
(2736, 2, 3, '雨天驾驶机动车减速慢行的主要原因是什么?', 0, '', 1, 4, 1, 0, 0, '雨天视距变短；路面湿滑，速度过快容易侧滑；高速行驶制动距离变长这些都是常识。', 0, 1533714453, '', 0, '影响驾驶人视野', '过快的速度会使得机动车油耗增加', '制动距离会增大', '紧急制动易发生侧滑', ',1,3,4,', 0, 0, ',1,', ',2,', ',2,'),
(2737, 2, 3, '车辆发生“水滑”时，以下做法正确的是什么?', 0, '', 1, 10, 1, 0, 0, '所谓“水滑”现象就是雨天汽车在积水路面上高速行驶时，轮胎与路面间的存水不能排除，水的压力使轮胎上浮，形成汽车在积水路面上滑行的现象。“水滑”现象可以通过控制汽车的行驶速度得以遵免。汽车在雨中或在积水路段行驶，如果你感觉到转动方向盘时用力变小，应机敏地意识到这是可能发生“水滑”的危险信号，此时要把车速降到安全行驶速度以下，以确保安全。', 0, 0, '', 0, '不可急踩制动踏板', '逐渐松抬加速踏板，让车速逐渐减缓', '不得迅速转向', '立刻猛踏制动踏板，降低车速', '1,2,3', 0, 0, '', '', ''),
(2738, 2, 3, '雨天驾驶机动车，不宜超车的主要原因是什么?', 0, '', 1, 6, 1, 0, 0, '雨中行车，要随时注意前车的行驶速度和方向，绝不可因前车速度慢而加速超车。尤其是在高速公路上，由于各车道的车速相对较高，司机的视角变窄，加上路面湿滑，强行越线超车时，稍动方向就很容易造成车轮打滑，极易造成与其他车辆发生刮蹭，引发车辆侧翻等意外事故。', 0, 0, '', 0, '不能准确判断周围的车辆距离', '周围车辆驾驶人不容易看清超车信号', '道路湿滑，车辆易出现侧滑现象', '不能够及时发现危险情况', '1,2,3,4', 0, 0, '', '', ''),
(2739, 2, 3, '雨天驾驶机动车，不可以急踩制动踏板的主要原因是什么?', 0, '', 1, 7, 1, 0, 0, '在干燥路面驾驶，车速提高，车轮与路面间的附着力(俗称“抓地力“)几乎没有变化。而雨天，当车辆在潮湿路上行驶，车轮的抓地力则随车速的增加而急剧变小，很容易发生“水滑”，此时，不要急踩制动踏板或猛打转向盘。由于雨天路面情况的特殊性，行车时应适当降低车速。准备停车时最好提前100-200米开始减速，给后方的车辆留出足够的反应时间，也为自己留够制动距离，以免发生追尾。', 0, 0, '', 0, '易导致后车追尾', '会相应增大油耗', '易产生侧滑', '会相应减少油耗', '1,3', 0, 0, '', '', ''),
(13656, 2, 0, '广东有哪些城市', 0, '', 1, 2, 1, 0, 0, '', 1534319411, 0, '127.0.0.1', 1534319411, '广州', '深圳', '湛江', '福州', '1,2,3', 0, 0, ',2,', ',2,', ',2,'),
(13657, 2, 0, '一年有哪些季节', 0, '', 1, 1, 1, 0, 0, '', 1534319411, 0, '127.0.0.1', 1534319411, '春', '夏', '秋', '冬', '1,2,3,4', 0, 0, ',2,', ',2,', ',2,');

