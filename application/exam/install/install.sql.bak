INSERT INTO `qb_exam_content1` (`id`, `mid`, `fid`, `title`, `ispic`, `picurl`, `uid`, `view`, `status`, `replynum`, `content`, `create_time`, `update_time`, `ip`, `list`, `answer_a`, `answer_b`, `answer_c`, `answer_d`, `answer`, `ext_sys`, `ext_id`, `grade`, `kemu`, `step`) VALUES
(1, 1, 2, '驾驶机动车在道路上违反道路交通安全法的行为，属于什么行为？', 0, '', 1, 0, 1, 0, '&ldquo;违反道路交通安全法&rdquo;，违反法律法规即为违法行为。官方已无违章/违规的说法。', 0, 0, '', 0, '违章行为', '违法行为', '过失行为', '违规行为', '2', 0, 0, '', '', ''),
(2, 1, 2, '机动车驾驶人违法驾驶造成重大交通事故构成犯罪的，依法追究什么责任？', 0, '', 1, 0, 1, 0, '《道路交通安全法》第一百零一条：违反道路交通安全法律、法规的规定，发生重大交通事故，构成犯罪的，依法追究刑事责任，并由公安机关交通管理部门吊销机动车驾驶证。', 0, 0, '', 0, '刑事责任', '民事责任', '经济责任', '直接责任', '1', 0, 0, '', '', ''),
(3, 1, 2, '机动车驾驶人造成事故后逃逸构成犯罪的，吊销驾驶证且多长时间不得重新取得驾驶证？', 0, '', 1, 0, 1, 0, '《道路交通安全法》第一百零一条：造成交通事故后逃逸的，由公安机关交通管理部门吊销机动车驾驶证，且终生不得重新取得机动车驾驶证。', 0, 0, '', 0, '5年内', '10年内', '终生', '20年内', '3', 0, 0, '', '', ''),
(10, 1, 2, '驾驶机动车应当随身携带哪种证件？', 0, '', 1, 0, 1, 0, '《道路交通安全法》第十九条：驾驶人应当按照驾驶证载明的准驾车型驾驶机动车；驾驶机动车时，应当随身携带机动车驾驶证。', 0, 0, '', 0, '工作证', '驾驶证', '身份证', '职业资格证', '2', 0, 0, '', '', ''),
(11, 1, 2, '未取得驾驶证的学员在道路上学习驾驶技能，下列哪种做法是正确的？', 0, '', 1, 0, 1, 0, '《公安部令第123号》规定：未取得驾驶证的学员在道路上学习驾驶技能，使用所学车型的教练车由教练员随车指导。', 0, 0, '', 0, '使用所学车型的教练车由教练员随车指导', '使用所学车型的教练车单独驾驶学习', '使用私家车由教练员随车指导', '使用所学车型的教练车由非教练员的驾驶人随车指导', '1', 0, 0, '', '', ''),
(12, 1, 2, '机动车驾驶人初次申领驾驶证后的实习期是多长时间？', 0, '', 1, 0, 1, 0, '《公安部令第123号》第六十四条规定：机动车驾驶人初次申请机动车驾驶证和增加准驾车型后的12个月为实习期。', 0, 0, '', 0, '6个月', '12个月', '16个月', '18个月', '2', 0, 0, '', '', ''),
(13, 1, 2, '在实习期内驾驶机动车的，应当在车身后部粘贴或者悬挂哪种标志？', 0, '', 1, 0, 1, 0, '《公安部令第123号》第六十四条规定：在实习期内驾驶机动车的，应当在车身后部粘贴或者悬挂统一式样的实习标志。', 0, 0, '', 0, '注意新手标志', '注意避让标志', '统一式样的实习标志', '注意车距标志', '3', 0, 0, '', '', ''),
(14, 1, 2, '以欺骗、贿赂等不正当手段取得驾驶证被依法撤销驾驶许可的，多长时间不得重新申请驾驶许可？', 0, '', 1, 0, 1, 0, '《公安部令第123号》第七十八条规定：申请人以欺骗、贿赂等不正当手段取得机动车驾驶证的，公安机关交通管理部门收缴机动车驾驶证，撤销机动车驾驶许可；申请人在三年内不得再次申领机动车驾驶证。吊销机动车证的为二年，撤销机动车证的为三年，以醉酒吊销五年，因逃跑而吊销是终身，叫&ldquo;吊二撤三醉五逃终身&rdquo;。', 0, 0, '', 0, '3年内', '终身', '1年内', '5年内', '1', 0, 0, '', '', ''),
(20, 1, 2, '驾驶拼装机动车上路行驶的驾驶人，除按规定接受罚款外，还要受到哪种处理？', 0, '', 1, 0, 1, 0, '《道路交通安全法》第一百条：驾驶拼装的机动车或者已达到报废标准的机动车上道路行驶的，公安机关交通管理部门应当予以收缴，强制报废。对驾驶前款所列机动车上道路行驶的驾驶人，处200元以上2000元以下罚款，并吊销机动车驾驶证。', 0, 0, '', 0, '处10日以下拘留', '暂扣驾驶证', '吊销驾驶证', '追究刑事责任', '3', 0, 0, '', '', ''),
(21, 1, 2, '驾驶报废机动车上路行驶的驾驶人，除按规定罚款外，还要受到哪种处理？', 0, '', 1, 0, 1, 0, '《道路交通安全法》第一百条：驾驶拼装的机动车或者已达到报废标准的机动车上道路行驶的，公安机关交通管理部门应当予以收缴，强制报废。对驾驶前款所列机动车上道路行驶的驾驶人，处200元以上2000元以下罚款，并吊销机动车驾驶证。', 0, 0, '', 0, '撤销驾驶许可', '收缴驾驶证', '强制恢复车况', '吊销驾驶证', '4', 0, 0, '', '', ''),
(22, 1, 2, '对驾驶已达到报废标准的机动车上路行驶的驾驶人，会受到下列哪种处罚？', 0, '', 1, 0, 1, 0, '《道路交通安全法》第一百条：驾驶拼装的机动车或者已达到报废标准的机动车上道路行驶的，公安机关交通管理部门应当予以收缴，强制报废。对驾驶前款所列机动车上道路行驶的驾驶人，处200元以上2000元以下罚款，并吊销机动车驾驶证。', 0, 0, '', 0, '处15日以下拘留', '吊销机动车驾驶证', '处20以上200元以下罚款', '追究刑事责任', '2', 0, 0, '', '', ''),
(23, 1, 2, '对驾驶拼装机动车上路行驶的驾驶人，会受到下列哪种处罚？', 0, '', 1, 0, 1, 0, '《道路交通安全法》第一百条：驾驶拼装的机动车或者已达到报废标准的机动车上道路行驶的，公安机关交通管理部门应当予以收缴，强制报废。对驾驶前款所列机动车上道路行驶的驾驶人，处200元以上2000元以下罚款，并吊销机动车驾驶证。', 0, 0, '', 0, '处15日以下拘留', '依法追究刑事责任', '处200以上2000元以下罚款', '吊销机动车行驶证', '3', 0, 0, '', '', ''),
(28, 1, 2, '下列哪种证件是驾驶机动车上路行驶应当随车携带？', 0, '', 1, 0, 1, 0, '《道路交通安全法》第十一条：　驾驶机动车上道路行驶，应当悬挂机动车号牌，放置检验合格标志、保险标志，并随车携带机动车行驶证。', 0, 0, '', 0, '机动车登记证', '机动车保险单', '机动车行驶证', '出厂合格证明', '3', 0, 0, '', '', ''),
(29, 1, 2, '驾驶这种机动车上路行驶属于什么行为？', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yntci5ej.jpg', 1, 0, 1, 0, '《道路交通安全法》第十一条：机动车号牌应当按照规定悬挂并保持清晰、完整，不得故意遮挡、污损。违反《道路交通安全法》即为违法。', 0, 0, '', 0, '违规行为', '违章行为', '违法行为', '犯罪行为', '3', 0, 0, '', '', ''),
(30, 1, 2, '下列哪种标志是驾驶机动车上路行驶应当在车上放置的标志？', 0, '', 1, 0, 1, 0, '《道路交通安全法》第十一条：驾驶机动车上道路行驶，应当悬挂机动车号牌，放置检验合格标志、保险标志，并随车携带机动车行驶证。', 0, 0, '', 0, '产品合格标志', '保持车距标志', '提醒危险标志', '检验合格标志', '4', 0, 0, '', '', ''),
