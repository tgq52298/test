(1890, 3, 1, '前方标志指示高速公路的名称和编号。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e294tqjr0ij.jpg', 1, 0, 1, 0, '国家高速用字母“G”表示，省级的有“S”表示，国家高速公路命名标志由“国家高速”，“编号名称”和“高速名称”三部分组成。国家高速为红底白字，省级为黄底黑字。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1891, 3, 1, '前方标志预告距离下一出口4公里。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e294ts5av7j.jpg', 1, 0, 1, 0, '“下一出口”“4km”字样明显在预告距离下一出口4公里。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1892, 3, 1, '前方标志预告距离下一左侧出口1公里。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e294ttsqgyj.jpg', 1, 0, 1, 0, '应该是距离右侧下一个出口，还有一公里。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1893, 3, 1, '右侧标志指示前方是高速公路的终点。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e294tvevhwj.jpg', 1, 0, 1, 0, '这是起点标志，终点的是还有一个红色斜杠的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
