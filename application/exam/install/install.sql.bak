(1883, 3, 1, '路两侧的标志提示前方道路线形变化。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e294tg62dfj.jpg', 1, 0, 1, 0, '如图所示，道路两侧标志为线性诱导标志，提示前方道路线性变化。此标志的作用就是及时地提醒驾驶人员前方道路线形和道路状况的变化，在到达危险点以前有充分时间采取必要行动，确保行驶安全。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1884, 3, 1, '右侧标志警示前方道路两侧不能通行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e294thrwylj.jpg', 1, 0, 1, 0, '这是两侧通行标志。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1885, 3, 1, '左侧标志警示前方道路右侧不能通行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e294tj3nlwj.jpg', 1, 0, 1, 0, '如图所示，左侧标志为右侧通行标志。左侧不能通行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1886, 3, 1, '前方标志预告距离高速公路入口1公里。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e294tkkxqrj.jpg', 1, 0, 1, 0, '如图所示，右侧标志为预告高速入口距离标志，表示前方1公里处为高速公里路口。因此本题正确。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
