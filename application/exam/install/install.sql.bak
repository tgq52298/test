INSERT INTO `qb_exam_content3` (`id`, `mid`, `fid`, `title`, `ispic`, `picurl`, `uid`, `view`, `status`, `replynum`, `content`, `create_time`, `update_time`, `ip`, `list`, `answer`, `ext_sys`, `ext_id`, `grade`, `kemu`, `step`) VALUES
(4, 3, 1, '驾驶机动车违反道路交通安全法律法规发生交通事故属于交通违章行为。', 0, '', 1, 0, 1, 0, '&ldquo;违反道路交通安全法&rdquo;，违反法律法规即为违法行为。官方已无违章/违规的说法。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(5, 3, 1, '驾驶机动车在道路上违反道路通行规定应当接受相应的处罚。', 0, '', 1, 0, 1, 0, '常识题，违反规定，就得接受相应的处罚。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(6, 3, 1, '对未取得驾驶证驾驶机动车的，追究其法律责任。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十九条：未取得机动车驾驶证、机动车驾驶证被吊销或者机动车驾驶证被暂扣期间驾驶机动车的，由公安机关交通管理部门处二百元以上二千元以下罚款，可以并处十五日以下拘留。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(7, 3, 1, '对违法驾驶发生重大交通事故且构成犯罪的，不追究其刑事责任。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第一百零一条：违反道路交通安全法律、法规的规定，发生重大交通事故，构成犯罪的，依法追究刑事责任，并由公安机关交通管理部门吊销机动车驾驶证。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(8, 3, 1, '造成交通事故后逃逸且构成犯罪的驾驶人,将吊销驾驶证且终生不得重新取得驾驶证。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第一百零一条：造成交通事故后逃逸的，由公安机关交通管理部门吊销机动车驾驶证，且终生不得重新取得机动车驾驶证。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(9, 3, 1, '驾驶机动车在道路上违反交通安全法规的行为属于违法行为。', 0, '', 1, 0, 1, 0, '&ldquo;违反道路交通安全法&rdquo;，违反法律法规即为违法行为。官方已无违章/违规的说法。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(15, 3, 1, '驾驶人要按照驾驶证载明的准驾车型驾驶车辆。', 0, '', 1, 0, 1, 0, '《公安部令第123号》规定：驾驶与准驾驶车型不符的机动车的违法行为，一次记12分。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(16, 3, 1, '上路行驶的机动车未随车携带身份证的，交通警察可依法扣留机动车。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十五条：上道路行驶的机动车未悬挂机动车号牌，未放置检验合格标志、保险标志，或者未随车携带行驶证、驾驶证的，公安机关交通管理部门应当扣留机动车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(17, 3, 1, '上路行驶的机动车未放置检验合格标志的，交通警察可依法扣留机动车。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十五条：上道路行驶的机动车未悬挂机动车号牌，未放置检验合格标志、保险标志，或者未随车携带行驶证、驾驶证的，公安机关交通管理部门应当扣留机动车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(18, 3, 1, '伪造、变造机动车驾驶证构成犯罪的将被依法追究刑事责任。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十六条：伪造、变造或者使用伪造、变造的机动车登记证书、号牌、行驶证、驾驶证的，由公安机关交通管理部门予以收缴，扣留该机动车，处十五日以下拘留，并处二千元以上五千元以下罚款；构成犯罪的，依法追究刑事责任。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(19, 3, 1, '机动车驾驶人在实习期内驾驶机动车不得牵引挂车。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第六十五条规定：机动车驾驶人在实习期内不得驾驶公共汽车、营运客车或者执行任务的警车、消防车、救护车、工程救险车以及载有爆炸物品、易燃易爆化学物品、剧毒或者放射性等危险物品的机动车；驾驶的机动车不得牵引挂车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(24, 3, 1, '驾驶机动车上路前应当检查车辆安全技术性能。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第二十一条：驾驶人驾驶机动车上道路行驶前，应当对机动车的安全技术性能进行认真检查；不得驾驶安全设施不全或者机件不符合技术标准等具有安全隐患的机动车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(25, 3, 1, '不得驾驶具有安全隐患的机动车上道路行驶。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第二十一条：驾驶人驾驶机动车上道路行驶前，应当对机动车的安全技术性能进行认真检查；不得驾驶安全设施不全或者机件不符合技术标准等具有安全隐患的机动车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(26, 3, 1, '拼装的机动车只要认为安全就可以上路行驶。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第一百条：驾驶拼装的机动车或者已达到报废标准的机动车上道路行驶的，公安机关交通管理部门应当予以收缴，强制报废。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(27, 3, 1, '已经达到报废标准的机动车经大修后可以上路行驶。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第一百条：驾驶拼装的机动车或者已达到报废标准的机动车上道路行驶的，公安机关交通管理部门应当予以收缴，强制报废。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(33, 3, 1, '驾驶机动车上路行驶应当按规定悬挂号牌。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第十一条：驾驶机动车上道路行驶，应当悬挂机动车号牌，放置检验合格标志、保险标志，并随车携带机动车行驶证。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(34, 3, 1, '驾驶这种机动车上路行驶没有违法行为。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ynvrjv8j.jpg', 1, 0, 1, 0, '机动车号牌被遮挡。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(35, 3, 1, '服用国家管制的精神药品可以短途驾驶机动车。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第二十二条：饮酒、服用国家管制的精神药品或者麻醉药品，或者患有妨碍安全驾驶机动车的疾病，或者过度疲劳影响安全驾驶的，不得驾驶机动车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(36, 3, 1, '饮酒后只要不影响驾驶操作可以短距离驾驶机动车。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十一条：饮酒后驾驶机动车的，处暂扣六个月机动车驾驶证，并处一千元以上二千元以下罚款。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(41, 3, 1, '驾驶人在驾驶证丢失后3个月内还可以驾驶机动车。', 0, '', 1, 0, 1, 0, '驾驶证遗失的、损毁应当向机动车驾驶证核发地车辆管理所申请补发、换证，在此期间不符合&ldquo;随身携带驾驶证&rdquo;，故不得驾驶机动车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(42, 3, 1, '驾驶人持超过有效期的驾驶证可以在1年内驾驶机动车。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第二十八条：机动车驾驶人在机动车驾驶证丢失、损毁、超过有效期或者被依法扣留、暂扣期间以及记分达到12分的，不得驾驶机动车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(43, 3, 1, '驾驶人的驾驶证损毁后不得驾驶机动车。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第二十八条：机动车驾驶人在机动车驾驶证丢失、损毁、超过有效期或者被依法扣留、暂扣期间以及记分达到12分的，不得驾驶机动车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(44, 3, 1, '记分满12分的驾驶人拒不参加学习和考试的将被公告驾驶证停止使用。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第二十五条：机动车驾驶人记分达到12分，拒不参加公安机关交通管理部门通知的学习，也不接受考试的，由公安机关交通管理部门公告其机动车驾驶证停止使用。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(45, 3, 1, '驾驶人的机动车驾驶证被依法扣留、暂扣的情况下不得驾驶机动车。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第二十八条：机动车驾驶人在机动车驾驶证丢失、损毁、超过有效期或者被依法扣留、暂扣期间以及记分达到12分的，不得驾驶机动车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(49, 3, 1, '交通信号包括交通信号灯、交通标志、交通标线和交通警察的指挥。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第二十五条：交通信号包括交通信号灯、交通标志、交通标线和交通警察的指挥。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(50, 3, 1, '交通标志和交通标线不属于交通信号。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第二十五条：交通信号包括交通信号灯、交通标志、交通标线和交通警察的指挥。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(51, 3, 1, '交通信号灯由红灯、绿灯和黄灯组成。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第二十六条：交通信号灯由红灯、绿灯、黄灯组成。红灯表示禁止通行，绿灯表示准许通行，黄灯表示警示。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(52, 3, 1, '道路交通标线分为指示标线、警告标线、禁止标线。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第三十条交通标志分为：指示标志、警告标志、禁令标志、指路标志、旅游区标志、道路施工安全标志和辅助标志。道路交通标线分为：指示标线、警告标线、禁止标线。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(60, 3, 1, '在这种情况下可以借右侧公交车道超车。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yoa73fij.jpg', 1, 0, 1, 0, '超车只能左侧超，不能右侧超车，且不能占用公交专用车道。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(61, 3, 1, '在路口遇有交通信号灯和交通警察指挥不一致时，按照交通信号灯通行。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第三十八条：车辆、行人应当按照交通信号通行；遇有交通警察现场指挥时，应当按照交通警察的指挥通行；在没有交通信号的道路上，应当在确保安全、畅通的原则下通行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(62, 3, 1, '在这种情况下可加速通过交叉路口。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yobt4zhj.jpg', 1, 0, 1, 0, '黄灯，车身在安全线里边，请停车等待。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(63, 3, 1, '在路口这个位置时可以加速通过路口。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yodfsmcj.jpg', 1, 0, 1, 0, '红灯亮表示禁止通行，请停车等待。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(64, 3, 1, '驾驶机动车不能进入红色叉形灯或者红色箭头灯亮的车道。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十条红色叉形灯或者箭头灯亮时，禁止本车道车辆通行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(65, 3, 1, '在这段路的最高时速为每小时50公里。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yoelsnhj.jpg', 1, 0, 1, 0, '红圈白底限制最高速度，蓝底限制最低速度。看右侧的标志，此路段最高车速是80公里每小时，最低车速是50公里每小时。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(66, 3, 1, '这辆红色轿车变更车道的方法和路线是正确的。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yofpudaj.jpg', 1, 0, 1, 0, '红车没有打转向灯，并且红车明显没留出足够安全的行车距离强行并线。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(74, 3, 1, '驾驶机动车在道路上超车时可以不使用转向灯。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例实施条例》第五十七条：机动车应当按照下列规定使用转向灯：（一）向左转弯、向左变更车道、准备超车、驶离停车地点或者掉头时，应当提前开启左转向灯；（二）向右转弯、向右变更车道、超车完毕驶回原车道、靠路边停车时，应当提前开启右转向灯。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(75, 3, 1, '驾驶机动车在道路上超车完毕驶回原车道时开启右转向灯。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例实施条例》第五十七条：机动车应当按照下列规定使用转向灯：（一）向左转弯、向左变更车道、准备超车、驶离停车地点或者掉头时，应当提前开启左转向灯；（二）向右转弯、向右变更车道、超车完毕驶回原车道、靠路边停车时，应当提前开启右转向灯。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(76, 3, 1, '驾驶机动车在道路上掉头时提前开启左转向灯。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例实施条例》第五十七条：机动车应当按照下列规定使用转向灯：（一）向左转弯、向左变更车道、准备超车、驶离停车地点或者掉头时，应当提前开启左转向灯；（二）向右转弯、向右变更车道、超车完毕驶回原车道、靠路边停车时，应当提前开启右转向灯。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(77, 3, 1, '驾驶机动车在道路上向右变更车道可以不使用转向灯。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例实施条例》第五十七条：机动车应当按照下列规定使用转向灯：（一）向左转弯、向左变更车道、准备超车、驶离停车地点或者掉头时，应当提前开启左转向灯；（二）向右转弯、向右变更车道、超车完毕驶回原车道、靠路边停车时，应当提前开启右转向灯。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(78, 3, 1, '驾驶机动车在沙尘天气条件下行车不用开启前照灯、示廓灯和后位灯。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第五十八条：机动车在夜间没有路灯、照明不良或者遇有雾、雨、雪、沙尘、冰雹等低能见度情况下行驶时，应当开启前照灯、示廓灯和后位灯，但同方向行驶的后车与前车近距离行驶时，不得使用远光灯。机动车雾天行驶应当开启雾灯和危险报警闪光灯。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(79, 3, 1, '在这种环境里行车使用近光灯。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yomrdctj.jpg', 1, 0, 1, 0, '夜间、前方有行人的情况不能使用远光灯，会影响行人视线。故开启近光灯。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(80, 3, 1, '驾驶机动车在雾天行车开启雾灯和危险报警闪光灯。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第五十八条：机动车在夜间没有路灯、照明不良或者遇有雾、雨、雪、沙尘、冰雹等低能见度情况下行驶时，应当开启前照灯、示廓灯和后位灯，但同方向行驶的后车与前车近距离行驶时，不得使用远光灯。机动车雾天行驶应当开启雾灯和危险报警闪光灯。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(81, 3, 1, '在这种急弯道路上行车应交替使用远近光灯。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yonj0s3j.jpg', 1, 0, 1, 0, '《道路交通安全法实施条例》第五十九条：机动车在夜间通过急弯、坡路、拱桥、人行横道或者没有交通信号灯控制的路口时，应当交替使用远近光灯示意。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(82, 3, 1, '夜间驾驶机动车通过人行横道时需要交替使用远近光灯。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第五十九条：机动车在夜间通过急弯、坡路、拱桥、人行横道或者没有交通信号灯控制的路口时，应当交替使用远近光灯示意。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(83, 3, 1, '驾驶机动车上坡时,在将要到达坡道顶端时要加速并鸣喇叭。', 0, '', 1, 0, 1, 0, '本题错在&ldquo;加速&rdquo;。《道路交通安全法实施条例》第五十九条：机动车在夜间通过急弯、坡路、拱桥、人行横道或者没有交通信号灯控制的路口时，应当交替使用远近光灯示意。机动车驶近急弯、坡道顶端等影响安全视距的路段以及超车或者遇有紧急情况时，应当减速慢行，并鸣喇叭示意。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(91, 3, 1, '驾驶机动车遇到沙尘、冰雹、雨、雾、结冰等气象条件时应降低行驶速度。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第四十二条：夜间行驶或者在容易发生危险的路段行驶，以及遇有沙尘、冰雹、雨、雪、雾、结冰等气象条件时，应当降低行驶速度。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(100, 3, 1, '驾驶机动车上道路行驶,不允许超过限速标志标明的最高时速。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第四十二条：机动车上道路行驶，不得超过限速标志标明的最高时速。在没有限速标志的路段，应当保持安全车速。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(101, 3, 1, '驾驶机动车在没有中心线的城市道路上，最高速度不能超过每小时50公里。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十五条：机动车在道路上行驶不得超过限速标志、标线标明的速度。在没有限速标志、标线的道路上，机动车不得超过下列最高行驶速度：(一)没有道路中心线的道路，城市道路为每小时30公里，公路为每小时40公里；(二)同方向只有1条机动车道的道路，城市道路为每小时50公里，公路为每小时70公里。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(102, 3, 1, '驾驶机动车在没有中心线的公路上，最高速度不能超过每小时70公里。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十五条：机动车在道路上行驶不得超过限速标志、标线标明的速度。在没有限速标志、标线的道路上，机动车不得超过下列最高行驶速度：(一)没有道路中心线的道路，城市道路为每小时30公里，公路为每小时40公里；(二)同方向只有1条机动车道的道路，城市道路为每小时50公里，公路为每小时70公里。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(103, 3, 1, '车在这种条件的道路上，最高速度不能超过每小时50公里。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yoxbue1j.jpg', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十六条：机动车行驶中在冰雪、泥泞的道路上行驶时最高行驶速度不得超过每小时30公里。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(104, 3, 1, '驾驶机动车掉头、转弯、下陡坡时的最高速度不能超过每小时40公里。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十六条：机动车行驶中遇到掉头、转弯、下陡坡时最高行驶速度不得超过每小时30公里。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(105, 3, 1, '驾驶机动车通过窄路、窄桥时的最高速度不能超过每小时30公里。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十六条：机动车行驶中遇到进出非机动车道，通过铁路道口、急弯路、窄路、窄桥时最高行驶速度不得超过每小时30公里。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(120, 3, 1, '遇到这种情况不能超车。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yp1bns5j.jpg', 1, 0, 1, 0, '前车已经在超车了，为了安全不要再超了。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(121, 3, 1, '驾驶机动车超车应该提前开启左转向灯、变换使用远近光灯或鸣喇叭。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十七条：应当提前开启左转向灯、变换使用远、近光灯或者鸣喇叭。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(122, 3, 1, '驾驶机动车超车后立即开启右转向灯驶回原车道。', 0, '', 1, 0, 1, 0, '不能立即，应在与被超车辆拉开必要的安全距离后，开启右转向灯驶回原车道', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(123, 3, 1, '在道路上遇到这种情况可以从两侧超车。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yp2lurjj.jpg', 1, 0, 1, 0, '前方有警车执行公务，不能超车。而且超车只能从左侧。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(124, 3, 1, '在这种情况下可以加速通过人行横道。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yp40i5uj.jpg', 1, 0, 1, 0, '通过人行横道应减速慢行，遇到行人则需停车让行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(125, 3, 1, '遇到这种情况下可以从右侧超车。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yp5b52aj.jpg', 1, 0, 1, 0, '根据规定，任何超车都是从左侧超车的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(126, 3, 1, '驾驶机动车行经城市没有列车通过的铁路道口时允许超车。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第四十三条：同车道行驶的机动车，后车应当与前车保持足以采取紧急制动措施的安全距离。有下列情形之一的，不得超车：（一）前车正在左转弯、掉头、超车的；（二）与对面来车有会车可能的；（三）前车为执行紧急任务的警车、消防车、救护车、工程救险车的；（四）行经铁路道口、交叉路口、窄桥、弯道、陡坡、隧道、人行横道、市区交通流量大的路段等没有超车条件的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(127, 3, 1, '驾驶机动车在隧道、陡坡等特殊路段不得超车。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第四十三条：同车道行驶的机动车，后车应当与前车保持足以采取紧急制动措施的安全距离。有下列情形之一的，不得超车：（一）前车正在左转弯、掉头、超车的；（二）与对面来车有会车可能的；（三）前车为执行紧急任务的警车、消防车、救护车、工程救险车的；（四）行经铁路道口、交叉路口、窄桥、弯道、陡坡、隧道、人行横道、市区交通流量大的路段等没有超车条件的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(133, 3, 1, '遇到这种情况可以优先通行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yp7yzv2j.jpg', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十八条：在没有中心隔离设施或者没有中心线的道路上，在有障碍的路段，无障碍的一方先行；但有障碍的一方已驶入障碍路段而无障碍的一方未驶入时，有障碍的一方先行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(134, 3, 1, '未上坡的车辆遇到这种情况让对向下坡车先行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yp9bjvsj.jpg', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十八条：在狭窄的坡路，上坡的一方先行；但下坡的一方已行至中途而上坡的一方未上坡时，下坡的一方先行。图中下坡的车已经到了中途，可以先行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(135, 3, 1, '夜间驾驶机动车在窄路、窄桥会车时正确的做法是使用远光灯。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十八条：在没有中心隔离设施或者没有中心线的道路上，夜间会车应当在距相对方向来车150米以外改用近光灯，在窄路、窄桥与非机动车会车时应当使用近光灯。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(144, 3, 1, '在路口遇这种情形要减速让行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ypk3xyjj.jpg', 1, 0, 1, 0, '道路上和右侧有减速让行的标志，应当减速让行，让左侧的车先行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(147, 3, 1, '驾驶机动车通过交叉路口要遵守交通信号。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第四十四条：机动车通过交叉路口，应当按照交通信号灯、交通标志、交通标线或者交通警察的指挥通过；通过没有交通信号灯、交通标志、交通标线或者交通警察指挥的交叉路口时，应当减速慢行，并让行人和优先通行的车辆先行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(148, 3, 1, '驾驶机动车在没有交通信号的路口要尽快通过。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第四十四条：通过没有交通信号灯、交通标志、交通标线或者交通警察指挥的交叉路口时，应当减速慢行，并让行人和优先通过的车辆先行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(149, 3, 1, '在这种情况的铁路道口要加速通过。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yplkgj0j.jpg', 1, 0, 1, 0, '《道路交通安全法》第四十四条：机动车通过交叉路口，应当按照交通信号灯、交通标志、交通标线或者交通警察的指挥通过；通过没有交通信号灯、交通标志、交通标线或者交通警察指挥的交叉路口时，应当减速慢行，并让行人和优先通行的车辆先行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(150, 3, 1, '行至这种情况的铁路道口要停车观察。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ypmvbktj.jpg', 1, 0, 1, 0, '《道路交通安全法》第四十六条：机动车通过铁路道口时，应当按照交通信号或者管理人员的指挥通行；没有交通信号或者管理人员的，应当减速或者停车，在确认安全后通过。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(151, 3, 1, '在这种情况的交叉路口转弯要让直行车先行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ypo8l6bj.jpg', 1, 0, 1, 0, '三个先行原则：转弯的机动车让直行的车辆先行，右方道路来车先行，右转弯车让左转弯车先行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(152, 3, 1, '在交叉路口遇到这种情况享有优先通行权。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yppjgy9j.jpg', 1, 0, 1, 0, '三个先行原则：转弯的机动车让直行的车辆先行，右方道路来车先行，右转弯车让左转弯车先行。我方为左转，对方右转，故我方优先通过。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(153, 3, 1, '在交叉路口遇到这种情况享有优先通行权。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ypqvud3j.jpg', 1, 0, 1, 0, '三个先行原则：转弯的机动车让直行的车辆先行，右方道路来车先行，右转弯车让左转弯车先行。我方为右转，对方左转，故对方优先通过。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(160, 3, 1, '驾驶机动车在没有交通信号的路口遇到前方车辆缓慢行驶时要依次交替通行。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第四十五条：在车道减少的路段、路口，或者在没有交通信号灯、交通标志、交通标线或者交通警察指挥的交叉路口遇到停车排队等候或者缓慢行驶时，机动车应当依次交替通行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(161, 3, 1, '遇到这种情况时，要加速从红车前变更车道。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ypwh476j.jpg', 1, 0, 1, 0, '错在“加速”，只能减速跟在红车后面。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(162, 3, 1, '在交叉路口遇到这种情况时，要在红灯亮以前加速通过路口。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ypy0zw8j.jpg', 1, 0, 1, 0, '黄灯亮了，车身没过白线，请停车等待。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(163, 3, 1, '遇到这种情况的路段，可以进入网状线区域内停车等候。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ypznbazj.jpg', 1, 0, 1, 0, '《道路交通安全法实施条例》第五十三条：机动车在遇有前方机动车停车排队等候或者缓慢行驶时，应当依次排队，不得从前方车辆两侧穿插或者超越行驶，不得在人行横道、网状线区域内停车等候。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(164, 3, 1, '这辆小轿车不能在这个位置停车。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yq183zbj.jpg', 1, 0, 1, 0, '人行横道禁止停车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(166, 3, 1, '驾驶机动车通过漫水路时要加速行驶。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十四条：机动车行经漫水路或者漫水桥时，应当停车察明水情，确认安全后，低速通过。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(167, 3, 1, '驾驶机动车遇到漫水桥时要察明水情确认安全后再低速通过。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十四条：机动车行经漫水路或者漫水桥时，应当停车察明水情，确认安全后，低速通过。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(169, 3, 1, '行经这种交通标线的路段要加速行驶。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yq5shbuj.jpg', 1, 0, 1, 0, '要减速通过，看到那个白色的菱形没，那是人行横道预告，所以要减速防止撞到行人。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(170, 3, 1, '遇到这种情形时要停车避让行人。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yq7cc74j.jpg', 1, 0, 1, 0, '路遇行人横穿马路要停车让行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(173, 3, 1, '在这个路口可以掉头。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yqejbn9j.jpg', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十九条：机动车在有禁止掉头或者禁止左转弯标志、标线的地点以及在铁路道口、人行横道、桥梁、急弯、陡坡、隧道或者容易发生危险的路段，不得掉头。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(174, 3, 1, '在这个路口不能掉头。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yqfy1imj.jpg', 1, 0, 1, 0, '此处可以掉头有掉头的标志，还有黄色的虚线。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(175, 3, 1, '在这段道路上不能掉头。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yqh8l7jj.jpg', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十九条：机动车在有禁止掉头或者禁止左转弯标志、标线的地点以及在铁路道口、人行横道、桥梁、急弯、陡坡、隧道或者容易发生危险的路段，不得掉头。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(176, 3, 1, '驾驶机动车在铁路道口、桥梁、陡坡、隧道或者容易发生危险的路段不能掉头。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第四十九条：机动车在有禁止掉头或者禁止左转弯标志、标线的地点以及在铁路道口、人行横道、桥梁、急弯、陡坡、隧道或者容易发生危险的路段，不得掉头。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(177, 3, 1, '在这段道路上，只要不影响其他车辆通行的前提下可以掉头。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yqism66j.jpg', 1, 0, 1, 0, '黄色虚线，是可以掉头的，如果是实线就不可以了。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(179, 3, 1, '驾驶机动车在上道路行驶前驾驶人要按规定系好安全带。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第五十一条：机动车行驶时，驾驶人、乘坐人员应当按规定使用安全带，摩托车驾驶人及乘坐人员应当按规定戴安全头盔。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(180, 3, 1, '机动车上路行驶时，前排乘车人可不系安全带。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第五十一条：机动车行驶时，驾驶人、乘坐人员应当按规定使用安全带，摩托车驾驶人及乘坐人员应当按规定戴安全头盔。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(181, 3, 1, '机动车行驶中，车上少年儿童可不使用安全带。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第五十一条：机动车行驶时，驾驶人、乘坐人员应当按规定使用安全带，摩托车驾驶人及乘坐人员应当按规定戴安全头盔。儿童更应该系安全带。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(185, 3, 1, '这辆停在路边的机动车没有违法行为。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yqmi83xj.jpg', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十条：机动车在道路上发生故障或者发生交通事故，妨碍交通又难以移动的，应当按照规定开启危险报警闪光灯并在车后50米至100米处设置警告标志，夜间还应当同时开启示廓灯和后位灯。警告标志与车的距离不足50米。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(186, 3, 1, '机动车在道路上发生故障难以移动时要在车后50米以内设置警告标志。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十条：机动车在道路上发生故障或者发生交通事故，妨碍交通又难以移动的，应当按照规定开启危险报警闪光灯并在车后50米至100米处设置警告标志，夜间还应当同时开启示廓灯和后位灯。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(187, 3, 1, '机动车在道路上发生轻微交通事故且妨碍交通时，不需移动。', 0, '', 1, 0, 1, 0, '如果可以移动，应移动到安全位置，并且不要妨碍交通。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(188, 3, 1, '机动车在夜间道路上发生故障难以移动时要开启危险报警闪光灯、示廓灯、后位灯。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十条：机动车在道路上发生故障或者发生交通事故，妨碍交通又难以移动的，应当按照规定开启危险报警闪光灯并在车后50米至100米处设置警告标志，夜间还应当同时开启示廓灯和后位灯。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(190, 3, 1, '行车中遇到执行紧急任务的消防车、救护车、工程救险车时要及时让行。', 0, '', 1, 0, 1, 0, '特种车辆是指警车、消防车、救护车、工程救险车。他们在执行紧急任务时享有优先通行权，在确保安全的前提下，不受行驶路线、行驶方向、行驶速度和交通信号灯的限制，其他车辆和行人应当让行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(191, 3, 1, '行车中遇到正在进行作业的道路养护车辆、工程作业车时要注意避让。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第五十四条：道路养护车辆、工程作业车进行作业时，在不影响过往车辆通行的前提下，其行驶路线和方向不受交通标志、标线限制，过往车辆和人员应当注意避让。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(198, 3, 1, '在道路上临时停车不得妨碍其他车辆和行人通行。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第五十六条：在道路上临时停车的，不得妨碍其他车辆和行人通行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(199, 3, 1, '驾驶机动车找不到停车位时可以借人行道停放。', 0, '', 1, 0, 1, 0, '停车不得占用人行道。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(200, 3, 1, '距离交叉路口50米以内的路段不能停车。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十三条：交叉路口、铁路道口、急弯路、宽度不足4米的窄路、桥梁、陡坡、隧道以及距离上述地点50米以内的路段，不得停车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(201, 3, 1, '这个路段可以在非机动车道上临时停车。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yqxqfppj.jpg', 1, 0, 1, 0, '此为非机动车道，如果停车会影响非机动车行驶。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(202, 3, 1, '社会车辆距离消防栓或者消防队(站)门前30米以内的路段不能停车。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十三条：公共汽车站、急救站、加油站、消防栓或者消防队(站)门前以及距离上述地点30米以内的路段，除使用上述设施的以外，不得停车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(203, 3, 1, '距离桥梁、陡坡、隧道50米以内的路段不能停车。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十三条：交叉路口、铁路道口、急弯路、宽度不足4米的窄路、桥梁、陡坡、隧道以及距离上述地点50米以内的路段，不得停车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(204, 3, 1, '距离宽度不足4米的窄路50米以内的路段不能停车。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十三条：交叉路口、铁路道口、急弯路、宽度不足4米的窄路、桥梁、陡坡、隧道以及距离上述地点50米以内的路段，不得停车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(205, 3, 1, '机动车停稳前不能开车门和上下人员。', 0, '', 1, 0, 1, 0, '停稳后再上下人员，安全第一。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(206, 3, 1, '打开机动车车门时，不得妨碍其他车辆和行人通行。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第七十七条：乘坐机动车应当遵守下列规定：(一)不得在机动车道上拦乘机动车；(二)在机动车道上不得从机动车左侧上下车；(三)开关车门不得妨碍其他车辆和行人通行；(四)机动车行驶中，不得干扰驾驶，不得将身体任何部分伸出车外，不得跳车；(五)乘坐两轮摩托车应当正向骑坐。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(212, 3, 1, '驾驶小型载客汽车在高速公路行驶的最低车速为90公里/小时。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第七十八条：高速公路应当标明车道的行驶速度，最高车速不得超过每小时120公里，最低车速不得低于每小时60公里。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(213, 3, 1, '驾驶机动车在高速公路要按照限速标志标明的车速行驶。', 0, '', 1, 0, 1, 0, '在高速公路上超速不足50%的，罚款20元到200元（记6分）。超速50%以上的（记12分），处二百元以上二千元以下罚款，并处吊销机动车驾驶证。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(222, 3, 1, '可以从这个位置直接驶入高速公路行车道。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yrdtp05j.jpg', 1, 0, 1, 0, '《道路交通安全法实施条例》第七十九条：机动车从匝道驶入高速公路，应当开启左转向灯，在不妨碍已在高速公路内的机动车正常行驶的情况下驶入车道。本题中&ldquo;蓝箭头&rdquo;虽然往&ldquo;左&rdquo;进入高速公路，但是压白线了。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(223, 3, 1, '驶离高速公路可以从这个位置直接驶入匝道。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yrfezr8j.jpg', 1, 0, 1, 0, '白色实线不能压，只能继续寻找下一个出口。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(224, 3, 1, '这辆小型载客汽车进入高速公路行车道的行为是正确的。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yrgos0tj.jpg', 1, 0, 1, 0, '此车压实线，不按标线要求行车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(225, 3, 1, '这辆小型载客汽车驶离高速公路行车道的方法是正确的。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yri0h5fj.jpg', 1, 0, 1, 0, '开了右转向灯，也是从虚线地方进入减速车道，是正确的做法。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(229, 3, 1, '机动车在高速公路上发生故障时，在来车方向50至100米处设置警告标志。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第六十八条：机动车在高速公路上发生故障时，应当依照本法第五十二条的有关规定办理；但是，警告标志应当设置在故障车来车方向一百五十米以外，车上人员应当迅速转移到右侧路肩上或者应急车道内，并且迅速报警。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(230, 3, 1, '机动车在高速公路上发生故障时，将车上人员迅速转移到右侧路肩上或者应急车道内，并且迅速报警。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第六十八条：机动车在高速公路上发生故障时，应当依照本法第五十二条的有关规定办理；但是，警告标志应当设置在故障车来车方向一百五十米以外，车上人员应当迅速转移到右侧路肩上或者应急车道内，并且迅速报警。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(231, 3, 1, '机动车在高速公路上发生交通事故无法正常行驶时，用救援车、清障车拖曳、牵引。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第六十八条：机动车在高速公路上发生故障或者交通事故，无法正常行驶的，应当由救援车、清障车拖曳、牵引。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(233, 3, 1, '驾驶机动车在道路上发生交通事故要立即将车移到路边。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第七十条：在道路上发生交通事故，车辆驾驶人应当立即停车，保护现场；造成人身伤亡的，车辆驾驶人应当立即抢救受伤人员，并迅速报告执勤的交通警察或者公安机关交通管理部门。因抢救受伤人员变动现场的，应当标明位置。乘车人、过往车辆驾驶人、过往行人应当予以协助。在道路上发生交通事故，未造成人身伤亡，当事人对事实及成因无争议的，可以即行撤离现场，恢复交通，自行协商处理损害赔偿事宜；不即行撤离现场的，应当迅速报告执勤的交通警察或者公安机关交通管理部门。在道路上发生交通事故，仅造成轻微财产损失，并且基本事实清楚的，当事人应当先撤离现场再进行协商处理。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(234, 3, 1, '驾驶人在发生交通事故后因抢救伤员变动现场时要标明位置。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第七十条：在道路上发生交通事故，车辆驾驶人应当立即停车，保护现场；造成人身伤亡的，车辆驾驶人应当立即抢救受伤人员，并迅速报告执勤的交通警察或者公安机关交通管理部门。因抢救受伤人员变动现场的，应当标明位置。乘车人、过往车辆驾驶人、过往行人应当予以协助。在道路上发生交通事故，未造成人身伤亡，当事人对事实及成因无争议的，可以即行撤离现场，恢复交通，自行协商处理损害赔偿事宜；不即行撤离现场的，应当迅速报告执勤的交通警察或者公安机关交通管理部门。在道路上发生交通事故，仅造成轻微财产损失，并且基本事实清楚的，当事人应当先撤离现场再进行协商处理。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(235, 3, 1, '在道路上发生交通事故造成人身伤亡时，要立即抢救受伤人员并迅速报警。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第七十条：在道路上发生交通事故，车辆驾驶人应当立即停车，保护现场；造成人身伤亡的，车辆驾驶人应当立即抢救受伤人员，并迅速报告执勤的交通警察或者公安机关交通管理部门。因抢救受伤人员变动现场的，应当标明位置。乘车人、过往车辆驾驶人、过往行人应当予以协助。在道路上发生交通事故，未造成人身伤亡，当事人对事实及成因无争议的，可以即行撤离现场，恢复交通，自行协商处理损害赔偿事宜；不即行撤离现场的，应当迅速报告执勤的交通警察或者公安机关交通管理部门。在道路上发生交通事故，仅造成轻微财产损失，并且基本事实清楚的，当事人应当先撤离现场再进行协商处理。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(240, 3, 1, '在这段道路上一定要减少鸣喇叭的频率。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yrkztfnj.jpg', 1, 0, 1, 0, '右侧的标志是禁止鸣喇叭，而减少不等于禁止。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(241, 3, 1, '在车门、车厢没有关好时不要驾驶机动车起步。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十二条：驾驶机动车不得在车门、车厢没有关好时行车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(242, 3, 1, '不要在驾驶室的前后窗范围内悬挂和放置妨碍驾驶人视线的物品。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十二条：驾驶机动车不得在机动车驾驶室的前后窗范围内悬挂、放置妨碍驾驶人视线的物品。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(243, 3, 1, '行车中在道路情况良好的条件下可以观看车载视频。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十二条：驾驶机动车不得拨打接听手持电话、观看电视等妨碍安全驾驶的行为。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(244, 3, 1, '驾驶小型汽车下陡坡时允许熄火滑行。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十二条：驾驶机动车不得在下陡坡时熄火或者空挡滑行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(245, 3, 1, '驾驶机动车时可以向道路上抛撒物品。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十二条：驾驶机动车不得向道路上抛撒物品。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(249, 3, 1, '驾驶人在机动车驾驶证的6年有效期内，每个记分周期均未达到12分的，换发10年有效期的机动车驾驶证。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第四十七条：机动车驾驶人在机动车驾驶证的六年有效期内，每个记分周期均未记满12分的，换发十年有效期的机动车驾驶证；在机动车驾驶证的十年有效期内，每个记分周期均未记满12分的，换发长期有效的机动车驾驶证。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(250, 3, 1, '机动车驾驶证有效期分为6年、10年、20年。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第十条：机动车驾驶证有效期分为六年、十年和长期。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(251, 3, 1, '准驾车型为小型汽车的，可以驾驶小型自动挡载客汽车。', 0, '', 1, 0, 1, 0, '小型汽车（C1）准驾车型：小型、微型载客汽车以及轻型、微型载货汽车；轻型、微型专项作业车，小型、微型自动挡载客汽车以及轻型、微型自动挡载货汽车，低速载货汽车，三轮汽车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(252, 3, 1, '准驾车型为小型自动挡汽车的，可以驾驶低速载货汽车。', 0, '', 1, 0, 1, 0, '小型自动挡汽车（C2）准驾车型：小型、微型自动挡载客汽车以及轻型、微型自动挡载货汽车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(253, 3, 1, '初次申领的机动车驾驶证的有效期为6年。', 0, '', 1, 0, 1, 0, '初次申领的机动车驾驶证的有效期为6年，每个记分周期均未达到12分的，换发10年。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(254, 3, 1, '初次申领的机动车驾驶证的有效期为4年。', 0, '', 1, 0, 1, 0, '初次申领的机动车驾驶证的有效期为6年，每个记分周期均未达到12分的，换发10年。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(257, 3, 1, '小型汽车科目二考试内容包括倒车入库、坡道定点停车和起步、侧方停车、曲线行驶、直角转弯。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第二十五：条科目二考试内容包括小型汽车、小型自动挡汽车、残疾人专用小型自动挡载客汽车和低速载货汽车考试倒车入库、坡道定点停车和起步、侧方停车、曲线行驶、直角转弯。省级公安机关交通管理部门可以根据实际增加考试内容。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(258, 3, 1, '科目三考试分为道路驾驶技能考试和安全文明驾驶常识考试两部分。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第二十二条：机动车驾驶人考试内容分为道路交通安全法律、法规和相关知识考试科目（以下简称&ldquo;科目一&rdquo;）、场地驾驶技能考试科目（以下简称&ldquo;科目二&rdquo;）、道路驾驶技能和安全文明驾驶常识考试科目（以下简称&ldquo;科目三&rdquo;）。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(259, 3, 1, '科目三道路驾驶技能和安全文明驾驶常识考试满分分别为100分，成绩分别达到80和90分的为合格。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第三十条：科目三道路驾驶技能和安全文明驾驶常识考试满分分别为100分，成绩分别达到90分的为合格。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(262, 3, 1, '申请人因故不能按照预约时间参加考试的，应当提前一日申请取消预约，对申请人未按照预约考试时间参加考试的，判定该次考试不合格。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第三十六条：申请人因故不能按照预约时间参加考试的，应当提前一日申请取消预约。对申请人未按照预约考试时间参加考试的，判定该次考试不合格。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(263, 3, 1, '机动车驾驶证遗失、损毁无法辨认时，机动车驾驶人应当向机动车驾驶证核发地车辆管理所申请补发。', 0, '', 1, 0, 1, 0, '驾驶证遗失、损毁无法辨认时应当向核发地车辆管理所申请补发。', 0, 0, '', 0, '1', 0, 0, '', '', '');
INSERT INTO `qb_exam_content3` (`id`, `mid`, `fid`, `title`, `ispic`, `picurl`, `uid`, `view`, `status`, `replynum`, `content`, `create_time`, `update_time`, `ip`, `list`, `answer`, `ext_sys`, `ext_id`, `grade`, `kemu`, `step`) VALUES
(264, 3, 1, '有吸食、注射毒品后驾驶驾车行为的机动车驾驶人，不会被注销驾驶证。', 0, '', 1, 0, 1, 0, '新交规对吸毒和注射毒品是零容忍，将注销其驾驶证。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(265, 3, 1, '正在执行社区戒毒、强制隔离戒毒、社区康复措施，车辆管理所将注销其驾驶证。', 0, '', 1, 0, 1, 0, '新交规对吸毒和注射毒品是零容忍，将注销其驾驶证。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(267, 3, 1, '机动车登记证书、号牌、行驶证灭失、丢失或者损毁的，机动车所有人应当向居住地车辆管理所申请补领、换领。', 0, '', 1, 0, 1, 0, '登记证书、号牌、行驶证是车辆信息，申领的时候在登记地车辆管理所，补办的时候当然也在登记地车辆管理所。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(270, 3, 1, '申请人在考试过程中有贿赂、舞弊行为的，取消考试资格，已经通过考试的其他科目成绩无效。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第七十八条：申请人在考试过程中有贿赂、舞弊行为的，取消考试资格，已经通过考试的其他科目成绩无效；申请人在一年内不得再次申领机动车驾驶证。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(272, 3, 1, '驾驶机动车在人行横道上临时停车属于违法行为。', 0, '', 1, 0, 1, 0, '在人行横道上临时停车属于违法行为。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(276, 3, 1, '驾驶人违反交通运输管理法规发生重大事故致人重伤的可能判处3年以下徒刑或拘役。', 0, '', 1, 0, 1, 0, '《中华人民共和国刑法》第一百三十三条：违反交通运输管理法规，因而发生重大事故，致人重伤、死亡或者使公私财产遭受重大损失的，处三年以下有期徒刑或者拘役；交通运输肇事后逃逸或者有其他特别恶劣情节的，处三年以上七年以下有期徒刑；因逃逸致人死亡的，处七年以上有期徒刑。在道路上驾驶机动车追逐竞驶，情节恶劣的，或者在道路上醉酒驾驶机动车的，处拘役，并处罚金。有前款行为，同时构成其他犯罪的，依照处罚较重的规定定罪处罚。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(277, 3, 1, '驾驶人违反交通运输管理法规发生重大事故致人死亡的处3年以上有期徒刑。', 0, '', 1, 0, 1, 0, '《中华人民共和国刑法》第一百三十三条：违反交通运输管理法规，因而发生重大事故，致人重伤、死亡或者使公私财产遭受重大损失的，处三年以下有期徒刑或者拘役；交通运输肇事后逃逸或者有其他特别恶劣情节的，处三年以上七年以下有期徒刑；因逃逸致人死亡的，处七年以上有期徒刑。在道路上驾驶机动车追逐竞驶，情节恶劣的，或者在道路上醉酒驾驶机动车的，处拘役，并处罚金。有前款行为，同时构成其他犯罪的，依照处罚较重的规定定罪处罚。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(278, 3, 1, '驾驶人违反交通运输管理法规发生重大事故使公私财产遭受重大损失的可能处3年以下徒刑或拘役。', 0, '', 1, 0, 1, 0, '《中华人民共和国刑法》第一百三十三条：违反交通运输管理法规，因而发生重大事故，致人重伤、死亡或者使公私财产遭受重大损失的，处三年以下有期徒刑或者拘役；交通运输肇事后逃逸或者有其他特别恶劣情节的，处三年以上七年以下有期徒刑；因逃逸致人死亡的，处七年以上有期徒刑。在道路上驾驶机动车追逐竞驶，情节恶劣的，或者在道路上醉酒驾驶机动车的，处拘役，并处罚金。有前款行为，同时构成其他犯罪的，依照处罚较重的规定定罪处罚。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(281, 3, 1, '驾驶人违反交通运输管理法规发生重大事故后，逃逸或者有其他特别恶劣情节的，处7年以上有期徒刑。', 0, '', 1, 0, 1, 0, '《中华人民共和国刑法》第一百三十三条：违反交通运输管理法规，因而发生重大事故，致人重伤、死亡或者使公私财产遭受重大损失的，处三年以下有期徒刑或者拘役；交通运输肇事后逃逸或者有其他特别恶劣情节的，处三年以上七年以下有期徒刑；因逃逸致人死亡的，处七年以上有期徒刑。在道路上驾驶机动车追逐竞驶，情节恶劣的，或者在道路上醉酒驾驶机动车的，处拘役，并处罚金。有前款行为，同时构成其他犯罪的，依照处罚较重的规定定罪处罚。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(282, 3, 1, '驾驶人违反交通运输管理法规发生重大事故后，因逃逸致人死亡的，处3年以上7年以下有期徒刑。', 0, '', 1, 0, 1, 0, '《中华人民共和国刑法》第一百三十三条：违反交通运输管理法规，因而发生重大事故，致人重伤、死亡或者使公私财产遭受重大损失的，处三年以下有期徒刑或者拘役；交通运输肇事后逃逸或者有其他特别恶劣情节的，处三年以上七年以下有期徒刑；因逃逸致人死亡的，处七年以上有期徒刑。看清题目是因逃逸致人死亡的，不是先死亡再逃逸的，所以应该是7年以上。在道路上驾驶机动车追逐竞驶，情节恶劣的，或者在道路上醉酒驾驶机动车的，处拘役，并处罚金。有前款行为，同时构成其他犯罪的，依照处罚较重的规定定罪处罚。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(284, 3, 1, '驾驶人在道路上驾驶机动车追逐竞驶，情节恶劣的处3年以下有期徒刑。', 0, '', 1, 0, 1, 0, '《中华人民共和国刑法修正案（八）》第二十二、在刑法第一百三十三条后增加一条，作为第一百三十三条之一：&ldquo;在道路上驾驶机动车追逐竞驶，情节恶劣的，或者在道路上醉酒驾驶机动车的，处拘役，并处罚金&rdquo;。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(286, 3, 1, '驾驶人在道路上醉酒驾驶机动车的处3年以上有期徒刑。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十一条：饮酒后驾驶机动车的，处暂扣六个月机动车驾驶证，并处一千元以上二千元以下罚款。因饮酒后驾驶机动车被处罚，再次饮酒后驾驶机动车的，处十日以下拘留，并处一千元以上二千元以下罚款，吊销机动车驾驶证。醉酒驾驶机动车的，由公安机关交通管理部门约束至酒醒，吊销机动车驾驶证，依法追究刑事责任；五年内不得重新取得机动车驾驶证。饮酒后驾驶营运机动车的，处十五日拘留，并处五千元罚款，吊销机动车驾驶证，五年内不得重新取得机动车驾驶证。醉酒驾驶营运机动车的，由公安机关交通管理部门约束至酒醒，吊销机动车驾驶证，依法追究刑事责任；十年内不得重新取得机动车驾驶证，重新取得机动车驾驶证后，不得驾驶营运机动车。饮酒后或者醉酒驾驶机动车发生重大交通事故，构成犯罪的，依法追究刑事责任，并由公安机关交通管理部门吊销机动车驾驶证，终生不得重新取得机动车驾驶证。饮酒后或者醉酒驾驶机动车发生重大交通事故，构成犯罪的，依法追究刑事责任，并由公安机关交通管理部门吊销机动车驾驶证，终生不得重新取得机动车驾驶证。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(292, 3, 1, '对未放置检验合格标志上道路行驶的车辆，交通警察可依法予以扣留。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十五条：上道路行驶的机动车未悬挂机动车号牌，未放置检验合格标志、保险标志，或者未随车携带行驶证、驾驶证的，公安机关交通管理部门应当扣留机动车，通知当事人提供相应的牌证、标志或者补办相应手续，并可以依照本法第九十条的规定予以处罚。当事人提供相应的牌证、标志或者补办相应手续的，应当及时退还机动车。故意遮挡、污损或者不按规定安装机动车号牌的，依照本法第九十条的规定予以处罚。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(293, 3, 1, '交通警察对未放置保险标志上道路行驶的车辆可依法扣留行驶证。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十五条：上道路行驶的机动车未悬挂机动车号牌，未放置检验合格标志、保险标志，或者未随车携带行驶证、驾驶证的，公安机关交通管理部门应当扣留机动车，通知当事人提供相应的牌证、标志或者补办相应手续，并可以依照本法第九十条的规定予以处罚。当事人提供相应的牌证、标志或者补办相应手续的，应当及时退还机动车。故意遮挡、污损或者不按规定安装机动车号牌的，依照本法第九十条的规定予以处罚。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(294, 3, 1, '对有伪造或变造号牌、行驶证嫌疑的车辆，交通警察可依法予以扣留', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十六条：伪造、变造或者使用伪造、变造的机动车登记证书、号牌、行驶证、驾驶证的，由公安机关交通管理部门予以收缴，扣留该机动车，处十五日以下拘留，并处二千元以上五千元以下罚款；构成犯罪的，依法追究刑事责任。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(295, 3, 1, '对有使用伪造或变造检验合格标志嫌疑的车辆，交通警察只进行罚款处罚。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十六条：伪造、变造或者使用伪造、变造的检验合格标志、保险标志的，由公安机关交通管理部门予以收缴，扣留该机动车，处十日以下拘留，并处一千元以上三千元以下罚款；构成犯罪的，依法追究刑事责任。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(296, 3, 1, '对使用其他车辆号牌、行驶证的车辆，交通警察可依法予以扣留。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十六条：使用其他车辆的机动车登记证书、号牌、行驶证、检验合格标志、保险标志的，由公安机关交通管理部门予以收缴，扣留该机动车，处二千元以上五千元以下罚款。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(297, 3, 1, '对未按照国家规定投保交强险的车辆，交通警察可依法予以扣留。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十八条：机动车所有人、管理人未按照国家规定投保机动车第三者责任强制保险的，由公安机关交通管理部门扣留车辆至依照规定投保后，并处依照规定投保最低责任限额应缴纳的保险费的二倍罚款。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(298, 3, 1, '对发生道路交通事故需要收集证据的事故车，交通警察可以依法扣留。', 0, '', 1, 0, 1, 0, '《道路交通安全违法行为处理程序规定》第二十五条规定：有下列情形之一的，依法扣留车辆：对发生道路交通事故，因收集证据需要的，可以依法扣留事故车辆。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(299, 3, 1, '驾驶人有使用其他车辆号牌、行驶证嫌疑的，交通警察可依法扣留车辆。', 0, '', 1, 0, 1, 0, '使用其他车辆的机动车登记证书、号牌、行驶证、检验合格标志、保险标志的，由公安机关交通管理部门予以收缴，扣留该机动车，处二千元以上五千元以下罚款。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(300, 3, 1, '驾驶人有使用其他车辆检验合格标志嫌疑的，交通警察可依法扣留车辆。', 0, '', 1, 0, 1, 0, '交通警察可依法扣留车辆，等他们查清楚车的来由，当场教导让其车在指定时间内接受车辆检验并放行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(301, 3, 1, '驾驶人有使用其他车辆保险标志嫌疑的，交通警察可依法扣留车辆。', 0, '', 1, 0, 1, 0, '下列情形之一的，交通警察依法扣留车辆：（一）上道路行驶的机动车未悬挂机动车号牌，未放置检验合格标志、保险标志，或者未随车携带机动车行驶证、驾驶证的；（二）有伪造、变造或者使用伪造、变造的机动车登记证书、号牌、行驶证、检验合格标志、保险标志、驾驶证或者使用其他车辆的机动车登记证书、号牌、行驶证、检验合格标志、保险标志嫌疑的；（三）未按照国家规定投保机动车交通事故责任强制保险的；（四）公路客运车辆或者货运机动车超载的；', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(304, 3, 1, '驾驶人将机动车交给驾驶证被吊销的人驾驶的，交通警察依法扣留驾驶证。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十九条：将机动车交由未取得机动车驾驶证或者机动车驾驶证被吊销、暂扣的人驾驶的，由公安机关交通管理部门处二百元以上二千元以下罚款，可以并处吊销机动车驾驶证。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(305, 3, 1, '驾驶人将机动车交给驾驶证被暂扣的人驾驶的，交通警察给予口头警告。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十九条：将机动车交由未取得机动车驾驶证或者机动车驾驶证被吊销、暂扣的人驾驶的，由公安机关交通管理部门处二百元以上二千元以下罚款，可以并处吊销机动车驾驶证。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(306, 3, 1, '驾驶人驾驶有达到报废标准嫌疑机动车上路的，交通警察依法予以拘留。', 0, '', 1, 0, 1, 0, '驾驶人驾驶有达到报废标准嫌疑机动车上路的，交警将依法扣留车辆。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(307, 3, 1, '机动车驾驶人在一个记分周期内累积记分达到12分，拒不参加学习和考试的，将被公安机关交通管理部门公告其驾驶证停止使用。', 0, '', 1, 0, 1, 0, '《实施条例》第二十三条：公安机关交通管理部门对机动车驾驶人的道路交通安全违法行为除给予行政处罚外，实行道路交通安全违法行为累积记分(以下简称记分)制度，记分周期为12个月。对在一个记分周期内记分达到12分的，由公安机关交通管理部门扣留其机动车驾驶证，该机动车驾驶人应当按照规定参加道路交通安全法律、法规的学习并接受考试。考试合格的，记分予以清除，发还机动车驾驶证；考试不合格的，继续参加学习和考试。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(308, 3, 1, '驾驶机动车碰撞建筑物、公共设施后可即行撤离现场。', 0, '', 1, 0, 1, 0, '《实施条例》第八十八条：机动车发生交通事故，造成道路、供电、通讯等设施损毁的，驾驶人应当报警等候处理，不得驶离。机动车可以移动的，应当将机动车移至不妨碍交通的地点。公安机关交通管理部门应当将事故有关情况通知有关部门。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(309, 3, 1, '发生交通事故造成人员受伤时，要保护现场并立即报警。', 0, '', 1, 0, 1, 0, '《道路交通事故处理程序规定》第八条：发生交通事故造成人员受伤时，要保护现场并立即报警。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(310, 3, 1, '道路交通事故中，驾驶人有饮酒、醉酒嫌疑时，要保护现场并立即报警。', 0, '', 1, 0, 1, 0, '《道路交通事故处理程序规定》第八条：发生交通事故驾驶人有饮酒、醉酒嫌疑时，要保护现场并立即报警。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(311, 3, 1, '道路交通事故中，机动车无号牌、检验合格标志、保险标志时，要保护现场并立即报警。', 0, '', 1, 0, 1, 0, '《道路交通事故处理程序规定》第八条：发生交通事故机动车无号牌、检验合格标志、保险标志时，要保护现场并立即报警。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(312, 3, 1, '驾驶机动车发生财产损失交通事故，当事人对事实及成因无争议的可先撤离现场。', 0, '', 1, 0, 1, 0, '《道路交通事故处理程序规定》第十三条：机动车与机动车、机动车与非机动车发生财产损失事故，当事人对事实及成因无争议的，可以自行协商处理损害赔偿事宜。车辆可以移动的，当事人应当在确保安全的原则下对现场拍照或者标划事故车辆现场位置后，立即撤离现场，将车辆移至不妨碍交通的地点，再进行协商。非机动车与非机动车或者行人发生财产损失事故，基本事实及成因清楚的，当事人应当先撤离现场，再协商处理损害赔偿事宜。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(313, 3, 1, '驾驶机动车发生财产损失交通事故后，当事人对事实及成因无争议移动车辆时需要对现场拍照或者标划停车位置。', 0, '', 1, 0, 1, 0, '《道路交通事故处理程序规定》第十三条：机动车与机动车、机动车与非机动车发生财产损失事故，当事人对事实及成因无争议的，可以自行协商处理损害赔偿事宜。车辆可以移动的，当事人应当在确保安全的原则下对现场拍照或者标划事故车辆现场位置后，立即撤离现场，将车辆移至不妨碍交通的地点，再进行协商。非机动车与非机动车或者行人发生财产损失事故，基本事实及成因清楚的，当事人应当先撤离现场，再协商处理损害赔偿事宜。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(314, 3, 1, '机动车发生财产损失交通事故，对应当自行撤离现场而未撤离的，交通警察不可以责令当事人撤离现场。', 0, '', 1, 0, 1, 0, '《道路交通事故处理程序规定》第十三条：对应当自行撤离现场而未撤离的，交通警察应当责令当事人撤离现场；造成交通堵塞的，对驾驶人处以200元罚款；驾驶人有其他道路交通安全违法行为的，依法一并处罚。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(315, 3, 1, '机动车发生财产损失交通事故，对应当自行撤离现场而未撤离造成交通堵塞的，可以对驾驶人处以200元罚款。', 0, '', 1, 0, 1, 0, '《道路交通事故处理程序规定》第十三条：对应当自行撤离现场而未撤离的，交通警察应当责令当事人撤离现场；造成交通堵塞的，对驾驶人处以200元罚款；驾驶人有其他道路交通安全违法行为的，依法一并处罚。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(318, 3, 1, '申请小型汽车汽车驾驶证的，年龄应在18周岁以上70周岁以下。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第十一条：1、申请小型汽车等准驾车型在18周岁以上、70周岁以下；2、申请低速载货汽车、三轮汽车等准驾车型的，在18周岁以上，60周岁以下。此题正确。本题车管所已经修正。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(319, 3, 1, '酒后驾驶发生重大交通事故被依法追究刑事责任的人不能申请机动车驾驶证。', 0, '', 1, 0, 1, 0, '饮酒后或者醉酒驾驶机动车发生重大交通事故，构成犯罪的，依法追究刑事责任，并由公安机关交通管理部门吊销机动车驾驶证，终生不得重新取得机动车驾驶证。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(320, 3, 1, '造成交通事故后逃逸构成犯罪的人不能申请机动车驾驶证。', 0, '', 1, 0, 1, 0, '吊销机动车证的为二年，撤消机动车证的为三年，以醉酒吊销五年，因逃跑而吊销是终身，简称&ldquo;吊二撤三醉五逃终身&rdquo;。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(324, 3, 1, '驾驶人在驾驶证核发地车辆管理所管辖区以外居住的，可以向居住地车辆管理所申请换证。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第四十九条：机动车驾驶人户籍迁出原车辆管理所管辖区的，应当向迁入地车辆管理所申请换证。机动车驾驶人在核发地车辆管理所管辖区以外居住的，可以向居住地车辆管理所申请换证。申请时应当填写申请表，并提交第四十八条：规定的证明、凭证。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(326, 3, 1, '道路交通安全违法行为累积记分一个周期满分为12分。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第五十五条：道路交通安全违法行为累积记分周期（即记分周期）为12个月，满分为12分，从机动车驾驶证初次领取之日起计算。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(327, 3, 1, '驾驶人记分没有达到满分，有罚款尚未缴纳的，记分转入下一记分周期。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条条例》第二十四条：机动车驾驶人在一个记分周期内记分未达到12分，所处罚款已经缴纳的，记分予以清除；记分虽未达到12分，但尚有罚款未缴纳的，记分转入下一记分周期。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(330, 3, 1, '小型汽车驾驶人发生交通事故造成人员死亡，承担同等以上责任未被吊销驾驶证的，应当在记分周期结束后30日内接受审验。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第六十条：持有本条：第三款规定以外准驾车型驾驶证的驾驶人，发生交通事故造成人员死亡承担同等以上责任未被吊销机动车驾驶证的，应当在本记分周期结束后三十日内到公安机关交通管理部门接受审验。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(331, 3, 1, '驾驶人因服兵役、出国（境）等原因延期审验期间不得驾驶机动车。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第六十三条：机动车驾驶人因服兵役、出国（境）等原因，无法在规定时间内办理驾驶证期满换证、审验、提交身体条件证明的，可以向机动车驾驶证核发地车辆管理所申请延期办理。申请时应当填写申请表，并提交机动车驾驶人的身份证明、机动车驾驶证和延期事由证明。延期期限最长不超过三年。延期期间机动车驾驶人不得驾驶机动车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(333, 3, 1, '大型客车、牵引车、城市公交车、中型客车、大型货车驾驶人应当每两年提交一次身体条件证明。', 0, '', 1, 0, 1, 0, '2013年1月1日起施行的公安部123号令，已明确规定，大、中型客货车驾驶人每年参加审验，审验时自己申报身体条件情况。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(335, 3, 1, '初次申领驾驶证的驾驶人在实习期内可以单独驾驶机动车上高速公路行驶。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第六十五条：驾驶人在实习期内驾驶机动车上高速公路行驶，应当由持相应或者更高准驾车型驾驶证三年以上的驾驶人陪同。其中，驾驶残疾人专用小型自动挡载客汽车的，可以由持有小型自动挡载客汽车以上准驾车型驾驶证的驾驶人陪同。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(336, 3, 1, '驾驶人在实习期内驾驶机动车时，应当在车身后部粘贴或者悬挂统一式样的实习标志。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第六十四条：在实习期内驾驶机动车的，应当在车身后部粘贴或者悬挂统一式样的实习标志。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(337, 3, 1, '机动车驾驶人在实习期内有记满12分记录的，注销其实习的准驾车型驾驶资格。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第六十九条：机动车驾驶人在实习期内有记满12分记录的，注销其实习的准驾车型驾驶资格。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(339, 3, 1, '伪造、变造或者使用伪造、变造驾驶证的驾驶人构成犯罪的，将依法追究刑事责任。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十六条：伪造、变造或者使用伪造、变造的机动车登记证书、号牌、行驶证、驾驶证的，由公安机关交通管理部门予以收缴，扣留该机动车，处十五日以下拘留，并处二千元以上五千元以下罚款；构成犯罪的，依法追究刑事责任。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(352, 3, 1, '造成交通事故后逃逸，尚不构成犯罪的一次记12分。', 0, '', 1, 0, 1, 0, '《公安部令第123号》附件2，造成交通事故后逃逸，尚不构成犯罪的，一次记12分。凡是逃逸的均为12分。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(353, 3, 1, '饮酒后驾驶机动车的一次记12分。', 0, '', 1, 0, 1, 0, '机动车驾驶人有下列违法行为之一，一次记12分：（一）驾驶与准驾车型不符的机动车的；（二）饮酒后驾驶机动车的；（三）驾驶营运客车（不包括公共汽车）、校车载人超过核定人数20％以上的；（四）造成交通事故后逃逸，尚不构成犯罪的；（五）上道路行驶的机动车未悬挂机动车号牌的，或者故意遮挡、污损、不按规定安装机动车号牌的；（六）使用伪造、变造的机动车号牌、行驶证、驾驶证、校车标牌或者使用其他机动车号牌、行驶证的；（七）驾驶机动车在高速公路上倒车、逆行、穿越中央分隔带掉头的；（八）驾驶营运客车在高速公路车道内停车的；（九）驾驶中型以上载客载货汽车、校车、危险物品运输车辆在高速公路、城市快速路上行驶超过规定时速20％以上或者在高速公路、城市快速路以外的道路上行驶超过规定时速50％以上，以及驾驶其他机动车行驶超过规定时速50%以上的；（十）连续驾驶中型以上载客汽车、危险物品运输车辆超过4小时未停车休息或者停车休息时间少于20分钟的；（十一）未取得校车驾驶资格驾驶校车的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(354, 3, 1, '使用伪造、变造的驾驶证一次记12分。', 0, '', 1, 0, 1, 0, '《公安部令第123号》附件2，使用伪造、变造的机动车号牌、行驶证、驾驶证、校车标牌或者使用其他机动车号牌、行驶证的，一次记12分。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(355, 3, 1, '使用其他机动车号牌、行驶证的一次记3分。', 0, '', 1, 0, 1, 0, '《公安部令第123号》附件2，使用伪造、变造的机动车号牌、行驶证、驾驶证、校车标牌或者使用其他机动车号牌、行驶证的，一次记12分。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(356, 3, 1, '驾驶机动车在高速公路上倒车、逆行、穿越中央分隔带掉头的一次记6分。', 0, '', 1, 0, 1, 0, '《公安部令第123号》附件2，驾驶机动车在高速公路上倒车、逆行、穿越中央分隔带掉头的，一次记12分。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(357, 3, 1, '违反交通信号灯通行的一次记6分。', 0, '', 1, 0, 1, 0, '《公安部令第123号》附件2，驾驶机动车违反道路交通信号灯通行的，一次记6分。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(358, 3, 1, '车速超过规定时速50%以上的一次记12分。', 0, '', 1, 0, 1, 0, '《公安部令第123号》附件2，驾驶中型以上载客载货汽车、校车、危险物品运输车辆在高速公路、城市快速路上行驶超过规定时速20％以上或者在高速公路、城市快速路以外的道路上行驶超过规定时速50％以上，以及驾驶其他机动车行驶超过规定时速50%以上的，一次记12分。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(359, 3, 1, '车速超过规定时速达到50%的一次记3分。', 0, '', 1, 0, 1, 0, '《公安部令第123号》附件2，驾驶中型以上载客载货汽车、校车、危险物品运输车辆在高速公路、城市快速路上行驶超过规定时速20％以上或者在高速公路、城市快速路以外的道路上行驶超过规定时速50％以上，以及驾驶其他机动车行驶超过规定时速50%以上的，一次记12分。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(360, 3, 1, '驾驶机动车在高速公路违法占用应急车道行驶的一次记6分。', 0, '', 1, 0, 1, 0, '《公安部令第123号》附件2，驾驶机动车在高速公路或者城市快速路上违法占用应急车道行驶的，一次记6分。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(361, 3, 1, '驾驶机动车不按照规定避让校车的，一次记6分。', 0, '', 1, 0, 1, 0, '《公安部令第123号》附件2，驾驶机动车不按照规定避让校车的，一次记6分。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(363, 3, 1, '机动车达到国家规定的强制报废标准的不能办理注册登记。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第十四条：应当报废的机动车必须及时办理注销登记，所以不可办理注册登记。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(364, 3, 1, '机动车行驶证灭失、丢失，机动车所有人要向登记地车辆管理所申请补领、换领。', 0, '', 1, 0, 1, 0, '机动车号牌、行驶证灭失、丢失或者损毁的，机动车所有人应当向登记地车辆管理所申请补领、换领。申请时，机动车所有人应当填写申请表并提交身份证明。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(365, 3, 1, '机动车号牌损毁，机动车所有人要向登记地车辆管理所申请补领、换领。', 0, '', 1, 0, 1, 0, '机动车号牌、行驶证灭失、丢失或者损毁的，机动车所有人应当向登记地车辆管理所申请补领、换领。申请时，机动车所有人应当填写申请表并提交身份证明。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(367, 3, 1, '驾驶机动车行驶到这个位置时，如果车前轮已越过停止线可以继续通过。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yro539aj.jpg', 1, 0, 1, 0, '应该是车全部越过停车线才可以继续通过，前轮刚过线就红灯必须停下来，不然闯红灯。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(368, 3, 1, '驾驶机动车在这种信号灯亮的路口，可以右转弯。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yrrbtgfj.jpg', 1, 0, 1, 0, '没有问题，在红灯为圆圈，而不是方向箭头和红叉时候，右转弯的车辆只要安全的情况下就可以右转。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(369, 3, 1, '驾驶机动车在路口遇到这种信号灯禁止通行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yrsxlesj.jpg', 1, 0, 1, 0, '请看清题目。题目说遇到这种信号灯，而不是遇到这种情况。遇到绿灯肯定是可以通行的。因此本题错误。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(370, 3, 1, '绿灯亮表示前方路口允许机动车通行。', 0, '', 1, 0, 1, 0, '红灯停，绿灯行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(371, 3, 1, '驾驶机动车在路口遇到这种信号灯亮时，要在停止线前停车瞭望。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yru8fdoj.jpg', 1, 0, 1, 0, '绿灯，可放心行驶，如磨蹭变成黄灯就真需要停车观望。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(372, 3, 1, '驾驶机动车在路口遇到这种信号灯亮时，不能右转弯。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yrvs2grj.jpg', 1, 0, 1, 0, '首先，这是圆形灯，即使是红灯亮了也可以在不拥堵的情况下右转但是不能直行。再者，单向只有一个车道，绿灯就亮直行和右转都可以。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(373, 3, 1, '驾驶机动车遇到这种信号灯，可在对面直行车前直接向左转弯。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yrx9nhij.jpg', 1, 0, 1, 0, '对面车为直行，左转让直行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(375, 3, 1, '驾驶机动车在路口看到这种信号灯亮时，要加速通过。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ys0bg2zj.jpg', 1, 0, 1, 0, '《道路交通安全法实施条例》第三十八条：黄灯亮时，已越过停止线的车辆可以继续通行；未经过停止线的则禁止继续通行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(376, 3, 1, '驾驶机动车在前方路口不能右转弯。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ys1t665j.jpg', 1, 0, 1, 0, '没有指示牌和带箭头的交通灯时，红灯亦可右转。但遇到有指示牌（红灯不能右转）或交通灯右向箭头系红灯时，则不能右转！', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(377, 3, 1, '驾驶机动车遇到这种信号灯亮时，如果已越过停止线，可以继续通行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ys36mx9j.jpg', 1, 0, 1, 0, '《道路交通安全法实施条例》第三十八条：黄灯亮时，已越过停止线的车辆可以继续通行；未经过停止线的则禁止继续通行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(379, 3, 1, '遇到这种情况时，中间车道不允许车辆通行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ys6gkitj.jpg', 1, 0, 1, 0, '中间车道是红灯故不允许车辆通行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(380, 3, 1, '这辆红色轿车可以在该车道行驶。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ys82j6nj.jpg', 1, 0, 1, 0, '车辆不得进入红色叉形灯亮的车道行驶，此车道禁止通行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(381, 3, 1, '驾驶机动车要选择绿色箭头灯亮的车道行驶。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ys9m6qij.jpg', 1, 0, 1, 0, '绿色箭头灯亮的车道表示允许通行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(385, 3, 1, '驾驶机动车在这种情况下不能左转弯。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ysfpevbj.jpg', 1, 0, 1, 0, '左转红灯，所以不能左转，正确。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(386, 3, 1, '驾驶机动车在这种情况下可以右转弯。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yshd36oj.jpg', 1, 0, 1, 0, '中间的黄色实线，红绿灯有三个表示所在的车道上有三个车道，车子在最左边，表示所在的是绿灯下面的车道，也就是只能左转，不能右转，假如车子是在最右边的车道且最右边的灯形状是圆圈且右边路况允许的情况下才可以右转的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(387, 3, 1, '驾驶机动车在这种情况下不能直行和左转弯', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ysiziofj.jpg', 1, 0, 1, 0, '直行和左转都是红灯，所以不能直行和左转。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(389, 3, 1, '路口黄灯持续闪烁，警示驾驶人要注意瞭望，确认安全通过。', 0, '', 1, 0, 1, 0, '题中是持续闪烁，应该是指只有一个黄灯的路口，不是指红绿灯中的黄灯。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(390, 3, 1, '黄灯持续闪烁，表示机动车可以加速通过。', 0, '', 1, 0, 1, 0, '黄灯持续闪烁的意思是，通过持续闪光的黄灯题型机动车、非机动车、行人注意安全通过，这种信号灯往往设置在车流不大的路口或是夜间等车流平峰时段。遇到此类黄灯时，需减速慢行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(392, 3, 1, '在铁路道口遇到两个红灯交替闪烁时要停车等待。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28yssbmr5j.jpg', 1, 0, 1, 0, '交通标志中红色代表危险，两个红灯交替闪烁时表示火车要经过了，赶紧停车等待。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(393, 3, 1, '在道路与铁路道口遇到一个红灯亮时要尽快通过道口。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e28ystu0x8j.jpg', 1, 0, 1, 0, '红灯停。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(567, 3, 1, '这种标志的作用是警告车辆驾驶人前方有危险，谨慎通行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e4ft6asnowj20ds046wfb.jpg', 1, 0, 1, 0, '三个警告标志，警告车辆驾驶人前方有危险，谨慎通行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(568, 3, 1, '这个标志的作用是用以警告车辆驾驶人谨慎慢行，注意横向来车。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290j92dnvj.jpg', 1, 0, 1, 0, '警告标志十字路口，驾驶人谨慎慢行，注意横向来车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(569, 3, 1, '这个标志的含义是前方即将行驶至Y型交叉路口。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290j9lrjuj.jpg', 1, 0, 1, 0, '警告标志T型交叉路口。用以警告车辆驾驶人谨慎慢行，注意横向来车。设在平面交叉路口驶入路段的适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(570, 3, 1, '这个标志的含义是警告前方道路有障碍物，车辆减速绕行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290ja5lorj.jpg', 1, 0, 1, 0, '警告标志向右急转弯。用以警告车辆驾驶人减速慢行。设置位置为曲线起点的外面，但不应进入相邻的圆曲线内。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(571, 3, 1, '这个标志的含义是警告前方出现向左的急转弯路。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jao0u0j.jpg', 1, 0, 1, 0, '警告标志向左急转弯，行车注意安全。用以警告车辆驾驶人减速慢行。设置位置为曲线起点的外面，但不应进入相邻的圆曲线内。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(572, 3, 1, '这个标志的含义是警告前方道路易滑，注意慢行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jbi4otj.jpg', 1, 0, 1, 0, '警告标志反向弯路。用以警告车辆驾驶人减速慢行。设置位置为两反向圆曲线起点的外面，但不应进入相邻的圆曲线内。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(573, 3, 1, '这个标志的含义是警告前方有两个相邻的反向转弯道路。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jc5ylfj.jpg', 1, 0, 1, 0, '警告标志连续弯路。用以警告车辆驾驶人减速慢行。设置位置为连续弯路起点的外面，当连续弯路总长度大于500m时，应重复设置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(574, 3, 1, '这个标志的含义是提醒前方桥面宽度变窄。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jfbuskj.jpg', 1, 0, 1, 0, '警告标志两侧变窄。用以警告车辆驾驶人注意前方车行道或路面狭窄情况，遇有来车应予减速避让。设在双车道路面宽度缩减为6m以下的路段起点前方。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(575, 3, 1, '这个标志的含义是提醒前方右侧行车道或路面变窄。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jfxm7qj.jpg', 1, 0, 1, 0, '警告标志右侧变窄，行车注意安全。用以警告车辆驾驶人注意前方车行道或路面狭窄情况，遇有来车应予减速避让。设在双车道路面宽度缩减为6m以下的路段起点前方。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(576, 3, 1, '这个标志的含义是提醒前方左侧行车道或路面变窄。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jgkea1j.jpg', 1, 0, 1, 0, '警告标志左侧变窄，行车注意安全。用以警告车辆驾驶人注意前方车行道或路面狭窄情况，遇有来车应予减速避让。设在双车道路面宽度缩减为6m以下的路段起点前方。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(577, 3, 1, '这个标志的含义是提醒前方两侧行车道或路面变窄。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jh3g0fj.jpg', 1, 0, 1, 0, '警告标志窄桥。用以警告车辆驾驶人注意前方桥面宽度变窄，应谨慎驾驶。设在桥面净宽较两端路面宽度变窄，且桥的净宽小于6m的桥梁以前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(578, 3, 1, '这个标志的含义是提醒前方道路变为不分离双向行驶路段。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jhm62gj.jpg', 1, 0, 1, 0, '警告标志注意双向交通。用以提醒车辆驾驶人注意会车。设在由双向分离行驶，因某种原因出现临时性或永久性的不分离双向行驶的路段，或由单向行驶进人双向行驶的路段以前适当位置。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(579, 3, 1, '这个标志的含义是警告车辆驾驶人前方是人行横道。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290ji9hybj.jpg', 1, 0, 1, 0, '警告标志注意行人。用以警告车辆驾驶人减速慢行，注意行人。设在行人密集，或不易被驾驶员发现的人行横道线以前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(580, 3, 1, '这个标志的含义是警告车辆驾驶人前方是学校区域。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jitnmrj.jpg', 1, 0, 1, 0, '警告标志注意儿童。用以警告车辆驾驶人减速慢行，注意儿童。设在小学、幼儿园、少年宫等儿童经常出入地点前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(581, 3, 1, '这个标志的含义是警告车辆驾驶人注意前方设有信号灯。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jkhsgmj.jpg', 1, 0, 1, 0, '警告标志警告车辆驾驶人注意前方设有信号灯。用以警告车辆驾驶人注意前方路段设有信号灯，应依信号灯指示行车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(582, 3, 1, '这个标志的含义是提醒车辆驾驶人前方是傍山险路路段。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jkycq0j.jpg', 1, 0, 1, 0, '警告标志注意落石。用以提醒车辆驾驶人注意落石。设在有落石危险的傍山路段以前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(583, 3, 1, '这个标志的含义是提醒车辆驾驶人前方有很强的侧向风。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jlior8j.jpg', 1, 0, 1, 0, '警告标志注意横风标志，在山涧隧道出口处有很强的侧向风。用以提醒车辆驾驶人小心驾驶。设在经常有很强的侧向风的路段以前适当位置。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(584, 3, 1, '这个标志的含义是提醒车辆驾驶人前方是急转弯路段。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jm16a3j.jpg', 1, 0, 1, 0, '警告标志易滑路面。用以促使车辆驾驶人注意慢行。设在路滑容易发生事故的路段以前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(585, 3, 1, '这个标志的含义是提醒车辆驾驶人前方是堤坝路段。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jmpdehj.jpg', 1, 0, 1, 0, '警告标志傍山险路。用以提醒车辆驾驶人小心驾驶。设在傍山险路路段以前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(586, 3, 1, '这个标志的含义是提醒车辆驾驶人前方路段通过村庄或集镇。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jnsftrj.jpg', 1, 0, 1, 0, '警告标志注意村庄，注意行车安全。用以提醒车辆驾驶人小心驾驶。设在紧靠村庄、集镇且视线不良的路段以前适当位置。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(587, 3, 1, '这个标志的含义是提醒车辆驾驶人前方是单向行驶并且照明不好的涵洞。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jocxvtj.jpg', 1, 0, 1, 0, '警告标志注意隧道。用以提醒车辆驾驶人注意慢行。设在双向行驶并且照明不好的隧道口前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(588, 3, 1, '这个标志的含义是提醒车辆驾驶人前方是车辆渡口。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jow1tsj.jpg', 1, 0, 1, 0, '警告标志渡口。用以提醒车辆驾驶人谨慎驾驶。设在车辆渡口以前适当位置。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(589, 3, 1, '这个标志的含义是提醒车辆驾驶人前方是桥头跳车较严重的路段。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jpi65wj.jpg', 1, 0, 1, 0, '警告标志驼峰桥。用以提醒车辆驾驶人谨慎驾驶。设在拱度很大，影响视距的驼峰桥以前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(590, 3, 1, '这个标志的含义是提醒车辆驾驶人前方路面颠簸或有桥头跳车现象。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jpzx0gj.jpg', 1, 0, 1, 0, '警告标志路面不平，提醒车辆驾驶人减速慢行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(591, 3, 1, '这个标志的含义是提醒车辆驾驶人前方是过水路面或漫水桥路段。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jritcej.jpg', 1, 0, 1, 0, '警告标志过水路面，应当减速慢行。用以提醒车辆驾驶人谨慎慢行。设在过水路面或漫水桥路段以前适当位置。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(592, 3, 1, '这个标志的含义是提醒车辆驾驶人前方是无人看守铁路道口。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290js4pw0j.jpg', 1, 0, 1, 0, '警告标志有人看守铁道口。用以警告车辆驾驶人注意慢行或及时停车。设在车辆驾驶人不易发现的道口以前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(593, 3, 1, '这个标志的含义是提醒车辆驾驶人前方是无人看守铁路道口。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jsqzc3j.jpg', 1, 0, 1, 0, '警告标志无人看守铁道口，要一停，二慢，三通过。用以警告车辆驾驶人注意慢行或及时停车。设在无人看守铁路道口以前适当位置。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(594, 3, 1, '这个标志的含义是提醒车辆驾驶人前方是非机动车道。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jvfht9j.jpg', 1, 0, 1, 0, '警告标志注意非机动车。用以提醒车辆驾驶人注意慢行。设在经常有非机动车横穿、出入的地点前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(595, 3, 1, '这个标志的含义是告示前方是拥堵路段，注意减速慢行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jwqfp1j.jpg', 1, 0, 1, 0, '警告标志事故易发地点。用以告示前方道路为事故易发路段，谨慎驾驶。设在交通事故易发路段以前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(596, 3, 1, '这个标志的含义是告示前方道路施工，车辆左右绕行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jxxxqcj.jpg', 1, 0, 1, 0, '警告标志左右绕行。用以告示前方道路有障碍物，车辆应按标志指示减速慢行。设在道路障碍物前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(597, 3, 1, '这个标志的含义是告示前方道路有障碍物，车辆左侧绕行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jyl1xij.jpg', 1, 0, 1, 0, '警告标志左侧绕行，注意安全。用以告示前方道路有障碍物，车辆应按标志指示减速慢行。设在道路障碍物前适当位置。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(598, 3, 1, '这个标志的含义是告示前方道路是单向通行路段。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290jz5xx5j.jpg', 1, 0, 1, 0, '警告标志右侧绕行。用以告示前方道路有障碍物，车辆应按标志指示减速慢行。设在道路障碍物前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(599, 3, 1, '这个标志的含义是告示前方是塌方路段，车辆应绕道行驶。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290k088jjj.jpg', 1, 0, 1, 0, '警告标志注意施工。用以告示前方道路施工，车辆应减速慢行或绕道行驶。该标志可以作为临时标志支设在施工路段以前适当位置。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(600, 3, 1, '这个标志的含义是告示车辆驾驶人应慢行或停车，确保干道车辆优先。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290k7o9gpj.jpg', 1, 0, 1, 0, '警告标志告示车辆驾驶人应慢行或停车，确保干道车辆优先。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(601, 3, 1, '这个标志的含义是表示车辆会车时，对方车辆应停车让行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e290k87z15j.jpg', 1, 0, 1, 0, '禁令标志，会车让行。箭头粗的方向先行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(602, 3, 1, '这个标志的含义是指示此处设有室内停车场', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e2916smnqfj.jpg', 1, 0, 1, 0, 'P字上边没有遮挡，说明是露天停车场，如果P字上边有遮挡就是室内停车场了。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(603, 3, 1, '这个标志的含义是指示此处设有室内停车场。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e2916wdqz2j.jpg', 1, 0, 1, 0, 'P字上边有遮挡就是室内停车场了。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(604, 3, 1, '路中心黄色虚线的含义是分隔对向交通流，在保证安全的前提下，可越线超车或转弯。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e2917lbk04j.jpg', 1, 0, 1, 0, '黄色虚线是中心线，可以跨越转弯、超车；黄色单实线就已经不能跨越了；黄色双实线是严格禁止压线或者跨越。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(605, 3, 1, '这个地面标记的含义是预告前方设有交叉路口。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e2917umre1j.jpg', 1, 0, 1, 0, '指示标线，人行横道预警棱形图标。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(606, 3, 1, '路中心的双黄实线作用是分隔对向交通流，在保证安全的前提下，可越线超车或转弯。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e2918bmuuej.jpg', 1, 0, 1, 0, '禁止标线，禁止车辆越线超车或转弯。', 0, 0, '', 0, '2', 0, 0, '', '', '');
INSERT INTO `qb_exam_content3` (`id`, `mid`, `fid`, `title`, `ispic`, `picurl`, `uid`, `view`, `status`, `replynum`, `content`, `create_time`, `update_time`, `ip`, `list`, `answer`, `ext_sys`, `ext_id`, `grade`, `kemu`, `step`) VALUES
(690, 3, 1, '夜间行车，驾驶人视距变短，影响观察，同时注意力高度集中，易产生疲劳。', 0, '', 1, 0, 1, 0, '夜间光线不好，视距变短。为了观察路况，注意力需高度集中，容易产生疲劳。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(691, 3, 1, '冰雪道路行车，由于积雪对光线的反射，极易造成驾驶人目眩而产生错觉。', 0, '', 1, 0, 1, 0, '积雪是白色，反射的光线很强，容易造成驾驶人目眩。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(692, 3, 1, '在冰雪道路上行车时，车辆的稳定性降低，加速过急时车轮极易空转或溜滑。', 0, '', 1, 0, 1, 0, '轮胎与地面的摩擦系数降低，轮胎不易附着在地面上，只要一加速，就极易空转或溜滑。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(693, 3, 1, '在泥泞路上制动时,车轮易发生侧滑或甩尾，导致交通事故。', 0, '', 1, 0, 1, 0, '泥泞路摩擦系数低，制动时极易产生侧滑。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(694, 3, 1, '漫水道路行车时，应挂高速档，快速通过。', 0, '', 1, 0, 1, 0, '不应该挂高速挡，应选用低速挡，以保证汽车有足够的驱动力；入水时应平稳，以防溅起的水花落入电器设备，造成电器短路；发动机中速运转，保持车速，中途不得停车、换挡和急转转向盘。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(695, 3, 1, '行车中突遇对向车辆强行超车，占据自己车道时，可不予避让，迫使对方让路。', 0, '', 1, 0, 1, 0, '开车一般是以安全为主，文明行驶，礼貌让行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(708, 3, 1, '一个合格的驾驶人，不仅表现在技术的娴熟上，更重要的是应该具有良好的驾驶行为习惯和道德修养。', 0, '', 1, 0, 1, 0, '娴熟的技术固然重要，但没有良好的驾驶习惯和道德修养，同样会破坏正常的交通秩序。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(709, 3, 1, '驾驶车辆在道路上行驶时，应当按照规定的速度安全行驶。', 0, '', 1, 0, 1, 0, '安全驾驶，按规定行驶。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(710, 3, 1, '驾驶人一边驾车，一边打手持电话是违法行为。', 0, '', 1, 0, 1, 0, '以前所有驾车违规行为简称“违章”行为，2004年5月1日，上升为道路交通安全法。所有“违章“行为变成“违法”行为。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(711, 3, 1, '在道路上超车时，应尽量加大横向距离，必要时可越实线超车。', 0, '', 1, 0, 1, 0, '实线不能跨越，本题描述错误。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(712, 3, 1, '在道路上跟车行驶时，跟车距离不是主要的，只须保持与前车相等的速度，即可防止发生追尾事故。', 0, '', 1, 0, 1, 0, '不保持安全跟车距离，前方遇紧急情况急刹车，后方会来不及反应，造成追尾。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(713, 3, 1, '谨慎驾驶的三原则是集中注意力、仔细观察和提前预防。', 0, '', 1, 0, 1, 0, '谨慎驾驶的三原则是集中注意力、仔细观察和提前预防。一定要牢记哦。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(714, 3, 1, '遇到路口情况复杂时，应做到“宁停三分，不抢一秒”。', 0, '', 1, 0, 1, 0, '安全驾驶，礼貌让行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(715, 3, 1, '行车中要文明驾驶，礼让行车，做到不开英雄车、冒险车、赌气车和带病车。', 0, '', 1, 0, 1, 0, '安全驾驶，礼貌让行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(716, 3, 1, '驾驶人在观察后方无来车的情况下，未开转向灯就变更车道也是合理的。', 0, '', 1, 0, 1, 0, '安全驾驶，安全第一，要严格按照变道的步骤执行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(717, 3, 1, '女驾驶人穿高跟鞋驾驶车辆，不利于安全行车。', 0, '', 1, 0, 1, 0, '穿高跟鞋踏制动踏板危险，不利于安全行车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(718, 3, 1, '驾驶车辆时，长时间左臂搭在车门窗上，或者长时间右手抓住变速器操纵杆，是一种驾驶陋习。', 0, '', 1, 0, 1, 0, '这是一种陋习，但还算不上是违法。因为这样久了，会导致血脉不通，手臂麻木，容易出事！', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(719, 3, 1, '驾驶人一边驾车，一边吸烟对安全行车无影响。', 0, '', 1, 0, 1, 0, '驾驶车辆吸烟对车上乘客有害，烟雾会使驾驶员视线模糊，所以对安全行车是有影响的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(720, 3, 1, '在狭窄的路段会车时，应做到礼让三先：先慢、先让、先停。', 0, '', 1, 0, 1, 0, '文明行车，礼貌让行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(755, 3, 1, '驾驶车辆变更车道时，应提前开启转向灯，注意观察，保持安全距离，驶入要变更的车道。', 0, '', 1, 0, 1, 0, '变更车道时提前开启转向灯提醒后车，然后观察有无变更车道的条件，再保持安全距离，驶入要变更的车道。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(756, 3, 1, '驾驶车辆向右变更车道时，应提前开启右转向灯，注意观察，在确保安全的情况下，驶入要变更的车道。', 0, '', 1, 0, 1, 0, '开启转向灯，并观察周围情况，确保安全。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(757, 3, 1, '变更车道时只需开启转向灯，便可迅速转向驶入相应的行车道。', 0, '', 1, 0, 1, 0, '不仅要提前开启转向灯，还应观察周边情况，判断有无变更车道的条件，在保持安全距离的情况下，驶入要变更的车道。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(758, 3, 1, '驾驶车辆汇入车流时，应提前开启转向灯，保持直线行驶，通过后视镜观察左右情况，确认安全后汇入合流。', 0, '', 1, 0, 1, 0, '在汇入车流是先开转向灯的，是为了提示后面的车避让留下进入车流的空隙，保持直行一段，因为是汇入合流，要确认好车与车横向空隙就要用后视镜看左右了。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(759, 3, 1, '变更车道时，应开启转向灯，迅速驶入侧方车道。', 0, '', 1, 0, 1, 0, '注意迅速两字，驶入前先观察后慢慢变道。变更车道除了提前开启转向灯，还应观察周边交通情况，在保证安全的情况下驶入要变更的车道。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(760, 3, 1, '行车中从其他道路汇入车流前，应注意观察侧后方车辆的动态。', 0, '', 1, 0, 1, 0, '行车中从其他道路线汇入车流前，应注意观察侧后方车辆的动态，后侧方是同向来车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(761, 3, 1, '驾驶车辆通过人行横道线时，应注意礼让行人。', 0, '', 1, 0, 1, 0, '文明驾驶，礼貌让行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(762, 3, 1, '车辆起步前，驾驶人应对车辆周围交通情况进行观察，确认安全时再开始起步。', 0, '', 1, 0, 1, 0, '这道题里的话并没有错，观察周围只是起步前准备工作的一部分，并没有说是不用打转向灯的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(763, 3, 1, '车辆在路边起步后应尽快提速，并向左迅速转向驶入正常行驶道路。', 0, '', 1, 0, 1, 0, '需要先观察，安全才能开过去，不是一起步就迅速正常行驶道行驶，万一后面有车是很危险的，所以“迅速”是错的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(764, 3, 1, '倒车过程中要缓慢行驶，注意观察车辆两侧和后方的情况，随时做好停车准备。', 0, '', 1, 0, 1, 0, '相同车道上前面是没车，车都是从后面来的。另外题目中并没有说不要看前面，只是说注意观察两侧和后方的情况。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(765, 3, 1, '预计在超车过程中与对面来车有会车可能时，应提前加速超越。', 0, '', 1, 0, 1, 0, '预计在超车过程中与对面来车有会车可能时，应当放弃超车。若加速超越，有可能会引起不必要的事故。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(766, 3, 1, '通过隧道时，不得超车。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第四十三条：同车道行驶的机动车，后车应当与前车保持足以采取紧急制动措施的安全距离。有下列情形之一的，不得超车：（一）前车正在左转弯、掉头、超车的；（二）与对面来车有会车可能的；（三）前车为执行紧急任务的警车、消防车、救护车、工程救险车的；（四）行经铁路道口、交叉路口、窄桥、弯道、陡坡、隧道、人行横道、市区交通流量大的路段等没有超车条件的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(767, 3, 1, '通过铁路道口时，不得超车。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第四十三条：同车道行驶的机动车，后车应当与前车保持足以采取紧急制动措施的安全距离。有下列情形之一的，不得超车：（四）行经铁路道口、交叉路口、窄桥、弯道、陡坡、隧道、人行横道、市区交通流量大的路段等没有超车条件的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(768, 3, 1, '通过急转弯路段时，在车辆较少的情况下可以超车。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第四十三条：同车道行驶的机动车，后车应当与前车保持足以采取紧急制动措施的安全距离。有下列情形之一的，不得超车：（四）行经铁路道口、交叉路口、窄桥、弯道、陡坡、隧道、人行横道、市区交通流量大的路段等没有超车条件的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(769, 3, 1, '通过窄路、窄桥时，不得超车。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第四十三条：同车道行驶的机动车，后车应当与前车保持足以采取紧急制动措施的安全距离。有下列情形之一的，不得超车：（四）行经铁路道口、交叉路口、窄桥、弯道、陡坡、隧道、人行横道、市区交通流量大的路段等没有超车条件的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(770, 3, 1, '车辆转弯时应沿道路右侧行驶，不要侵占对方的车道，做到“左转转大弯，右转转小弯”。', 0, '', 1, 0, 1, 0, '左转转大弯，但当心身后非机动车。右转转小弯，当心对面右行驶和身后的车吧！', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(771, 3, 1, '驾驶车辆进入交叉路口前，应降低行驶速度，注意观察，确认安全。', 0, '', 1, 0, 1, 0, '安全驾驶，减速慢行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(772, 3, 1, '车辆通过铁道路口时，应用低速挡安全通过，中途不得换挡，以避免发动机熄火。', 0, '', 1, 0, 1, 0, '通过铁路道口，安全第一。中途换挡如果发生熄火，万一这时火车刚开过来了，很危险。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(773, 3, 1, '行车中，发现行人突然横过道路时，应迅速减速避让。', 0, '', 1, 0, 1, 0, '安全驾驶，礼貌让行。碰到行人的一定避让，减速，甚至停车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(774, 3, 1, '当行人出现交通安全违法行为时，车辆可以不给行人让行。', 0, '', 1, 0, 1, 0, '安全驾驶，礼貌让行。碰到行人的一定避让，减速，甚至停车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(775, 3, 1, '车辆在交叉路口绿灯亮后，遇非机动车抢道行驶时，可以不让行。', 0, '', 1, 0, 1, 0, '安全驾驶，礼貌让行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(776, 3, 1, '掉头过程中，应严格控制车速，仔细观察道路前后方情况，确认安全后方可前进或倒车。', 0, '', 1, 0, 1, 0, '文明驾驶，安全第一。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(777, 3, 1, '行车中遇残疾人影响通行时，应主动减速礼让。', 0, '', 1, 0, 1, 0, '安全驾驶，礼貌让行。看到关于避让题目，都遵循避让礼让的原则。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(778, 3, 1, '设有安全带装置的车辆，应要求车内乘员系安全带。', 0, '', 1, 0, 1, 0, '系安全带有利于安全行车、乘车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(779, 3, 1, '行车中前方遇自行车影响通行时，可鸣喇叭提示，加速绕行。', 0, '', 1, 0, 1, 0, '题目说“自行车影响通行”说明前方交通状况不佳，应减速紧随其后，道路宽度允许通过时谨慎通过。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(780, 3, 1, '机动车在环形路口内行驶，遇有其他车辆强行驶入时，只要有优先权就可以不避让', 0, '', 1, 0, 1, 0, '安全驾驶，文明行车。能让就尽量让行。看到关于避让题目，都遵循避让礼让的原则。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(781, 3, 1, '车辆行至交叉路口时，左转弯车辆在任何时段都可以进入左弯待转区。', 0, '', 1, 0, 1, 0, '直行车辆放行时才可进入左转待转区。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(782, 3, 1, '车辆行至急转弯处时，应减速并靠右侧行驶，防止与越过弯道中心线的对方车辆相撞。', 0, '', 1, 0, 1, 0, '通过急弯靠右行驶，给对向来车留出足够的行车空间，慢行能在遇到突发状况时有足够的反应时间。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(783, 3, 1, '车辆长时间停放时，应选择停车场停车。', 0, '', 1, 0, 1, 0, '车辆长时间停放时，应选择停车场停车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(784, 3, 1, '车辆通过学校和小区应注意观察标志标线，低速行驶，不要鸣喇叭。', 0, '', 1, 0, 1, 0, '学校区域和居民区通常禁止鸣笛，减少噪音，以免影响居民生活和学生学习。同时，这些地方人流量大，要时时留意交通状况，减速慢行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(792, 3, 1, '车辆驶入匝道后，迅速将车速提高到每小时60公里以上。', 0, '', 1, 0, 1, 0, '应该是从匝道进入高速公路加速车道，在加速车道里迅速将车速提高到每小时60公里以上。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(793, 3, 1, '车辆在高速公路匝道上可以停车。', 0, '', 1, 0, 1, 0, '规定：驶入确定匝道后，迅速提高车速，但不得超过规定速度，在匝道上，不准超车、掉头、停车、和倒车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(794, 3, 1, '车辆不得在高速公路匝道上掉头。', 0, '', 1, 0, 1, 0, '规定：驶入确定匝道后，迅速提高车速，但不得超过规定速度，在匝道上，不准超车、掉头、停车、和倒车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(795, 3, 1, '车辆不得在高速公路匝道上倒车。', 0, '', 1, 0, 1, 0, '规定：驶入确定匝道后，迅速提高车速，但不得超过规定速度，在匝道上，不准超车、掉头、停车、和倒车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(796, 3, 1, '车辆在高速公路匝道提速到每小时60公里以上时，可直接驶入行车道。', 0, '', 1, 0, 1, 0, '错误的关键在于“直接”两个字，正确的做法是应该先打开左转向灯，再在不妨碍已在高速公路内的机动车正常行驶的情况下驶入车道。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(797, 3, 1, '车辆应靠高速公路右侧的路肩上行驶。', 0, '', 1, 0, 1, 0, '右侧路肩是供车辆出现紧急状况时停车的，不可在此行车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(798, 3, 1, '车辆在高速公路以每小时100公里的速度行驶时，距同车道前车100米以上为安全距离。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第八十条：机动车在高速公路上行驶，车速超过每小时100公里时，应当与同车道前车保持100米以上的距离，车速低于每小时100公里时，与同车道前车距离可以适当缩短，但最小距离不得少于50米。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(799, 3, 1, '车辆在高速公路上行车，可以频繁地变更车道。', 0, '', 1, 0, 1, 0, '车辆在高速公路上行车,可以变更车道，但不可以“频繁”的变更车道。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(800, 3, 1, '车辆驶离高速公路时，应当经减速车道减速后进入匝道。', 0, '', 1, 0, 1, 0, '匝道：立交桥和高架路上下两条道路相连接的路段，也指高速公路与邻近的辅路相连接的路段。高架路的匝道，进口路和出口路是分开的，只能顺行，不准掉头，车辆错过了下匝道，就不能从上匝道下路，只能从下一个下匝道下路。立交桥的匝道，也是按照设定的标志行驶，谁也不能各行其是。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(801, 3, 1, '在高速公路变更车道时，应提前开启转向灯，观察情况，确认安全后，驶入需要变更的车道。', 0, '', 1, 0, 1, 0, '高速上速度很快，猛打方向盘会导致撞防护栏。缓转方向变更车道更加安全。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(802, 3, 1, '高速公路因发生事故造成堵塞时，可在右侧紧急停车带或路肩行驶。', 0, '', 1, 0, 1, 0, '在高速公路因发生事故造成堵塞的情况下，右侧紧急停车带是供救援车辆使用。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(803, 3, 1, '行驶在高速公路上遇大雾视线受阻时，应当立即紧急制动停车。', 0, '', 1, 0, 1, 0, '大雾天气视线不佳，紧急制动容易发生追尾事故，要逐渐减速停车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(804, 3, 1, '机动车在高速公路上遇前方交通受阻时，应当跟随前车顺序排队，并立即开启危险报警闪光灯，防止追尾。', 0, '', 1, 0, 1, 0, '危险报警闪光灯，通常称为双闪，是一种提醒其他车辆与行人注意本车发生了特殊情况的信号灯。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(805, 3, 1, '在高速公路上遇分流交通管制时，可不驶出高速公路，就地靠边停靠等待管制结束后继续前行。', 0, '', 1, 0, 1, 0, '高速公路的分流交通管制就是指在高速公路上遇到紧急情况后，将后续来车在匝道口进行管制通行，避免次生事故和交通拥堵，亦或是有紧急交通勤务警卫，需要提前封闭道路，故提前分流车辆。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(806, 3, 1, '小型客车行驶在平坦的高速公路上，突然有颠簸感觉时，应迅速降低车速，防止爆胎。', 0, '', 1, 0, 1, 0, '在高速公路上遇到这种情况，应该松油门抓紧方向盘稳住车方向，降低车速，车稳住方向后停到紧急停车带就行检查。不得马上停车或停在路中间，防止后面车辆追尾事故。停车后打开危险警示灯。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(807, 3, 1, '在高速公路上行驶感觉疲劳时，应立即停车休息。', 0, '', 1, 0, 1, 0, '在高速公路上不能随意停车休息，应在休息区或者服务区停车休息。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(808, 3, 1, '《道路交通安全法实施条例》规定，高速公路上最高时速不得超过120公里。因此在高速公路上行驶只要时速不超过120公里就不违法。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》规定高速公路，有最低速度60公里，最高速度120公里，这道题只说了不超过120公里，没说不能低于60公里。所以是错的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(809, 3, 1, '车辆在高速公路行驶时，可以仅凭感觉确认车速。', 0, '', 1, 0, 1, 0, '感觉不一定准确，还是要看时速表的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(816, 3, 1, '车辆上坡行驶，要提前观察路况、坡道长度，及时减挡使车辆保持充足的动力。', 0, '', 1, 0, 1, 0, '高档属于快速档，而低档却用于起步或者作有重力的运动而使用，上坡本然就形成一种重力，需要足够的马力才可以行驶，所以需要将档位降低才可以。如果使用高档，很可能由于发动机功率不够导致熄火，甚至溜车！', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(817, 3, 1, '车辆下坡行驶，要适当控制车速，充分利用发动机进行制动。', 0, '', 1, 0, 1, 0, '防止下坡时刹车发生打滑，所以应该利用发动机制动。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(818, 3, 1, '车辆下长坡时要减挡行驶，以充分利用发动机的制动作用。', 0, '', 1, 0, 1, 0, '变速箱高档位高速持续运转中，迅速降低变速箱的档位转速，使变速箱的低档位转速对车辆本身的惯性高速产生抑制，从而产生短时间内的所谓发动机制动(变速箱制动)。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(819, 3, 1, '车辆在通过山区道路弯道时，要做到“减速、鸣喇叭、靠右行”。', 0, '', 1, 0, 1, 0, '通过弯道时，大家都知道要减速，而在山区道路，由于前方状况很难了解，因此，若要经过弯道，应当鸣号告知其他车辆你要通过弯道了，靠右行是为了避免在弯道时遇到对向来车，若不靠右行驶，很可能会与来车发生碰撞。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(820, 3, 1, '车辆在山区道路行车下陡坡时，不得超车。', 0, '', 1, 0, 1, 0, '行经繁华路段、交叉路口、铁路道口、人行横道、急转弯、宽度不足4米的窄路或者窄桥、陡坡、隧道或者容易发生危险的路段，不得超车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(821, 3, 1, '车辆在下坡行驶时，可充分利用空挡滑行。', 0, '', 1, 0, 1, 0, '危险动作，下坡时，不准熄火或用空挡。如果下坡空档滑行，只靠刹车来控制车速，遇到连续下坡的时候可能会造成刹车负担过重，刹车片过热而失灵。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(822, 3, 1, '车辆进入山区道路后，要特别注意“连续转弯”标志，并主动避让车辆及行人，适时减速和提前鸣喇叭。', 0, '', 1, 0, 1, 0, '山区本来就是有山的地势，自然就会有坡度，以及拐弯，连续的弯路，容易影响行车的视线，所以要注意“连续转弯”的标志，以防在转弯处突然出现对向来车，为了安全，当然要适时减速和提前鸣喇叭，以提醒车辆与行人。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(823, 3, 1, '车辆在山区上坡路驾驶，减挡要及时、准确、迅速，避免拖挡行驶导致发动机动力不足。', 0, '', 1, 0, 1, 0, '上坡前要减档，避免因动力不足脱档或者熄火。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(824, 3, 1, '通过山区危险路段，尤其是通过经常发生塌方、泥石流的山区地段，应谨慎驾驶，避免停车。', 0, '', 1, 0, 1, 0, '为了安全着想，应尽量避免停车，以免遇到泥石流遇险。不是说不能停车，只是避免！', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(825, 3, 1, '通过经常发生塌方、泥石流的山区地段，避免停车。', 0, '', 1, 0, 1, 0, '为了安全着想，应尽量避免停车，以免遇到泥石流遇险。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(827, 3, 1, '立交桥上一般都是单向行驶，车辆不必减速行驶。', 0, '', 1, 0, 1, 0, '立交桥上车多，路窄，弯多，应减速行驶。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(830, 3, 1, '夜间行车，驾驶人的视野受限，很难观察到灯光照射区域以外的交通情况，因此要减速行驶。', 0, '', 1, 0, 1, 0, '晚上开车的时候受到光线暗的局限，相对观察事物的距离也就受到局限，所以视距比较短，因此很难观察到灯光照射区域以外的交通情况。为了安全考虑，减速行驶是必须的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(831, 3, 1, '夜间驾驶人对事物的观察能力明显比白天差，视距变短。', 0, '', 1, 0, 1, 0, '此题说的意思是，在白天开车的时候由于光线比较充足，所以观察事物的范围比较广，观察事物的视线距离相对也就比较大，而在晚上受到光线暗的局限，相对观察事物的距离也就受到局限，所以视距比较短，而并不是说人本身的观察有问题，所以此题是正确的！', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(832, 3, 1, '夜间起步前，应当先开启近光灯。', 0, '', 1, 0, 1, 0, '开启近光，能更好的观察周围环境，有利于安全行车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(833, 3, 1, '夜间会车时，若对方车辆不关闭远光灯，可变换灯光提示对向车辆，同时减速靠右侧行驶或停车。', 0, '', 1, 0, 1, 0, '夜间安全驾驶知识中第三条就有：“夜间会车应当在距对方来车150米以外改用近光灯，若对方车辆不关闭远光灯，可连续变换灯光提示对向车辆。当遇对面来车仍不关闭远光灯是，应及时减速靠右侧行驶或停车让行。”', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(834, 3, 1, '夜间通过没有路灯或路灯照明不良时，应将近光灯转换为远光灯，但同向行驶的后车不得使用远光灯。', 0, '', 1, 0, 1, 0, '通过没有路灯或路灯照明不良的路段（非路口）时可以开启远光灯，但是前方有车或行人时，为了不影响他人视线，应关闭远光，改用近光。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(835, 3, 1, '夜间行车，遇对面来车未关闭远光灯时，应减速行驶，以防两车灯光的交汇处有行人通过时发生事故。', 0, '', 1, 0, 1, 0, '远光会影响视线，容易引发危险，为了安全，减速慢行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(836, 3, 1, '夜间通过无交通信号灯控制的交叉路口时，不得变换远、近光灯。', 0, '', 1, 0, 1, 0, '《实施条例》第五十九条：机动车在夜间通过急弯、坡路、拱桥、人行横道或者没有交通信号灯控制的路口时，应当交替使用远近光灯示意。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(837, 3, 1, '夜间行车，要尽量避免超车，确需超车时，可变换远近光灯向前车示意。', 0, '', 1, 0, 1, 0, '只要在确保安全和不违规的情况下都可以超车。变换远近灯光是为了提醒前方车辆的注意，虽然只是一个动作，但对于保证安全来说却是很重要的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(838, 3, 1, '夜间尾随前车行驶时，后车可以使用远光灯。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第五十八条　机动车在夜间没有路灯、照明不良或者遇有雾、雨、雪、沙尘、冰雹等低能见度情况下行驶时，应当开启前照灯、示廓灯和后位灯，但同方向行驶的后车与前车近距离行驶时，不得使用远光灯。机动车雾天行驶应当开启雾灯和危险报警闪光灯。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(844, 3, 1, '风、雨、雪、雾等复杂气象条件，遇前车速度较低时，应开启前照灯，连续鸣喇叭迅速超越。', 0, '', 1, 0, 1, 0, '风、雨、雪、雾等复杂气象条件需减速行驶，不得超车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(845, 3, 1, '雨天路面湿滑，车辆制动距离增大，行车中尽量使用紧急制动减速。', 0, '', 1, 0, 1, 0, '因为路面比较滑，如果紧急制动（急刹车），容易造成车辆失控，所以用发动机制动。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(846, 3, 1, '浓雾天气能见度低，开启远光灯会提高能见度。', 0, '', 1, 0, 1, 0, '不能开启远光灯，因浓雾会反射灯光。雾天行车应开启雾灯和危险报警闪光灯，不是远光。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(847, 3, 1, '连续降雨天气，山区公路可能会出现路肩疏松和堤坡坍塌现象，行车时应选择道路中间坚实的路面，避免靠近路边行驶。', 0, '', 1, 0, 1, 0, '请注意，这是山区公路，又是连续降雨天气，如果开外侧，容易掉下悬崖，如果开内侧容易被塌方和落实砸到，这些都是不可控的，你不知道什么时候会发生。而选择在道路中间行驶，对面有车过来时，你是有预警时间的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(848, 3, 1, '雾天行车多使用喇叭可引起对方注意；听到对方车辆鸣喇叭，也应鸣喇叭回应。', 0, '', 1, 0, 1, 0, '雾天视线不佳，喇叭可当做一种信号和其他车辆交流，有利于安全行车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(849, 3, 1, '在冰雪路面上行车，必须降低车速、加大安全距离。', 0, '', 1, 0, 1, 0, '冰雪路面行驶时，制动距离比平时要大。因此要考虑到紧急状况。如果出现紧急情况，需要有足够的制动距离。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(850, 3, 1, '雪天行车中，在有车辙的路段应循车辙行驶。', 0, '', 1, 0, 1, 0, '驾驶人看不到路面的状况，容易陷入水坑等。冰雪路同样如此，你看不到冰雪下的路面，很容易陷入坑坑洼洼。而沿着前车的车辙行驶，可以保证安全。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(851, 3, 1, '车辆在冰雪路面紧急制动易产生侧滑，应低速行驶，可利用发动机制动进行减速。', 0, '', 1, 0, 1, 0, '发动机制动：行车（挂上排档，不是空档）中，油门一收，便产生发动机制动！原理：主要靠（停止供油）发动机的压缩力而制止车辆的前进。行车制动：通过刹车踏板，把人体的力量，由总泵至分泵加上助力器的作用，迫使刹车片与刹车盘或刹车毂磨擦至车辆停止前进。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(852, 3, 1, '车辆行至泥泞或翻浆路段时，应停车观察，选择平整、坚实的路段缓慢通过。', 0, '', 1, 0, 1, 0, '泥泞翻浆路段行车容易发生侧滑，停车观察，降低车速，应选择平整、坚实的路段缓慢通过。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(853, 3, 1, '在大雨天行车，为避免发生“水滑”而造成危险，要控制速度行驶。', 0, '', 1, 0, 1, 0, '避免水滑最根本的办法就是降低车速。减速或者停车都是为了安全。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(857, 3, 1, '驾驶人发现轮胎漏气，将车辆驶离主车道时，不要采用紧急制动，以免造成翻车或后车采取制动不及时导致追尾事故。', 0, '', 1, 0, 1, 0, '连续轻踏制动，缓慢将车停下，更换轮胎。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(858, 3, 1, '车辆后轮胎爆裂，车尾会摇摆不定，驾驶人应双手紧握转向盘，控制车辆保持直线行驶，减速停车。', 0, '', 1, 0, 1, 0, '如果突然爆胎，瞬间靠右，会导致与后方来车相撞，所以只能先保持直线行驶，再减速停车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(859, 3, 1, '行车中当驾驶人意识到爆胎时，应在控制住方向的情况下，轻踏制动踏板，使车辆缓慢减速，逐渐平稳地停靠于路边。', 0, '', 1, 0, 1, 0, '如果写的意识到爆胎，说明还没爆，可以轻刹；如果已经爆了，刹车容易翻车，所以抢档好些。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(860, 3, 1, '行车中当车辆突然爆胎时，驾驶人切忌慌乱中急踏制动踏板，尽量采用“抢挡”的方法，利用发动机制动使车辆减速。', 0, '', 1, 0, 1, 0, '由于车胎爆胎，紧急制动会侧滑。所以只能用抢挡，用发动机制动。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(861, 3, 1, '车辆前轮胎爆裂，危险较大，方向会立刻向爆胎车轮一侧跑偏，直接影响驾驶人对转向盘的控制。', 0, '', 1, 0, 1, 0, '如果车速过快，很有可能造成事故。碰到这种情况的时候，切忌不要慌张，不要向相反的方向猛打方向盘，要尽量保持车子直线行驶，同时降低车速，切记不可急刹车，要缓慢降低车速，还有打开安全警告灯，注意后方来车，条件允许的话，把车子驶离行车道，靠右边车道停车。碰到这种情况，切记不要慌，首要的就是先稳住车辆。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(862, 3, 1, '车辆发生爆胎后，驾驶人在尚未控制住车速前，不要冒险使用行车制动器停车，以避免车辆横甩发生更大的险情。', 0, '', 1, 0, 1, 0, '行车制动=制动踏板=脚刹，爆胎后，驾驶人在尚未控制住车速的时候，是不能急踩刹车的，要不然会横甩或者翻车已经后面来车追尾。正确的做法应该是紧握方向盘，控制方向，极力保持直线行驶，利用发动机制动，减档或抢档减速度，轻踏制动踏板缓慢减速，平稳靠边停车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(863, 3, 1, '行车中当车辆前轮爆胎已发生转向时，驾驶人应双手紧握转向盘，尽力控制车辆直线行驶。', 0, '', 1, 0, 1, 0, '行车中当车辆前轮爆胎已发生转向时：第一步：驾驶人应双手紧握转向盘，尽力控制车辆转回原行驶路线。为什么要这么做？如果不控制方向，很容易翻车，如果急刹车，也很容翻车。第二步：随后开始减速打起右转向灯，然后靠右最终使车停在路肩上。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(864, 3, 1, '行车中当驾驶人意识到车辆爆胎时，应在控制住方向的情况下采取紧急制动，迫使车辆迅速停住。', 0, '', 1, 0, 1, 0, '爆胎是要利用发动机缓慢制动停车的，紧急制动搞不好会造成翻车事故。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(869, 3, 1, '仪表显示当前车速是20公里/小时。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291tvlsy0j.jpg', 1, 0, 1, 0, '此表为发动机转速表，表示目前发动机转速为2000转/分钟。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(870, 3, 1, '仪表显示当前发动机转速是6000转/分钟。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291twu9rkj.jpg', 1, 0, 1, 0, '此表为时速和里程表，表示目前车速为60公里/小时。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(871, 3, 1, '仪表显示当前冷却液的温度是90度。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291txg0w2j.jpg', 1, 0, 1, 0, '此表为水温表，表示当前水温为90℃。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(872, 3, 1, '仪表显示油箱内存油量已在警告线以内。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291txxms9j.jpg', 1, 0, 1, 0, '正确，此时应及时补充燃油。看到加油站那个机油的机器没，而且指针都到红色区了，说明油量不足了。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(876, 3, 1, '打开前雾灯开关，（如图所示）亮起。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291u0o7dlj.jpg', 1, 0, 1, 0, '前雾灯绿色光朝左，后雾灯黄色光朝右。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(877, 3, 1, '打开后雾灯开关，（如图所示）亮起。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291u1ch86j.jpg', 1, 0, 1, 0, '前雾灯绿色光朝左，后雾灯黄色光朝右。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(878, 3, 1, '打开位置灯开关，（如图所示）亮起。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291u1ygk5j.jpg', 1, 0, 1, 0, '该指示灯是用来显示车辆示宽灯的工作状态，平时为熄灭状态，当示宽灯打开时，该指示灯随即点亮。当示宽灯关闭或者关闭示宽灯打开大灯时，该指示灯自动熄灭。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(880, 3, 1, '机动车仪表板上（如图所示）亮表示发动机可能机油量不足。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291u3fj9nj.jpg', 1, 0, 1, 0, '油壶壶嘴滴油，表示发动机机油压力过低，可能是机油不足引起的。题中描述错误。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(881, 3, 1, '机动车仪表板上（如图所示）亮表示发动机可能机油压力过高。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291u41h2bj.jpg', 1, 0, 1, 0, '油壶壶嘴滴油，表示发动机机油压力过低，可能是机油不足引起的。题中描述错误。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(885, 3, 1, '机动车仪表板上（如图所示）亮，表示驻车制动器操纵杆可能没松到底。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291u6j8qej.jpg', 1, 0, 1, 0, '这个中间是个&ldquo;！&rdquo;的，且字中间是红色的表示制动系统出现异常；这个中间要是个&ldquo;P&rdquo;的，表示驻车制动器制动状态。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(886, 3, 1, '机动车仪表板上（如图所示）亮，表示行车制动系统可能出现故障。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291u7atl6j.jpg', 1, 0, 1, 0, '动报警灯是驻车制动器及系统故障指示灯。驻车制动器操纵杆拉起时，指示灯亮，颜色为红色；松开后，指示灯熄灭。行车途中该灯亮起，表示制动系统出了问题或故障。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(887, 3, 1, '机动车仪表板上（如图所示）亮时，不影响正常行驶。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291u7u5sgj.jpg', 1, 0, 1, 0, '动报警灯是驻车制动器及系统故障指示灯。驻车制动器操纵杆拉起时，指示灯亮，颜色为红色；松开后，指示灯熄灭。行车途中该灯亮起，表示制动系统出了问题或故障。不能上路。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(888, 3, 1, '机动车仪表板上（如图所示）亮时，防抱死制动系统处于打开状态。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291u8fthsj.jpg', 1, 0, 1, 0, '此图为防抱死制动系统发生故障。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(889, 3, 1, '机动车仪表板上（如图所示）亮时，表示驻车制动器处于制动状态。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291u97idjj.jpg', 1, 0, 1, 0, '驻车制动器通常是指机动车辆安装的手动刹车，简称手刹，在车辆停稳后用于稳定车辆，避免车辆在斜坡路面停车时由于溜车造成事故。此标志表示处于制动状态。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(891, 3, 1, '机动车仪表板上（如图所示）亮时，提醒发动机需要补充机油。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291uagxg8j.jpg', 1, 0, 1, 0, '燃油箱油量达到最低液面，此标志亮起，需要及时补充燃油。不是机油不足，是汽油不足。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(893, 3, 1, '机动车仪表板上（如图所示）亮时，提醒发动机冷却液可能不足。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291ubnj4xj.jpg', 1, 0, 1, 0, '此标志亮起说明发动机水温过高，可能是冷却液不足引起的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(894, 3, 1, '机动车仪表板上（如图所示）亮时提醒发动机需要加注机油。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291uca1yaj.jpg', 1, 0, 1, 0, '此标志亮起说明发动机水温过高，可能是冷却液不足引起的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(897, 3, 1, '开启前照灯远光时仪表板上（如图所示）亮起。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291ueiboxj.jpg', 1, 0, 1, 0, '远光灯的灯光走向是直的。近光灯的灯光走向是朝下的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(898, 3, 1, '开启前照灯近光时仪表板上（如图所示）亮起。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291uf7mm6j.jpg', 1, 0, 1, 0, '近光灯光线向下（表示灯光照地）；远光灯是直线（表示照向远方）；雾灯是斜线被曲线遮挡（表示光束被雾气遮挡）。光束向左表示前灯；向右则表示后灯。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(900, 3, 1, '机动车仪表板上（如图所示）亮时，提醒驾驶人座椅没调整好。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291ugiuwzj.jpg', 1, 0, 1, 0, '此为提醒用户没有系安全带。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(901, 3, 1, '机动车仪表板上（如图所示）亮时，提醒驾驶人安全带插头未插入锁扣。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291uh23ibj.jpg', 1, 0, 1, 0, '此为提醒用户没有系安全带。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(904, 3, 1, '机动车发生故障时，（如图所示）闪烁。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291uioiamj.jpg', 1, 0, 1, 0, '题上说的是机动车发生故障闪烁，也就是机动车自身的报警指示灯。此灯是机动车发生故障以后，人为开启的警示灯。所以本题&ldquo;错误&rdquo;。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(905, 3, 1, '开启危险报警闪光灯时，（如图所示）闪烁。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291ujf8xtj.jpg', 1, 0, 1, 0, '危险报警闪光灯，通常称为“双蹦”（红三角里有个！的标志按扭开关，俗称双闪灯或双跳灯），是一种提醒其他车辆与行人注意本车发生了特殊情况的信号灯。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(908, 3, 1, '打开左转向灯开关，（如图所示）亮起。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291ul502qj.jpg', 1, 0, 1, 0, '该指示灯是右转向指示灯。通常为熄灭状态。当车主点亮转向灯时，该指示灯会同时点亮右转向指示灯，转向灯熄灭后，该指示灯自动熄灭。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(909, 3, 1, '打开右转向灯开关，（如图所示）亮起。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291ulp7fzj.jpg', 1, 0, 1, 0, '该指示灯是左转向指示灯。通常为熄灭状态。当车主点亮转向灯时，该指示灯会同时点亮左转向指示灯，转向灯熄灭后，该指示灯自动熄灭。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(927, 3, 1, '机动车仪表板上（如图所示）亮，提示发电机向蓄电池充电。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291uz2hipj.jpg', 1, 0, 1, 0, '提示发电机不向蓄电池充电了，充电系统有故障了！', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(928, 3, 1, '机动车仪表板上（如图所示)亮，提示两侧车门未关闭。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291uzl1slj.jpg', 1, 0, 1, 0, '很明显俩侧的车门都没关闭', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(929, 3, 1, '机动车仪表板上（如图所示）亮，提示左侧车门未关闭。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291v0axj0j.jpg', 1, 0, 1, 0, '很明显是右侧门没关好。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(930, 3, 1, '机动车仪表板上（如图所示）亮，提示右侧车门未关闭。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291v10kbvj.jpg', 1, 0, 1, 0, '很明显是左侧门没关好。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(931, 3, 1, '机动车仪表板上（如图所示）亮，提示行李舱开启。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291v1je6gj.jpg', 1, 0, 1, 0, '前盖为发动机舱，后边为行李舱。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(932, 3, 1, '机动车仪表板上（如图所示）亮，提示发动机舱开启。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291v2afsuj.jpg', 1, 0, 1, 0, '前盖为发动机舱，后边为行李舱。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(933, 3, 1, '机动车仪表板上（如图所示）一直亮，表示安全气囊处于工作状态。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291v2vx2bj.jpg', 1, 0, 1, 0, '此图表示安全气囊现在处于故障状态。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(934, 3, 1, '机动车仪表板上（如图所示）亮表示启用地板及前风窗玻璃吹风。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291v3fyxgj.jpg', 1, 0, 1, 0, '大箭头表示吹的是脚底板，那个曲线上升的表示是吹的前风窗。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(935, 3, 1, '机动车仪表板上（如图所示）一直亮，表示发动机控制系统故障。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291v46qluj.jpg', 1, 0, 1, 0, '发动机控制系统故障，此标志亮起。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(936, 3, 1, '这种握转向盘的动作是正确的。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291v59l7xj.jpg', 1, 0, 1, 0, '正确的握法是握住方向盘的两边，题中的握法是驾驶的陋习，是有很大的风险的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(943, 3, 1, '将点火开关转到ACC位置起动机工作。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291vcb5ugj.jpg', 1, 0, 1, 0, '点火锁开关档位设置方式。其含义是：LOCK：切断电源，锁定方向盘；ACC：接通附件电源（比如收音机等附件）ON：接通除起动机外的全车全部电源；START：接通起动机电源，起动发动机。（起动后松手钥匙，会自动弹回ON档位）供参考。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(944, 3, 1, '点火开关在ON位置，车用电器不能使用。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291vdca8rj.jpg', 1, 0, 1, 0, '点火锁开关档位设置方式。其含义是：LOCK：切断电源，锁定方向盘；ACC：接通附件电源（比如收音机等附件）ON：接通除起动机外的全车全部电源；START：接通起动机电源，起动发动机。（起动后松手钥匙，会自动弹回ON档位）供参考。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(945, 3, 1, '点火开关在LOCK位置拔出钥匙转向盘会锁住。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291vee0ekj.jpg', 1, 0, 1, 0, 'LOCK的中文意思就是锁，一般从这里拔出钥匙方向盘也会锁死。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(946, 3, 1, '点火开关在START位置起动机起动。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291vfq0vtj.jpg', 1, 0, 1, 0, '点火锁开关档位设置方式。其含义是：LOCK：切断电源，锁定方向盘；ACC：接通附件电源（比如收音机等附件）ON：接通除起动机外的全车全部电源；START：接通起动机电源，起动发动机。（起动后松手钥匙，会自动弹回ON档位）供参考。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(950, 3, 1, '将转向灯开关向上提，左转向灯亮。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291vmniovj.jpg', 1, 0, 1, 0, '转向灯操作：上右下左。吧操作杆看成时钟的摆动一样，把操作杆原始位置看成12点，你就很明白转向灯的操作了。不用死记硬背了。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(951, 3, 1, '将转向灯开关向下拉，右转向灯亮。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291vp0t6vj.jpg', 1, 0, 1, 0, '转向灯操作：上右下左。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(952, 3, 1, '灯光开关旋转到这个位置时，全车灯光点亮。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291vr11hlj.jpg', 1, 0, 1, 0, '此表示不是全车灯亮，而是示廓灯点亮。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(953, 3, 1, '灯光开关在该位置时，前雾灯点亮。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291vsz3c8j.jpg', 1, 0, 1, 0, '图中所示为前雾灯点亮。前雾灯点亮雾在左边是前雾灯，雾在右边是后雾灯。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(954, 3, 1, '灯光开关在该位置时，后雾灯点亮。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291vvu1fkj.jpg', 1, 0, 1, 0, '图中所示为后雾灯点亮。雾在左边是前雾灯，雾在右边是后雾灯。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(958, 3, 1, '按下这个开关，后风窗玻璃除霜器开始工作。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291w307uij.jpg', 1, 0, 1, 0, '这个开关是管前挡风窗户的，下边那个按钮才是管后风窗的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(959, 3, 1, '上下搬动这个开关前风窗玻璃刮水器开始工作。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291w4cnq5j.jpg', 1, 0, 1, 0, '左侧的开关是管灯光的，右侧的开关是管雨刷的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(961, 3, 1, '安全头枕用于在发生追尾事故时保护驾驶人的头部不受伤害。', 0, '', 1, 0, 1, 0, '安全头枕是保护颈椎的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(963, 3, 1, '机动车发生正面碰撞时，安全气囊加上安全带的双重保护才能充分发挥作用。', 0, '', 1, 0, 1, 0, '研究表明，假设气囊加安全带是100%安全的话，安全带的作用是70%，气囊的作用是30%。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(964, 3, 1, '机动车在发生碰撞时，安全带可以减轻驾乘人员伤害。', 0, '', 1, 0, 1, 0, '这个没问题，亲，不要以为安全带是装饰用的哦！', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(967, 3, 1, '机动车紧急制动时，ABS系统在提供最大制动力的同时能使车前轮保持转向能力。', 0, '', 1, 0, 1, 0, 'ABS系统是“防抱死刹车系统”，也就是防止抱死车轮，既然没有抱死轮胎那么就是具有转向能力。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(968, 3, 1, '装有ABS系统的机动车在冰雪路面上会最大限度缩短制动距离。', 0, '', 1, 0, 1, 0, 'ABS是防抱死制动装置。防止侧滑，就是当它发现有轮胎抱死后，会松开刹车。以后再刹再松，直到车停下。肯定增加了制动距离。因此，本题错误。', 0, 0, '', 0, '2', 0, 0, '', '', '');
INSERT INTO `qb_exam_content3` (`id`, `mid`, `fid`, `title`, `ispic`, `picurl`, `uid`, `view`, `status`, `replynum`, `content`, `create_time`, `update_time`, `ip`, `list`, `answer`, `ext_sys`, `ext_id`, `grade`, `kemu`, `step`) VALUES
(969, 3, 1, '驾驶有ABS系统的机动车在紧急制动的同时转向可能会发生侧滑。', 0, '', 1, 0, 1, 0, 'ABS使汽车在紧急刹车时车轮不会抱死，这样就能使汽车在紧急制动时仍能保持较好的方向稳定性。由于四轮防抱死制动系统保留着控制转向的能力，因此，在制动过程中有可能绕过障碍物，避免可能发生的事故。然而，驾驶有ABS系统的机动车在紧急制动的同时转向会发生侧滑。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(970, 3, 1, '安装防抱死制动装置（ABS）的机动车紧急制动时，可用力踏制动踏板。', 0, '', 1, 0, 1, 0, 'ABS技术的出现，就是大大地降低了侧滑，和原地掉头的现象，保证了行驶的安全。如果，你在使用带ABS的车辆，在刹车时的动作，类似不带ABS的车这样轻轻的踩下去，很可能会不能触发ABS系统，也就起不到ABS的作用了，所以，一般就是要求，刹车动作要果断，一脚就踩到底，保证ABS的正确执行。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(971, 3, 1, '安装防抱死制动装置（ABS）的机动车制动时，制动距离会大大缩短，因此不必保持安全车距。', 0, '', 1, 0, 1, 0, '这种错误认识是由于不了解ABS的工作原理导致的。ABS可以兼顾车辆行驶中的最大的纵向制动力和横向抓地力，有效地保证车辆不会发生失控状况，但不是所有配置了ABS的车辆都会缩短制动距离，如冰雪、潮湿路面上的制动距离比车轮抱死时短一些，但在一般路面上的制动距离反而更长。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(996, 3, 1, '大型载客汽车允许牵引总质量700千克以下的挂车。', 0, '', 1, 0, 1, 0, '客车是禁止拖挂车辆的，因为客车的用途是载客，要保证旅客安全为本。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(997, 3, 1, '年龄在60岁以上持有准驾车型为大型客车的驾驶人，应当到驾驶证核发地车辆管理所换领准驾车型为小型汽车或小型自动挡汽车的驾驶证。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第五十条：年龄在60周岁以上的，不得驾驶大型客车、牵引车、城市公交车、中型客车、大型货车、无轨电车和有轨电车；持有大型客车、牵引车、城市公交车、中型客车、大型货车驾驶证的，应当到机动车驾驶证核发地车辆管理所换领准驾车型为小型汽车或者小型自动挡汽车的机动车驾驶证。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(998, 3, 1, '已持有小型汽车驾驶证，申请增加中型客车准驾车型的，应当在申请前最近一个记分周期内没有满分记录。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第十四条：已持有机动车驾驶证，申请增加准驾车型的，应当在本记分周期和申请前最近一个记分周期内没有记满12分记录。申请增加中型客车、牵引车、大型客车准驾车型的，还应当符合下列规定：（一）申请增加中型客车准驾车型的，已取得驾驶城市公交车、大型货车、小型汽车、小型自动挡汽车、低速载货汽车或者三轮汽车准驾车型资格三年以上，并在申请前最近连续三个记分周期内没有记满12分记录。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(999, 3, 1, '在造成人员死亡的交通事故中承担主要责任的，不得申请增加大型客车准驾车型，但可以申请增加中型客车准驾车型。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第十五条：有下列情形之一的，不得申请大型客车、牵引车、中型客车、大型货车准驾车型：（一）发生交通事故造成人员死亡，承担同等以上责任的；（二）醉酒后驾驶机动车的；（三）被吊销或者撤销机动车驾驶证未满十年的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1000, 3, 1, '铰接式客车不得进入高速公路。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第六十七条：行人、非机动车、拖拉机、轮式专用机械车、铰接式客车、全挂拖斗车以及其他设计最高时速低于七十公里的机动车，不得进入高速公路。高速公路限速标志标明的最高时速不得超过一百二十公里。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1001, 3, 1, '营运机动车改为非营运机动车的，机动车所有人不需要向公安机关交通管理部门申请登记。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六条：已注册登记的机动车有下列情形之一的，机动车所有人应当向登记该机动车的公安机关交通管理部门申请变更登记：(五)营运机动车改为非营运机动车或者非营运机动车改为营运机动车的。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1002, 3, 1, '营运机动车在规定检验期限内经安全技术检验合格的，不再重复进行安全技术检验。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第十六条：机动车应当从注册登记之日起，按照下列期限进行安全技术检验：营运机动车在规定检验期限内经安全技术检验合格的，不再重复进行安全技术检验。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1003, 3, 1, '机动车驾驶人在实习期内可以单独驾驶大型营运客车。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第二十二条：机动车驾驶证的有效期为6年，本条例另有规定的除外。机动车驾驶人在实习期内不得驾驶公共汽车、营运客车或者执行任务的警车、消防车、救护车、工程救险车以及载有爆炸物品、易燃易爆化学物品、剧毒或者放射性等危险物品的机动车；驾驶的机动车不得牵引挂车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1004, 3, 1, '载客汽车除车身外部的行李架和内置的行李箱外，不得载货。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第五十四条：机动车载物不得超过机动车行驶证上核定的载质量，装载长度、宽度不得超出车厢，并应当遵守下列规定：载客汽车除车身外部的行李架和内置的行李箱外，不得载货。载客汽车行李架载货，从车顶起高度不得超过0.5米，从地面起高度不得超过4米。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1005, 3, 1, '城市公共汽车不得在站点以外的路段停车上下乘客。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第六十三条：机动车在道路上临时停车，应当遵守下列规定：(六)城市公共汽车不得在站点以外的路段停车上下乘客。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1006, 3, 1, '图中标志的含义是禁止小型客车通行。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291w9j39gj.jpg', 1, 0, 1, 0, '三个窗一个门是大型客车，两个窗一个门是小型客车，本题中的图片是三个窗户，所以是大型客车，应该是禁止大型客车通行。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1007, 3, 1, '为保障乘车人不受伤害，客车驾驶人或乘务员应当向乘客讲解安全门的使用方法。', 0, '', 1, 0, 1, 0, '这样做能够在遇到突发事故时，有序地疏散人群，避免因慌乱造成更大的麻烦，所以本题正确。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1008, 3, 1, '客车在起步前，应检查行李包是否装捆牢固，长、宽、高及重量是否符合规定，可将行李放置在门道或者过道上。', 0, '', 1, 0, 1, 0, '为了安全考虑，不可将行李放置在门道或过道上。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1009, 3, 1, '客车起步、行驶和停车时，应当平稳，避免乘客受伤。', 0, '', 1, 0, 1, 0, '安全第一，避免在起步停车过程中出现意外情况。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1010, 3, 1, '客车在起步前，驾驶人应向乘客强调不要将手、头部以及其他部位伸出窗外。', 0, '', 1, 0, 1, 0, '将头、手伸出窗外，就有可能发生危险，造成不必要的伤害。所以本题正确。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1011, 3, 1, '营运客车起步前，乘务人员应提醒乘客系好安全带。', 0, '', 1, 0, 1, 0, '为了安全，善意的提醒是有必要的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1012, 3, 1, '客车行经转弯、上下坡、凹凸路时，应让乘客抓住车内固定物，尤其提醒后排乘客注意安全。', 0, '', 1, 0, 1, 0, '因为在行经这些路面时，很容易发生颠簸，让人失去平衡。大家都有这样的感觉，坐在后排起伏的幅度较大，很多时候通过颠簸路面时，会有强烈的波动，在这种情况下，若没有做好安全措施，很可能因为惯性等因素发生危险。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1013, 3, 1, '严禁在车辆未停稳或行驶途中开启车门，以防乘客被甩出酿成事故。', 0, '', 1, 0, 1, 0, '这是基本安全常识，一定要牢记。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1014, 3, 1, '客车驾驶人在行车中，应始终保持良好的心理状态，不得带着不良情绪驾驶车辆。', 0, '', 1, 0, 1, 0, '若带着情绪开车，会有安全隐患。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1015, 3, 1, '客运驾驶人日间连续驾驶不得超过4小时，夜间连续驾驶不得超过2小时，每次停车休息时间不少于20分钟。', 0, '', 1, 0, 1, 0, '此题正确，白天是连续不超过4小时，夜间驾驶连续不超过2小时。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1016, 3, 1, '客车在遇险的一刹那，应果断地采取一切有效措施保护乘客不受伤害或少受伤害，要避免车辆发生倾覆。', 0, '', 1, 0, 1, 0, '以人为本，要将伤害和损失尽可能降到最低，因此本题正确。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1017, 3, 1, '驾驶客车遇非常情况或者发生事故时，应力所能及的将损失降到最低限度，决不能因紧急避险造成二次事故或更大的损失。', 0, '', 1, 0, 1, 0, '以人为本，要将伤害和损失尽可能降到最低，因此本题正确。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1018, 3, 1, '驾驶客车在山区、桥梁、高速公路遇紧急情况避险时，应先转动转向盘避让，再使用制动减速。', 0, '', 1, 0, 1, 0, '应先减速再调整方向。贸然转动方向盘避让，车速过快的话很容易造成翻车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1019, 3, 1, '客车遇险后，应设法开启车门、安全门或紧急出口，迅速疏散车上乘客。', 0, '', 1, 0, 1, 0, '客车遇险后，应设法开启车门、安全门或紧急出口，迅速疏散车上乘客。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1020, 3, 1, '客车遇险后，没有安全门的，可用车上配备的铁锤或者其他物品将车窗玻璃敲破，从窗口疏散乘客。', 0, '', 1, 0, 1, 0, '以人为本，要想尽一切办法为乘客创造逃生机会。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1021, 3, 1, '遇紧急情况时，客车的顶窗也可用作疏散乘客的紧急出口。', 0, '', 1, 0, 1, 0, '以人为本，要将伤害和损失尽可能降到最低，因此本题正确。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1022, 3, 1, '驾驶人逃离火灾如果无法开启驾驶室门或车门时，应敲碎前挡风玻璃脱离。', 0, '', 1, 1, 1, 0, '敲前面的玻璃容易进来更多的空气，火会更大。正确的做法是敲碎侧面的玻璃逃离。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1023, 3, 1, '安装乘客安全带的车辆，应要求乘客在起步前按规定使用安全带。', 0, '', 1, 0, 1, 0, '安全第一的原则，因此应该系上安全带。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1024, 3, 1, '持有大型客车、牵引车、城市公交车、中型客车、大型货车驾驶证的驾驶人联系电话、联系地址以及从业单位等信息发生变化的，应当在信息变更后三十日内，向驾驶证核发地车辆管理所备案。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第七十条：机动车驾驶人联系电话、联系地址等信息发生变化，以及持有大型客车、牵引车、城市公交车、中型客车、大型货车驾驶证的驾驶人从业单位等信息发生变化的，应当在信息变更后三十日内，向驾驶证核发地车辆管理所备案。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1025, 3, 1, '持有大型客车、牵引车、城市公交车、中型客车、大型货车驾驶证的驾驶人，在记分周期内有记分的，应当在记分周期结束后三十日内到公安机关交通管理部门接受审验。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第六十条：持有大型客车、牵引车、城市公交车、中型客车、大型货车驾驶证的驾驶人，应当在每个记分周期结束后三十日内到公安机关交通管理部门接受审验。但在一个记分周期内没有记分记录的，免予本记分周期审验。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1063, 3, 1, '图中标志的含义是限制轴重。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291wgdu29j.jpg', 1, 0, 1, 0, '表示禁止总质量超过标志所示数值的车辆通行。此标志设在需要限制车辆质量的桥梁两端。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1064, 3, 1, '图中标志设在禁止运输危险品车辆驶入路段的入口处。', 0, 'http://ww2.sinaimg.cn/mw600/5eb4d75agw1e291whdfc1j.jpg', 1, 0, 1, 0, '首先是禁令标志，其次标志上有火苗的图案，这说明易燃易爆很危险。既然是禁止运输危险品车辆驶入的标志，自然设在禁止运输危险品车辆驶入路段的入口处。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1065, 3, 1, '机动车载运危险化学品，经公安部门批准后，行驶时间、路线可不受限制。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第四十八条：机动车载运爆炸物品、易燃易爆化学物品以及剧毒、放射性等危险物品，应当经公安机关批准后，按指定的时间、路线、速度行驶，悬挂警示标志并采取必要的安全措施。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1066, 3, 1, '禁止货运机动车载客。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第五十条：禁止货运机动车载客。货运机动车需要附载作业人员的，应当设置保护作业人员的安全措施。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1067, 3, 1, '货运机动车需要附载作业人员的，应当设置保护作业人员的安全措施。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第五十条：禁止货运机动车载客。货运机动车需要附载作业人员的，应当设置保护作业人员的安全措施。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1068, 3, 1, '全挂拖斗车不得进入高速公路。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第六十七条：行人、非机动车、拖拉机、轮式专用机械车、铰接式客车、全挂拖斗车以及其他设计最高时速低于七十公里的机动车，不得进入高速公路。高速公路限速标志标明的最高时速不得超过一百二十公里。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1069, 3, 1, '营运机动车在规定检验期限内经安全技术检验合格的，不再重复进行安全技术检验。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第十六条：营运机动车在规定检验期限内经安全技术检验合格的，不再重复进行安全技术检验。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1070, 3, 1, '机动车驾驶人在实习期内不得驾驶载有危险化学品的机动车。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第二十二条：机动车驾驶人在实习期内不得驾驶公共汽车、营运客车或者执行任务的警车、消防车、救护车、工程救险车以及载有爆炸物品、易燃易爆化学物品、剧毒或者放射性等危险物品的机动车；驾驶的机动车不得牵引挂车。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1071, 3, 1, '驾驶人实习期内可以单独驾驶大型客车、电车、起重车、牵引车。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第二十二条：机动车驾驶人在实习期内不得驾驶公共汽车、营运客车或者执行任务的警车、消防车、救护车、工程救险车以及载有爆炸物品、易燃易爆化学物品、剧毒或者放射性等危险物品的机动车；驾驶的机动车不得牵引挂车。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1072, 3, 1, '机动车载物不得超过机动车行驶证上核定的载质量，装载长度、宽度超出车厢不得超过1米。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第五十四条：机动车载物不得超过机动车行驶证上核定的载质量，装载长度、宽度不得超出车厢。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1073, 3, 1, '挂车车厢内在留有安全位置的情况下，可以附载临时作业人员1人至5人。', 0, '', 1, 0, 1, 0, '此题错误。&ldquo;货车车厢内在留有安全位置的情况下，可以附载临时作业人员1人至5人。&rdquo;是对的。一字之差，&ldquo;挂&rdquo;与&ldquo;货&rdquo;。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1074, 3, 1, '在高速公路上行驶的载货汽车车厢内不得载人。', 0, '', 1, 0, 1, 0, '《道路交通安全法实施条例》第八十三条：在高速公路上行驶的载货汽车车厢不得载人。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1075, 3, 1, '货运机动车装载超过核定质量的，公安机关交通管理部门应当扣留机动车，直至消除违法状态。', 0, '', 1, 0, 1, 0, '《道路交通安全法》第九十二条：公路客运车辆载客超过额定乘员的，处200元以上500元以下的罚款；超过额定乘员20%或者违反规定载货的，处500元以上2000元以下的罚款。货运机动车超过核定载质量的，处200元以上500元以下罚款；超过核定载质量30%或者违反规定载客的，处500元以上2000元以下罚款。有前两款行为的，由公安机关交通管理部门扣留机动车至违法状态消除。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1076, 3, 1, '已持有大型货车驾驶证5年以上，并在申请前最近连续3个记分周期内没有满分记录，可以申请增加大型客车准驾车型。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第十四条：申请增加大型客车准驾车型的，已取得驾驶中型客车或者大型货车准驾车型资格五年以上，或者取得驾驶牵引车准驾车型资格二年以上，并在申请前最近连续五个记分周期内没有记满12分记录。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1077, 3, 1, '已持有大型货车驾驶证3年以上，并在申请前最近连续3个记分周期内没有满分记录，可以申请增加牵引车准驾车型。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第十四条：（二）申请增加牵引车准驾车型的，已取得驾驶中型客车或者大型货车准驾车型资格三年以上，或者取得驾驶大型客车准驾车型资格一年以上，并在申请前最近连续三个记分周期内没有记满12分记录。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1078, 3, 1, '年龄在60岁以上持有准驾车型为大型货车的驾驶人，应当到驾驶证核发地车辆管理所换领准驾车型为小型汽车或小型自动挡汽车的驾驶证。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第五十条：年龄在60周岁以上的，不得驾驶大型客车、牵引车、城市公交车、中型客车、大型货车、无轨电车和有轨电车；持有大型客车、牵引车、城市公交车、中型客车、大型货车驾驶证的，应当到机动车驾驶证核发地车辆管理所换领准驾车型为小型汽车或者小型自动挡汽车的机动车驾驶证。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1079, 3, 1, '牵引车拖带挂车时，挂车必须装有有效的制动装置。', 0, '', 1, 0, 1, 0, '从安全角度出发，避免在发生事故时，挂车因为没有制动装置而造成更大的损失和伤害。有了制动装置，挂车就能在发生危险的第一时间采取制动措施，避免发生危险。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1080, 3, 1, '半挂车倒车时转向盘转动方向与单车倒车方向相反。', 0, '', 1, 0, 1, 0, '半挂车特点：本身无动力，与主车共同承载，依靠主车牵引行驶的车辆。半挂车倒车时转向盘转动方向与单车倒车方向相反。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1081, 3, 1, '全挂车倒车时转向盘转动方向与单车倒车方向相反。', 0, '', 1, 0, 1, 0, '全挂跟半挂不同的是，因为全挂的车箱是和车头一起的。而半挂的车头和车箱是分离的，所以全挂倒车是跟单车一样的转向盘转动方向与单车倒车方向相同。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1082, 3, 1, '汽车列车转直角弯时，需先判断弯道情况，减速或停车后重新起步，缓慢通过。', 0, '', 1, 0, 1, 0, '遵循&ldquo;一停二看三通过&rdquo;的原则，安全第一。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1083, 3, 1, '汽车列车的车身越长，转弯半径越小。', 0, '', 1, 0, 1, 0, '最小转弯时汽车方向盘打到头，以较低速度稳定行驶时，汽车外侧车轮轨迹的半径，不考虑其他因素的影响。最小转弯半径R=L/sina。L为轴距，a为转向角，显然L越大，R越大。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1084, 3, 1, '汽车装载的货物越高，转弯时稳定性越差。', 0, '', 1, 0, 1, 0, '汽车列车车身越长转弯半径越大，车身越高稳定性越差。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1085, 3, 1, '汽车列车在转弯过程中，要注意提前做好让车准备。', 0, '', 1, 0, 1, 0, '由于汽车列车较长，因此在转弯时不可避免会用到其他车道，转弯时一定要注意避开对向车道的车辆，并要随时做好让车准备，便于在对向有来车时不造成道路拥堵。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1086, 3, 1, '全挂列车倒车，要避免牵引车与挂车形成较大的角度。', 0, '', 1, 0, 1, 0, '小角度不但不容易遇见到可能发生的状况，同时由于角度小，稳定性不佳。', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1087, 3, 1, '车辆下长坡过程中，遇制动鼓温度过高时，不要立即进入冷水中冷却，以免造成制动鼓损坏。', 0, '', 1, 0, 1, 0, '根据热胀冷缩原理，制动鼓会裂开的，再就是制动鼓过热速冷退火，强度大大下降。因此不能立即进入水中冷却。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1088, 3, 1, '持有大型客车、牵引车、城市公交车、中型客车、大型货车驾驶证的驾驶人，应当在联系电话、联系地址以及从业单位等信息发生变化的，应当在信息变更后三十日内，向驾驶证核发地车辆管理所备案。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第七十条：机动车驾驶人联系电话、联系地址等信息发生变化，以及持有大型客车、牵引车、城市公交车、中型客车、大型货车驾驶证的驾驶人从业单位等信息发生变化的，应当在信息变更后三十日内，向驾驶证核发地车辆管理所备案。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1089, 3, 1, '持有大型客车、牵引车、城市公交车、中型客车、大型货车驾驶证的驾驶人，在记分周期内有记分的，应当在记分周期结束后三十日内到公安机关交通管理部门接受审验。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第六十条：持有大型客车、牵引车、城市公交车、中型客车、大型货车驾驶证的驾驶人，应当在每个记分周期结束后三十日内到公安机关交通管理部门接受审验。但在一个记分周期内没有记分记录的，免予本记分周期审验。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1090, 3, 1, '持有大型货车驾驶证的驾驶人在一个记分周期内有记满12分记录的，车辆管理所应当注销其最高准驾车型驾驶资格。', 0, '', 1, 0, 1, 0, '《公安部令第123号》第六十八条：持有大型客车、牵引车、城市公交车、中型客车、大型货车驾驶证的驾驶人有下列情形之一的，车辆管理所应当注销其最高准驾车型驾驶资格，并通知机动车驾驶人在三十日内办理降级换证业务：（一）发生交通事故造成人员死亡，承担同等以上责任，未构成犯罪的；（二）在一个记分周期内有记满12分记录的；（三）连续三个记分周期不参加审验的。', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1110, 3, 1, '轮式专用机械车掉头时，最高行驶速度不得超过每小时15公里。', 0, '', 1, 0, 1, 0, '', 0, 0, '', 0, '1', 0, 0, '', '', ''),
(1111, 3, 1, '轮式专用机械车转弯时，最高行驶速度不得超过每小时20公里。', 0, '', 1, 0, 1, 0, '', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1112, 3, 1, '轮式专用机械车下陡坡时，最高行驶速度不得超过每小时30公里。', 0, '', 1, 0, 1, 0, '', 0, 0, '', 0, '2', 0, 0, '', '', ''),
(1113, 3, 1, '轮式专用机械车遇雾天气时，最高行驶速度不得超过每小时15公里。', 0, '', 1, 0, 1, 0, '', 0, 0, '', 0, '1', 0, 0, '', '', ''),
